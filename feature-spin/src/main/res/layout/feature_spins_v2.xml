<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spins_bg"
    style="@style/SpinCommonTheme">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spiralBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:scaleType="center"
        app:srcCompat="@drawable/spark"
        />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="back" />

    <LinearLayout
        android:id="@+id/actionBarEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/winings_stats_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/backArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrow">

        <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
            android:id="@+id/tvTotalSpins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:lineHeight="24sp"
            android:textFontWeight="400"
            android:textColor="#D9B4E7" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTotalSpin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="7dp"
            android:contentDescription="icon_top" />

        <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
            android:id="@+id/totalSpins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textSize="14sp"
            android:textFontWeight="600"
            android:lineHeight="@dimen/dimen_24dp"
            android:textColor="#D9B4E7" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/actionBarDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="backArrow, actionBarEnd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvSpinToWin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBarEnd" />

    <LinearLayout
        android:id="@+id/llSpinOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:padding="6dp"
        android:maxHeight="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible"
        tools:visibility="visible"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@id/tvSpinToWin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spinOverLeftDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="0.5" />
        <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
            android:id="@+id/txSpinOverText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_22dp"
            android:layout_weight="2"
            app:lineHeight="@dimen/dimen_17sp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:textColor="#F2D3FF"
            android:textAlignment="center"
            android:text="Your daily spins are over!"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spinOverRightDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/spinToWinAndLLSpinOverSepretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvSpinToWin, llSpinOver" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWinningBase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:translationY="80dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintBottom_toTopOf="@id/spinWheelDisk"
        app:layout_constraintEnd_toEndOf="@id/spinWheelDisk"
        app:layout_constraintStart_toStartOf="@id/spinWheelDisk"
        app:srcCompat="@drawable/winnings_base" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/total_winning_dialer_bg"
        android:gravity="center"
        android:translationY="50dp"
        app:layout_constraintVertical_bias="1"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:elevation="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/spinWheelDisk"
        app:layout_constraintEnd_toEndOf="@+id/ivWinningBase"
        app:layout_constraintStart_toStartOf="@+id/ivWinningBase">
        <TextView
            android:id="@+id/tvTotalWinning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Winnings"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.jar.app.feature_spin.impl.custom.component.TotalWinningsCounter
            android:id="@+id/dialer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spinBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:src="@drawable/active_piller_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".33"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toStartOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/btnUseWinning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:shimmer_auto_start="true"
        app:shimmer_repeat_count="-1"
        android:translationY="35dp"
        app:layout_constraintTop_toBottomOf="@id/spinWheelBg"
        app:layout_constraintBottom_toTopOf="@+id/tvSpinsLeftValue"
        app:layout_constraintEnd_toEndOf="@+id/spinBottom"
        app:layout_constraintStart_toStartOf="@+id/spinBottom" >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUseWinningTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"
            android:background="@drawable/cta_use_winnings" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
        android:id="@+id/tvComeTomorrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_come_tomorrow"
        android:padding="10dp"
        tools:text="Come back tomorrow! "
        android:textAlignment="center"
        android:textFontWeight="700"
        android:gravity="center"
        android:lineHeight="@dimen/dimen_15dp"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvSpinsLeftValue"
        app:layout_constraintEnd_toEndOf="@+id/btnUseWinning"
        app:layout_constraintStart_toStartOf="@+id/btnUseWinning" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSpinsLeftValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/remaining_spin_bg"
        android:gravity="center"
        tools:text="@string/remaining_spins"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_10dp"
        app:lineHeight="@dimen/dimen_20dp"
        android:textFontWeight="600"
        android:textSize="@dimen/dimen_16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvSpinsLeft"
        app:layout_constraintEnd_toEndOf="@+id/spinBottom"
        app:layout_constraintStart_toStartOf="@+id/spinBottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSpinsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp"
        app:lineHeight="@dimen/dimen_15sp"
        android:textFontWeight="500"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@id/spinBottom"
        app:layout_constraintEnd_toEndOf="@+id/spinBottom"
        app:layout_constraintStart_toStartOf="@+id/spinBottom" />

    <FrameLayout
        android:id="@+id/activeDropContainer"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/active_drop_down_bg"
        app:layout_constraintBottom_toTopOf="@+id/tvSpinsLeftValue"
        app:layout_constraintEnd_toEndOf="@id/spinBottom"
        app:layout_constraintStart_toStartOf="@id/spinBottom"
        app:layout_constraintTop_toTopOf="@id/spinBottom">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/activeDropDown"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/arrow" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activeCoinBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="5dp"
        tools:visibility="visible"
        android:src="@drawable/active_coin_button"
        app:layout_constraintStart_toStartOf="@id/activeDropContainer"
        app:layout_constraintTop_toTopOf="@id/activeDropContainer" />

    <FrameLayout
        android:id="@+id/flalertActiveCoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:elevation="5dp"
        android:paddingBottom="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activeDropContainer"
        app:layout_constraintStart_toStartOf="@id/activeDropContainer"
        app:layout_constraintTop_toTopOf="@id/activeDropContainer">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/alertActiveCoinBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/nudge" />
    </FrameLayout>

    <com.jar.app.feature_spin.impl.custom.component.outerRing.DoubleCircleLayout
        android:id="@+id/spinWheelBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:translationY="50dp"
        app:layout_constraintHeight_percent=".45"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinBottom"
        />

    <com.jar.app.feature_spin.impl.custom.component.SpinWheel
        android:id="@+id/spinWheelDisk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:layout_margin="22dp"
        android:translationY="50dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/spinWheelBg"
        app:layout_constraintEnd_toEndOf="@id/spinWheelBg"
        app:layout_constraintTop_toTopOf="@id/spinWheelBg"
        app:layout_constraintBottom_toBottomOf="@id/spinWheelBg"/>


    <RelativeLayout
        android:id="@+id/rlTotalWinning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:gravity="center"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_margin="22dp"
        android:translationY="50dp"
        app:layout_constraintStart_toStartOf="@id/spinWheelBg"
        app:layout_constraintEnd_toEndOf="@id/spinWheelBg"
        app:layout_constraintTop_toTopOf="@id/spinWheelBg"
        app:layout_constraintBottom_toBottomOf="@id/spinWheelBg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            app:srcCompat="@drawable/ic_todays_winning"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTodaysWinning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Today's winning"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimen_12sp"
                app:lineHeight="@dimen/dimen_15sp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTodaysWining"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"/>
                <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
                    android:id="@+id/tvTodaysWinningValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textFontWeight="600"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#FFC87D"
                    android:lineSpacingExtra="5sp"
                    android:translationY="2.5sp"
                    android:textSize="35sp"
                    android:letterSpacing="-0.02"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/openUpWinning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_margin="22dp"
        android:translationY="50dp"
        android:scaleY="0"
        android:scaleX="0"
        app:srcCompat="@drawable/open_up_winning"
        android:visibility="invisible"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/spinWheelBg"
        app:layout_constraintEnd_toEndOf="@id/spinWheelBg"
        app:layout_constraintTop_toTopOf="@id/spinWheelBg"
        app:layout_constraintBottom_toBottomOf="@id/spinWheelBg">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/openUpWinningDrawable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/open_up_winning"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="3">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvYouGot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:lineHeight="17sp"
                android:layout_weight="1.25"
                tools:text="You won" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivWinningIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:gravity="center"
                tools:srcCompat="@drawable/amount_winning"/>

            <com.jar.app.feature_spin.impl.custom.component.AutoScalingTextView2
                android:id="@+id/tvWinningAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:letterSpacing="-0.02"
                android:textColor="#FFC87D"
                android:lineSpacingExtra="5sp"
                android:gravity="center"
                android:layout_weight="0.4"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWinnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1.25"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:textAlignment="viewStart"
                android:text="Winnings" />
        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wheelPoint"
        android:layout_width="40dp"
        android:layout_height="@dimen/dimen_50dp"
        android:elevation="3dp"
        android:translationY="50dp"
        android:src="@drawable/ic_wheel_center"
        app:layout_constraintBottom_toBottomOf="@id/spinWheelDisk"
        app:layout_constraintEnd_toEndOf="@+id/spinWheelDisk"
        app:layout_constraintStart_toStartOf="@+id/spinWheelDisk"
        app:layout_constraintTop_toTopOf="@+id/spinWheelDisk" />
    
</androidx.constraintlayout.widget.ConstraintLayout>