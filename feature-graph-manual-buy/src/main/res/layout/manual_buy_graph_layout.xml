<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/graphView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved via Manual Buy"
        android:textAlignment="center"
        android:textColor="#D5CDF2"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="750"
        android:textColor="#EEEAFF"
        android:lineHeight="266sp"
        android:textSize="@dimen/dimen_18sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintEnd_toEndOf="@+id/graphView"
        app:layout_constraintStart_toStartOf="@+id/graphView"
        app:layout_constraintTop_toBottomOf="@+id/graphView" />

    <View
        android:id="@+id/graphMidLine"
        android:layout_width="2dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/feature_manual_buy_graph_dashed_line"
        app:layout_constraintBottom_toBottomOf="@+id/graphDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lineChart" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmount" />

    <com.jar.app.core_ui.widget.CustomGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:drawHorizontal="true"
        app:drawVertical="false"
        app:gridColor="#08FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/lineChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lineChart"
        app:gridHeight="75" />



    <View
        android:id="@+id/graphDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#686474"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D5CDF2"
        android:textSize="10sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphDivider"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMidDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D5CDF2"
        android:textSize="10sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/graphDivider"
        app:layout_constraintEnd_toStartOf="@+id/tvEndDate"
        app:layout_constraintStart_toEndOf="@+id/tvStartDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D5CDF2"
        android:textSize="10sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphDivider"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expectedTextSeprator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleY="2"
        android:scaleX="2"
        app:srcCompat="@drawable/horizontal_divider"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEndDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExpectedGrowth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Growth"
        android:lineSpacingExtra="2sp"
        android:textSize="12sp"
        android:textColor="#D5CDF2"
        android:fontFamily="@font/inter"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expectedTextSeprator" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMinAndMaxGrowth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹770-₹790"
        android:lineSpacingExtra="2sp"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="#1EA787"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="@id/tvExpectedGrowth"
        app:layout_constraintEnd_toEndOf="@id/tvExpectedGrowth"
        app:layout_constraintTop_toBottomOf="@id/tvExpectedGrowth"
        />
</androidx.constraintlayout.widget.ConstraintLayout>