<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_8ba6c1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4sp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:text="Quick Actions"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="30dp"
        android:translationY="-2.11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <View
        android:id="@+id/quickActionBackground"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTextView"
        android:background="@drawable/help_bg"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/quickActionHelpIcon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        app:layout_constraintBottom_toBottomOf="@+id/quickActionBackground"
        app:layout_constraintStart_toStartOf="@id/quickActionBackground"
        app:layout_constraintTop_toTopOf="@+id/quickActionBackground"
        app:srcCompat="@drawable/chat_support__obsolete_" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quickActionHelpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:lineSpacingExtra="3sp"
        android:layout_marginStart="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/quickActionBackground"
        app:layout_constraintStart_toEndOf="@+id/quickActionHelpIcon"
        app:layout_constraintTop_toTopOf="@+id/quickActionBackground" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/quickActionForwardIcon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/quickActionBackground"
        app:layout_constraintEnd_toEndOf="@+id/quickActionBackground"
        app:layout_constraintTop_toTopOf="@+id/quickActionBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>