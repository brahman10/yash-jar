<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/calculationRoundOffLottie"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="24dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetectingSpends"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp"
        android:gravity="center"
        android:background="@drawable/rounded_black_bg_10dp"
        android:textColor="@color/color_EEEAFF"
        android:text="@string/feature_round_off_detecting_spends_calculating_round_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculationRoundOffLottie" />
</androidx.constraintlayout.widget.ConstraintLayout>