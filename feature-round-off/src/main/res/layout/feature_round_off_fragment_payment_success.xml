<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbarThumbVertical="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCelebration"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            tools:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successLottie"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
            app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
            app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
            app:layout_constraintTop_toTopOf="@id/clSuccessContainer"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <View
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            android:translationZ="1dp"
            app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
            app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
            app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
            app:layout_constraintTop_toTopOf="@id/clSuccessContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSuccessContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="90dp"
            android:background="@drawable/rounded_black_bg_10dp"
            android:backgroundTint="@color/color_3C3357"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSuccessTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="90dp"
                android:gravity="center"
                android:text="@string/feature_round_off_yay_manual_round_off_activated"
                android:textColor="@color/color_1EA787"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:gravity="center"
                android:text="@string/feature_round_off_first_payment_of_x_successful"
                android:textColor="@color/white"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSuccessTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:lineHeight="20sp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/feature_round_off_you_can_now_save_through"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/round_black_bg_16dp"
                android:backgroundTint="@color/color_352F4F"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                tools:itemCount="3"
                tools:listitem="@layout/core_ui_cell_label_and_value" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDownloadInvoice"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/core_ui_download_invoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvDetails" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="-10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:id="@+id/dottedLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/core_ui_dotted_line"
                android:elevation="9dp"
                android:translationZ="9dp"
                app:layout_constraintBottom_toTopOf="@id/tvTransactionIdLabel"
                app:layout_constraintTop_toBottomOf="@id/tvDownloadInvoice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionIdLabel"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="28dp"
                android:text="@string/feature_round_off_transaction_id"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dottedLine" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionId"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="28dp"
                android:drawablePadding="4dp"
                app:drawableEndCompat="@drawable/ic_copy_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dottedLine"
                tools:text="........6765768" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAutomateRoundOffContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/round_black_bg_16dp"
            android:backgroundTint="@color/color_3C3357"
            app:layout_constraintTop_toBottomOf="@id/clSuccessContainer">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAutomateRoundOff"
                style="@style/BigTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="@string/feature_round_off_automate_round_offs"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmountDeducted"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="58dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="@string/feature_round_off_amount_detected_will_be_automatically_saved_in_gold"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAutomateRoundOff" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnAutomateNow"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:visibility="visible"
                app:buttonText="@string/feature_round_off_automate_now"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAmountDeducted" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnGoToHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="18dp"
            android:visibility="visible"
            app:buttonEndColor="@color/bgColor"
            app:buttonStartColor="@color/bgColor"
            app:buttonText="@string/core_ui_go_to_homepage"
            app:buttonType="secondaryHollowButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clAutomateRoundOffContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>