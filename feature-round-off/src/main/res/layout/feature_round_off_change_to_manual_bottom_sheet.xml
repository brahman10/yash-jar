<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:paddingBottom="40dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/feature_round_off_switching_to_manual_people_save_2x"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnDisableAutoSave"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="44dp"
        app:buttonText="@string/feature_round_off_disable_auto_save"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnCancel"
        style="@style/SmallTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:buttonEndColor="@color/lightBgColor"
        app:buttonStartColor="@color/lightBgColor"
        app:buttonText="@string/core_ui_cancel"
        app:buttonType="secondaryHollowButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDisableAutoSave" />
</androidx.constraintlayout.widget.ConstraintLayout>