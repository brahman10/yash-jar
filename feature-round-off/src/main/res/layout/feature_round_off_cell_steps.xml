<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topLine"
        android:layout_width="1dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toTopOf="@id/dashedCircleView"
        app:layout_constraintEnd_toEndOf="@id/dashedCircleView"
        app:layout_constraintStart_toStartOf="@id/dashedCircleView"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dashedCircleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_round_off_dotted_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomLine"
        android:layout_width="1dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dashedCircleView"
        app:layout_constraintStart_toStartOf="@id/dashedCircleView"
        app:layout_constraintTop_toBottomOf="@id/dashedCircleView"
        android:background="@color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumber"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/dashedCircleView"
        app:layout_constraintEnd_toEndOf="@id/dashedCircleView"
        app:layout_constraintStart_toStartOf="@id/dashedCircleView"
        app:layout_constraintTop_toTopOf="@id/dashedCircleView"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:gravity="start"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/dashedCircleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dashedCircleView"
        app:layout_constraintTop_toTopOf="@id/dashedCircleView"
        tools:text="You give permission to save" />
</androidx.constraintlayout.widget.ConstraintLayout>