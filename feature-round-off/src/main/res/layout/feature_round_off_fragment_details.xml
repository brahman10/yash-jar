<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolBar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/btnRoundOffPrimaryAction"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRootContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnRoundOffPrimaryAction"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPauseContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_43353B"
                android:paddingHorizontal="40dp"
                android:paddingVertical="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRoundOffIsPausedFor"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_EBB46A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Round-offs paused for 4 days" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAutoResumingIn"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRoundOffIsPausedFor"
                    tools:text="Auto Resuming on: 22 Octâ€™22 " />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSetupDetails"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="30dp"
                android:text="@string/feature_round_off_setup_details"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clPauseContainer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPauseOrActive"
                style="@style/SmallBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/round_black_bg_4dp"
                android:backgroundTint="@color/color_EBB46A_10"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textAllCaps="false"
                android:textColor="@color/color_EBB46A"
                app:layout_constraintBottom_toBottomOf="@id/tvSetupDetails"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/core_ui_pause" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoundOffSetupDate"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSetupDetails"
                tools:text="@string/feature_round_off_was_setup_on" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoundOffSetupDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:background="@drawable/round_black_bg_16dp"
                android:backgroundTint="@color/color_2E2942"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvRoundOffSetupDate"
                tools:itemCount="4"
                tools:listitem="@layout/core_ui_cell_label_and_value" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupInvest10"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvSave10,switchInvest10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSave10"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="50dp"
                android:text="@string/feature_round_off_save_10_if_no_spends_detected"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/switchInvest10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvRoundOffSetupDetails" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchInvest10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:scaleX="1"
                android:scaleY="1"
                android:textOff="@string/core_ui_off"
                android:textOn="@string/core_ui_on"
                android:textSize="8sp"
                android:thumb="@drawable/feature_round_off_bg_selector_switch_thumb"
                app:layout_constraintBottom_toBottomOf="@id/tvSave10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSave10"
                app:track="@drawable/feature_round_off_bg_selector_switch" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/core_ui_line_separator"
                app:layout_constraintTop_toBottomOf="@id/tvSave10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPaymentMethod"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp"
                android:text="@string/feature_round_off_payment_method"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAutoSaveDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPaymentMethod">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivAutoSaveRadio"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    app:drawableStartCompat="@drawable/core_ui_bg_radio_selector"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAutoSaveLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvAutoSaveLabel" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAutoSaveLabel"
                    style="@style/CommonBoldTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/core_ui_auto_save"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/ivAutoSaveRadio"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMoneyWillBeDebited"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/feature_round_off_money_will_be_debited_automatically"
                    android:textColor="@color/color_ACA1D3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvAutoSaveLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvAutoSaveLabel" />

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/autoSaveExpandView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="16dp"
                    android:paddingVertical="8dp"
                    app:el_expanded="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvAutoSaveLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvMoneyWillBeDebited"
                    tools:el_expanded="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAutoSaveDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/core_ui_bg_rounded_outline_776e94_8dp"
                        android:paddingVertical="8dp"
                        tools:itemCount="3"
                        tools:listitem="@layout/core_ui_cell_label_and_value" />
                </net.cachapa.expandablelayout.ExpandableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clManualDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clAutoSaveDetailsContainer">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivManualRadio"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    app:drawableStartCompat="@drawable/core_ui_bg_radio_selector"
                    app:layout_constraintBottom_toBottomOf="@+id/tvManualLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvManualLabel" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvManualLabel"
                    style="@style/CommonBoldTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/feature_round_off_manual"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/ivManualRadio"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvYouWillBeMakingPaymentYourself"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/feature_round_off_you_will_be_making_payment_youself"
                    android:textColor="@color/color_ACA1D3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvManualLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvManualLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnRoundOffPrimaryAction"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="22dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnRoundOffSecondaryAction"
        app:layout_constraintHeight_min="54dp"
        tools:buttonText="@string/feature_round_off_resume_now"
        tools:visibility="visible" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnRoundOffSecondaryAction"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="22dp"
        app:buttonEndColor="@color/bgColor"
        app:buttonStartColor="@color/bgColor"
        app:buttonType="secondaryHollowButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="54dp"
        tools:buttonText="@string/feature_round_off_stop_round_off" />
</androidx.constraintlayout.widget.ConstraintLayout>