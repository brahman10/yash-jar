<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnProceed"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRoundOffDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRoundOffContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@drawable/feature_round_off_bg_rounded_outline_3c3357_8dp"
                android:padding="@dimen/dimen_1dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCalculatedAmountContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/feature_round_off_bg_rounded_outline_top_8dp_1ea787"
                    android:padding="@dimen/dimen_16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCalculateRoundOff"
                        style="@style/BigTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_round_off_calculated_from_recent_payments"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRoundOffValue"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="$2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPaymentNumberContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_302749"
                    app:layout_constraintTop_toBottomOf="@id/clCalculatedAmountContainer">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNumberOfPayment"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_14dp"
                        android:layout_marginVertical="11dp"
                        android:text="@string/feature_round_off_x_payments"
                        android:textColor="@color/color_ACA1D3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCalculateRoundOffs"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_14dp"
                        android:layout_marginVertical="11dp"
                        android:text="@string/feature_round_off_calculated_round_offs"
                        android:textColor="@color/color_ACA1D3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/color_3c3357"
                    app:layout_constraintTop_toBottomOf="@id/clPaymentNumberContainer" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRoundOffsDetected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    tools:itemCount="14"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/feature_round_off_cell_detected_round_off" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSeeMoreOrLess"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_black_bg_4dp"
                android:backgroundTint="@color/color_3c3357"
                android:drawablePadding="7dp"
                android:elevation="2dp"
                android:paddingHorizontal="@dimen/dimen_12dp"
                android:paddingVertical="9dp"
                tools:text="@string/feature_round_off_see_more"
                android:visibility="gone"
                tools:visibility="visible"
                android:textColor="@color/color_ACA1D3"
                android:translationZ="2dp"
                app:drawableEndCompat="@drawable/core_ui_ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@id/clRoundOffContainer"
                app:layout_constraintEnd_toEndOf="@id/clRoundOffContainer"
                app:layout_constraintStart_toStartOf="@id/clRoundOffContainer"
                app:layout_constraintTop_toBottomOf="@id/clRoundOffContainer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNoRoundOffDetected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@drawable/feature_round_off_bg_rounded_outline_3c3357_8dp"
                android:padding="@dimen/dimen_16dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAlert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/feature_round_off_ic_alert_triangle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoTransactionDetected"
                    style="@style/CommonBoldTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:text="@string/feature_round_off_no_transaction_detected"
                    app:layout_constraintBottom_toBottomOf="@id/ivAlert"
                    app:layout_constraintStart_toEndOf="@id/ivAlert"
                    app:layout_constraintTop_toTopOf="@id/ivAlert" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoSpendsDetected"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:text="@string/feature_round_off_we_were_not_able_to_detect_any_spends"
                    app:layout_constraintStart_toEndOf="@id/ivAlert"
                    app:layout_constraintTop_toBottomOf="@id/tvNoTransactionDetected" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="30dp"
        android:elevation="1dp"
        android:translationZ="1dp"
        app:buttonText="@string/core_ui_proceed"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>