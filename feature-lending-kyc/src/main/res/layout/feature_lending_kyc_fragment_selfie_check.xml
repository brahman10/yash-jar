<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelfieCheckTitle"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/feature_lending_kyc_selfie_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelfieCheckSubtitle"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="6dp"
        android:text="@string/feature_lending_kyc_we_need_your_selfie_to_verify_your_identity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelfieCheckTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelfieCheckIllustrationHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelfieCheckSubtitle">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFirst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@color/lightBgColor"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="128dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/ivSecond"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_min="100dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/feature_kyc_ic_green_tick"
            app:layout_constraintBottom_toBottomOf="@id/ivFirst"
            app:layout_constraintEnd_toEndOf="@id/ivFirst"
            app:layout_constraintStart_toStartOf="@id/ivFirst"
            app:layout_constraintTop_toBottomOf="@id/ivFirst" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:lineHeight="15sp"
            android:text="@string/feature_lending_kyc_make_sure_the_selfie_is_clear"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivFirst"
            app:layout_constraintStart_toStartOf="@id/ivFirst"
            app:layout_constraintTop_toBottomOf="@id/ivFirst" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@color/lightBgColor"
            app:layout_constraintEnd_toStartOf="@id/ivFirst"
            app:layout_constraintHeight_min="128dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/ivThird"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/core_ui_ic_red_cross"
            app:layout_constraintBottom_toBottomOf="@id/ivSecond"
            app:layout_constraintEnd_toEndOf="@id/ivSecond"
            app:layout_constraintStart_toStartOf="@id/ivSecond"
            app:layout_constraintTop_toBottomOf="@id/ivSecond" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:lineHeight="15sp"
            android:text="@string/feature_lending_kyc_remove_mask_caps_etc"
            android:textColor="@color/color_CB777A"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivSecond"
            app:layout_constraintStart_toStartOf="@id/ivSecond"
            app:layout_constraintTop_toBottomOf="@id/ivSecond" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivThird"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@color/lightBgColor"
            app:layout_constraintHeight_min="128dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivSecond"
            app:layout_constraintWidth_min="100dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/core_ui_ic_red_cross"
            app:layout_constraintBottom_toBottomOf="@id/ivThird"
            app:layout_constraintEnd_toEndOf="@id/ivThird"
            app:layout_constraintStart_toStartOf="@id/ivThird"
            app:layout_constraintTop_toBottomOf="@id/ivThird" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:lineHeight="15sp"
            android:text="@string/feature_lending_kyc_make_sure_the_selfie_is_not_blured"
            android:textColor="@color/color_CB777A"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/ivThird"
            app:layout_constraintStart_toStartOf="@id/ivThird"
            app:layout_constraintTop_toBottomOf="@id/ivThird" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnTakeSelfie"
        android:layout_width="match_parent"
        app:buttonElevation="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="34dp"
        app:buttonDrawablePadding="8dp"
        app:buttonDrawableStart="@drawable/core_ui_ic_camera_outline"
        app:buttonText="@string/feature_lending_kyc_take_selfie"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="54dp"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>