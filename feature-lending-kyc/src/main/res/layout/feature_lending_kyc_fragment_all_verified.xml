<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />
            <!--PAN CARD-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeadingPAN"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/feature_lending_kyc_pan"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatusPAN"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/feature_kyc_ic_verified"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/feature_kyc_verified"
                android:textColor="@color/greenTxtColor"
                app:layout_constraintEnd_toStartOf="@id/tvVerifiedOnPan"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/tvHeadingPAN" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVerifiedOnPan"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toTopOf="@+id/tvStatusPAN"
                tools:text="Verified on 12 Sep 2021" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panParent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/feature_kyc_ic_pan_bg_card"
                android:minHeight="100dp"
                android:padding="18dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/tvStatusPAN">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPanHeading"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/feature_lending_kyc_pan"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPanNumber"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/feature_kyc_pan_hint"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvPanHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvPanHeading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNamePAN"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvPanHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvPanNumber"
                    tools:text="@tools:sample/full_names" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDobPAN"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvNamePAN"
                    tools:text="@tools:sample/date/day_of_week" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvShowPan"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="false"
                    android:drawablePadding="10dp"
                    android:padding="4dp"
                    android:text="@string/feature_kyc_show_pan_number"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    app:drawableStartCompat="@drawable/feature_kyc_ic_eye_show"
                    app:layout_constraintStart_toStartOf="@+id/tvPanHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvNamePAN" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- AADHAAR CARD-->

            <androidx.constraintlayout.widget.Group
                android:id="@+id/aadhaarGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tvHeadingAadhaar,tvStatusAadhaar,tvVerifiedOnAadhaar,aadhaarParent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeadingAadhaar"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/feature_lending_kyc_aadhaar"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/panParent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatusAadhaar"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/feature_kyc_ic_verified"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/feature_kyc_verified"
                android:textColor="@color/greenTxtColor"
                app:layout_constraintEnd_toStartOf="@id/tvVerifiedOnPan"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/tvHeadingAadhaar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVerifiedOnAadhaar"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toTopOf="@+id/tvStatusAadhaar"
                tools:text="Verified on 12 Sep 2021" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aadhaarParent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/feature_kyc_ic_pan_bg_card"
                android:minHeight="100dp"
                android:padding="18dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/tvStatusAadhaar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAadhaarHeading"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/feature_lending_kyc_aadhaar"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAadhaarNumber"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/feature_kyc_pan_hint"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvAadhaarHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvAadhaarHeading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameAadhaar"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvAadhaarHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvAadhaarNumber"
                    tools:text="@tools:sample/full_names" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDobAadhaar"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvNameAadhaar"
                    tools:text="@tools:sample/date/day_of_week" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvShowAadhaar"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="false"
                    android:drawablePadding="10dp"
                    android:padding="4dp"
                    android:text="@string/feature_kyc_show_aadhaar_number"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    app:drawableStartCompat="@drawable/feature_kyc_ic_eye_show"
                    app:layout_constraintStart_toStartOf="@+id/tvAadhaarHeading"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameAadhaar" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>