<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_black_bg_12dp"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/viewDimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:alpha="0.5"
        android:background="@drawable/rounded_black_bg_12dp"
        android:clickable="false"
        android:elevation="12dp"
        android:focusable="false"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="@+id/clKycDoc"
        app:layout_constraintEnd_toEndOf="@+id/clKycDoc"
        app:layout_constraintStart_toStartOf="@+id/clKycDoc"
        app:layout_constraintTop_toTopOf="@+id/clKycDoc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clKycDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivKycDoc"
            android:layout_width="66dp"
            android:layout_height="54dp"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivIconEnd"
            app:layout_constraintStart_toEndOf="@id/ivKycDoc"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Aadhar Card" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIconEnd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_ACA1D3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>