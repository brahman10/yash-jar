<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgColor"
    android:clipChildren="false">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAction">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:text="Title will come from BE"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lottieView"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/SmallTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:text="Description will come from BE Description will come from BE Description will come from BE"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnAction"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/chatWhatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:buttonTextAllCaps="false"
        app:buttonText="@string/feature_kyc_try_again"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/chatWhatsapp"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:buttonType="secondaryHollowButton"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        android:paddingVertical="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/frameChatWA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatWhatsapp"
        app:layout_constraintEnd_toEndOf="@+id/chatWhatsapp"
        app:layout_constraintStart_toStartOf="@+id/chatWhatsapp"
        app:layout_constraintTop_toTopOf="@+id/chatWhatsapp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textChatNow"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableStart="@drawable/ic_whatsapp"
            android:drawablePadding="14dp"
            android:focusable="false"
            android:layout_gravity="center"
            android:outlineProvider="none"
            android:layout_marginHorizontal="16dp"
            android:text="@string/feature_kyc_contact_support"
            android:textAllCaps="true"
            android:textSize="14sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>