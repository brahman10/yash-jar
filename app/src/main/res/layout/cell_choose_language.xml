<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_black_bg_16dp"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="60dp"
    app:layout_constraintHeight_min="60dp"
    tools:layout_margin="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInitial"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/bg_language_circle"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:textColor="@color/color_ACA1D3"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="E" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLanguageName"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@id/tvInitial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInitial"
        app:layout_constraintTop_toTopOf="@id/tvInitial"
        tools:text="English" />
</androidx.constraintlayout.widget.ConstraintLayout>