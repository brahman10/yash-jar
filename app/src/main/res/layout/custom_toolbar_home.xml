<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:minHeight="@dimen/toolbar_min_height"
    tools:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHamburger"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:background="@drawable/bg_circle_white"
        android:backgroundTint="@color/color_2E2942"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/notificationDot"
        style="@style/SmallTextViewStyle"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_circle_red"
        android:elevation="@dimen/dimen_8dp"
        android:gravity="center"
        android:translationZ="@dimen/dimen_8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/ivHamburger"
        app:layout_constraintTop_toTopOf="@+id/ivHamburger"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/notificationAndStoryBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivNotification, storyRippleLayout"
        app:barrierDirection="start" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGoldBuyPrice"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_filled_outline_28dp"
        android:clickable="false"
        android:focusable="false"
        android:outlineProvider="none"
        android:paddingVertical="@dimen/dimen_8dp"
        android:paddingHorizontal="@dimen/dimen_14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notificationAndStoryBarrier"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        tools:ignore="SmallSp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/goldPriceLottie"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/goldPriceIcon"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            tools:src="@drawable/ic_gold_brick"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/assetBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="goldPriceIcon, goldPriceLottie"
            app:barrierDirection="end"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoldPrice"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/assetBarrier"
            tools:text="â‚¹4096.84/gm" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerGoldBuyPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/dimen_1dp"
        android:layout_marginHorizontal="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="@id/clGoldBuyPrice"
        app:layout_constraintEnd_toEndOf="@id/clGoldBuyPrice"
        app:layout_constraintStart_toStartOf="@id/clGoldBuyPrice"
        app:layout_constraintTop_toTopOf="@id/clGoldBuyPrice"
        app:shimmer_auto_start="false"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="linear"
        app:shimmer_duration="1500"
        app:shimmer_base_alpha="0"
        app:shimmer_highlight_alpha="0.8"
        app:shimmer_tilt="30">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/core_ui_bg_shine" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNotification"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/core_ui_bg_notification_bell"
        android:clickable="true"
        android:focusable="true"
        android:padding="14dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_notification" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNotificationDot"
        style="@style/SmallTextViewStyle"
        android:layout_width="@dimen/dimen_14dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_circle_red"
        android:elevation="@dimen/dimen_8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:translationZ="@dimen/dimen_8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
        app:layout_constraintEnd_toEndOf="@+id/ivNotification"
        app:layout_constraintStart_toStartOf="@+id/ivNotification"
        app:layout_constraintTop_toTopOf="@+id/ivNotification"
        tools:text="1"
        tools:visibility="visible" />


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/storyRippleLayout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="false"
        app:rb_color="#5930AE"
        app:rb_radius="@dimen/dimen_16dp"
        app:rb_rippleAmount="2"
        app:rb_duration="3000"
        app:rb_scale="2"
        android:visibility="gone"
        app:rb_type="fillRipple"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.jar.app.feature.story.InAppStoryView
            android:id="@+id/storyView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true" />
    </com.skyfishjy.library.RippleBackground>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#776E94"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>