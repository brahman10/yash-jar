<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="?attr/actionBarItemBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/ic_close"
        android:translationZ="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animConfetti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/confetti" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animTick"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/tick"
        tools:src="@drawable/ic_tick_green" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderAutoPaySuccessful"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="38dp"
        android:text="@string/autopay_setup_successfully"
        android:textColor="@color/color_EEEAFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animTick" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderDesc"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="38dp"
        android:text="@string/you_are_all_set_to_invest_n_everyday"
        android:textColor="@color/color_EEEAFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderAutoPaySuccessful" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnOkay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:textMarginTop="@dimen/dimen_20dp"
        app:textMarginBottom="@dimen/dimen_20dp"
        app:buttonText="@string/okay"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>