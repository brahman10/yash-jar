<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgDarkColor"
    android:clipChildren="false"
    android:paddingBottom="50dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderYouOwn"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="@string/feature_homepage_your_savings"
        app:drawableStartCompat="@drawable/feature_transaction_ic_gold_brick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoldBalance"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"
        app:fontFamily="@font/inter_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderYouOwn"
        tools:text="1.2343 gm Gold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderPure"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/_24_karat_gold_99_5_purity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGoldBalance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnToggleUnit"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/round_black_bg_16dp"
        android:backgroundTint="@color/color_2E2942"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/value_in_grams"
        android:textSize="12sp"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_arrow_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderPure" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/round_black_bg_16dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnToggleUnit">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right"
            app:shimmer_repeat_mode="restart"
            app:shimmer_shape="linear">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginEnd="100dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginEnd="100dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginEnd="100dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginEnd="100dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_rounded_corner_20dp"
                        android:backgroundTint="@color/color_3D3755" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="4"
            tools:listitem="@layout/core_ui_cell_gold_breakdown" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGoldLeaseBreakDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/feature_vasooli_bg_rounded_272239_10dp"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvData">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldLeasedHeader"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_lock_small"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:text="@string/feature_gold_lease_gold_leased"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:drawableTint="@color/white"
                app:layout_constraintEnd_toStartOf="@id/tvGoldLeasedValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldLeasedValue"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="shimmerPlaceholder,rvData,clGoldLeaseBreakDown" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/core_ui_separator"
            app:layout_constraintTop_toBottomOf="@id/barrier" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderTotalGoldPurchased"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/total_gold_purchase"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalGold"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintBottom_toBottomOf="@id/tvHeaderTotalGoldPurchased"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHeaderTotalGoldPurchased"
            tools:text="1.2343 gm" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCross"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/core_ui_ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>