<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/round_black_bg_16dp"
        android:minHeight="82dp"
        app:layout_constraintHeight_min="82dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <View
            android:id="@+id/one"
            android:layout_width="154dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_3D3755"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/two"
            android:layout_width="124dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_3D3755"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one" />

        <View
            android:id="@+id/three"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_3D3755"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_3D3755"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInvoice"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_invoice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInvoiceName"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{invoice.invoiceId}"
            app:layout_constraintStart_toEndOf="@+id/ivInvoice"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="androidx.appcompat.widget.AppCompatTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvView"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:textColor="@color/color_58DDC8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmount"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_58DDC8"
            app:layout_constraintStart_toEndOf="@+id/ivInvoice"
            app:layout_constraintTop_toBottomOf="@+id/tvInvoiceName"
            tools:text="androidx.appcompat.widget.AppCompatTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="@{convertedDate}"
            app:layout_constraintStart_toEndOf="@+id/tvAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvInvoiceName"
            tools:text="textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>