<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_min_height"
        android:background="@color/bgColor"
        android:elevation="@dimen/dimen_8dp"
        android:outlineProvider="none"
        android:paddingHorizontal="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/actionBarItemBackground"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:text="@string/gift_gold"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:text="@string/_100_secure_24k_99_95_pure_gold"
            android:textColor="@color/greenTxtColor"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/toolbar_min_height"
            android:layout_marginBottom="@dimen/dimen_16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/barrier"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/item_gift_question" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="lowBalanceLayout, sendGiftLayout, selectContactLayout, rsEnterLayout, goldEnterLayout" />

        <include
            android:id="@+id/rsEnterLayout"
            layout="@layout/layout_enter_gold_rs_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/goldPriceLayout" />

        <include
            android:id="@+id/goldEnterLayout"
            layout="@layout/layout_enter_gold_gm_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/goldPriceLayout" />

        <include
            android:id="@+id/selectContactLayout"
            layout="@layout/layout_select_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include
            android:id="@+id/enterMobileNumberLayout"
            layout="@layout/layout_enter_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include
            android:id="@+id/sendGiftLayout"
            layout="@layout/layout_send_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include
            android:id="@+id/lowBalanceLayout"
            layout="@layout/layout_jar_low_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gramsTooltip"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:background="@drawable/background_tooltip_white"
            android:elevation="@dimen/dimen_4dp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:text="@string/tap_to_enter_value_in_grams"
            android:textColor="@color/blackTxtColor"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/rsEnterLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rsEnterLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goldPriceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_marginTop="56dp"
            android:background="@color/bgColor"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/currentGoldPrice"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:gravity="start"
                android:textColor="@color/yellowTxtColor"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/priceValidity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Current gold price â‚¹5120/gm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/priceValidity"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/price_valid_for_min" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnGiftAmountDone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:paddingHorizontal="74dp"
                app:buttonText="@string/done"
                app:buttonTextAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentGoldPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_min_height"
        tools:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/bubble_chat_incoming" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@drawable/rounded_black_bg_16dp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>
