<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_black_bg_16dp"
    android:paddingBottom="@dimen/dimen_20dp"
    android:clipChildren="false">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvPromo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/bg_cc_promo_ray"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/ivCoins"
            app:layout_constraintStart_toStartOf="@id/ivCoins"
            app:layout_constraintEnd_toEndOf="@id/ivCoins"
            app:layout_constraintTop_toTopOf="@id/ivCoins" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCoins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_cc_coin"
            android:scaleType="centerCrop"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_cc_card"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCCPromoHeading"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@id/cvPromo"
        android:textSize="@dimen/dimen_18sp"
        android:text="@string/get_your_gold_backed_credit_card"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/CommonTextViewStyle"
        android:id="@+id/tvCCPromoSubHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@+id/tvCCPromoHeading"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/earn_rewards_upto_5000_per_month"
        android:textColor="#D2D2D2" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnClaimEarlyAccess"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@+id/tvCCPromoSubHeading"
        android:layout_marginTop="@dimen/dimen_15dp"
        app:buttonText="@string/claim_early_access" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCCPromoTimer"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textColor="#FFF2CD"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@+id/btnClaimEarlyAccess"
        android:text="@string/limited_entries_only"/>

</androidx.constraintlayout.widget.ConstraintLayout>