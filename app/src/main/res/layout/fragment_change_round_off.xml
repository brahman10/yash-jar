<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llRoundOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="24dp"
                android:minHeight="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRoundOff10Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:paddingStart="@dimen/dimen_23dp"
                android:paddingEnd="@dimen/dimen_23dp"
                android:paddingVertical="@dimen/dimen_22dp"
                android:background="@drawable/bg_selector_2e2942_a841ff_8dp"
                app:layout_constraintEnd_toStartOf="@id/tvRoundOff5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lottieView">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRoundOff10"
                    style="@style/BigTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/round_off_to_nearest_10"
                    app:layout_constraintBottom_toTopOf="@id/tvRecommended"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRecommended"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="@string/recommended"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRoundOff10" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoundOff5"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@drawable/bg_selector_2e2942_a841ff_8dp"
                android:paddingStart="@dimen/dimen_23dp"
                android:paddingTop="@dimen/dimen_35dp"
                android:paddingEnd="@dimen/dimen_23dp"
                android:paddingBottom="@dimen/dimen_35dp"
                android:text="@string/round_off_to_nearest_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/clRoundOff10Container"
                app:layout_constraintTop_toBottomOf="@id/lottieView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoundOffAmt"
                style="@style/CommonTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="28dp"
                android:gravity="center"
                android:text="@string/round_off_amount_nearest_x"
                android:textColor="@color/color_EEEAFF"
                app:layout_constraintTop_toBottomOf="@+id/clRoundOff10Container" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnSave"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:buttonText="@string/save"
                app:buttonTextAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRoundOffAmt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>