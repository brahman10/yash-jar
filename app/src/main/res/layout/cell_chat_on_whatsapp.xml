<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    tools:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTalkToUsOnWhatsapp"
        style="@style/CommonTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:text="@string/have_some_other_query_or_issue_talk_to_us_on_whatsapp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/chatWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="26dp"
        android:elevation="0dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textTalkToUsOnWhatsapp" />

    <FrameLayout
        android:id="@+id/frameChatWA"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:translationZ="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatWhatsapp"
        app:layout_constraintEnd_toEndOf="@+id/chatWhatsapp"
        app:layout_constraintStart_toStartOf="@+id/chatWhatsapp"
        app:layout_constraintTop_toTopOf="@+id/chatWhatsapp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textChatNow"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableStart="@drawable/ic_whatsapp"
            android:drawablePadding="14dp"
            android:focusable="false"
            android:layout_gravity="center"
            android:outlineProvider="none"
            android:layout_marginHorizontal="16dp"
            android:text="@string/chat_now"
            android:textAllCaps="true"
            android:textSize="14sp" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameChatWA"
        app:srcCompat="@drawable/bg_discover" />
</androidx.constraintlayout.widget.ConstraintLayout>