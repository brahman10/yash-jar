<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_black_bg_16dp"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/featureTitle"
        style="@style/BigTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="1. Jar Security Shield" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/featureContent"
        style="@style/SmallTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="Protect your jar account from unauthorised access and keep your gold safe. You can find it on the settings page" />

</LinearLayout>
