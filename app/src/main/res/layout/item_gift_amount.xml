<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_8dp"
    android:layout_marginStart="100dp"
    android:background="@drawable/bubble_chat_outgoing"
    android:paddingVertical="14dp"
    android:paddingStart="@dimen/dimen_14dp"
    android:paddingEnd="@dimen/dimen_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWantToGift"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I want to gift 0.5gm gold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/valueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/ripple_rounded_dark_bg_8dp"
        android:padding="@dimen/dimen_14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWantToGift">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtValueInRupees"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:text="@string/value_in_rupees"
            app:layout_constraintEnd_toStartOf="@+id/editAmount"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAmountRs"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtValueInRupees"
            tools:text="â‚¹2000" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/editAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/feature_gbs_ic_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtAddMessage"
        style="@style/SmallTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="?attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="@dimen/dimen_8dp"
        android:gravity="start"
        android:text="@string/add_a_message_to_make_your_gift_special"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valueLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSpecialMessage"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/special_message"
        android:textAllCaps="true"
        android:textColor="@color/smallTxtColor"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valueLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMessage"
        style="@style/CommonTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="start"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSpecialMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
