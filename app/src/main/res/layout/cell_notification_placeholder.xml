<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clPlaceHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/round_black_bg_16dp"
    android:minHeight="82dp"
    android:padding="16dp"
    app:layout_constraintHeight_min="82dp"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/one"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/bg_circle_white"
        android:backgroundTint="@color/color_3D3755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/two"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:background="@drawable/bg_rounded_corner_20dp"
        android:backgroundTint="@color/color_3D3755"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/three"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_corner_20dp"
        android:backgroundTint="@color/color_3D3755"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/two" />

    <View
        android:id="@+id/four"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:background="@drawable/bg_rounded_corner_20dp"
        android:backgroundTint="@color/color_3D3755"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>