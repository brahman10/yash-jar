<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchBar"
        style="@style/SmallTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/round_black_bg_16dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="14dp"
        android:gravity="start|center_vertical"
        android:hint="@string/try_withdraw_money"
        android:padding="18dp"
        android:textColorHint="@color/color_776e94"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/core_ui_separator"
        app:layout_constraintTop_toBottomOf="@+id/etSearchBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDiscover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:itemCount="6"
        tools:listitem="@layout/cell_discover" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEmptyPlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlaceHolderMessage"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="No result found for Searchkey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textShareOnWhatsApp"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cannot_find_connect_on_whatsapp"
            app:layout_constraintBottom_toTopOf="@id/ivEmpty"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceHolderMessage" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:elevation="0dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textShareOnWhatsApp" />

        <FrameLayout
            android:id="@+id/frameShare"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:translationZ="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/share"
            app:layout_constraintEnd_toEndOf="@+id/share"
            app:layout_constraintStart_toStartOf="@+id/share"
            app:layout_constraintTop_toTopOf="@+id/share">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textShare"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:clickable="false"
                android:drawableStart="@drawable/ic_whatsapp"
                android:drawablePadding="14dp"
                android:focusable="false"
                android:outlineProvider="none"
                android:text="@string/share"
                android:textAllCaps="true"
                android:textSize="14sp" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bg_discover" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>