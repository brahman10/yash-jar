<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProductKey"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="21sp"
        tools:text="@string/material" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvColon"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text=":"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvProductKey"
        app:layout_constraintStart_toEndOf="@id/tvProductKey"
        app:layout_constraintTop_toTopOf="@id/tvProductKey"
        app:lineHeight="21sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProductValue"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:gravity="start|center_vertical"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvColon"
        app:layout_constraintTop_toTopOf="@id/tvProductKey"
        app:lineHeight="21sp"
        tools:text="Fine Gold" />
</androidx.constraintlayout.widget.ConstraintLayout>