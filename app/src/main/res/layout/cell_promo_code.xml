<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPromoCodeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_black_bg_16dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:visibility="visible"
    tools:layout_marginVertical="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPromoCode"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_promo_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPromoCode"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@id/ivPromoCode"
        app:layout_constraintStart_toEndOf="@+id/ivPromoCode"
        app:layout_constraintTop_toTopOf="@+id/ivPromoCode"
        tools:text="JAR JACKPOT"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPromoCodeDescription"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/btnApply"
        app:layout_constraintStart_toStartOf="@+id/tvPromoCode"
        app:layout_constraintTop_toBottomOf="@+id/tvPromoCode"
        tools:maxLines="1"
        tools:text="Get 100% refund on your purchase of gold Max Refund value â‚¹1500 " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="@string/apply"
        android:textAllCaps="true"
        android:textColor="@color/color_58DDC8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rect_6dp"
        android:backgroundTint="@color/color_43353b"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textColor="@color/color_ebb46a"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvPromoCode"
        app:layout_constraintTop_toBottomOf="@id/tvPromoCodeDescription"
        tools:text="Expires in 00:56:32" />
</androidx.constraintlayout.widget.ConstraintLayout>