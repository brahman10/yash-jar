<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLowBalance"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_black_bg_8dp"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/insufficient_balance_in_you_jar_locker"
        android:textColor="@color/orangeBgColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/rounded_black_bg_16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:paddingVertical="@dimen/dimen_20dp"
        android:paddingHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLowBalance">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentGoldBalance"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Current Gold Balance: 0.2435" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtPayRemaining"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentGoldBalance"
            tools:text="Pay remaining: â‚¹2000" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnPayAndSend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:elevation="0dp"
            android:paddingVertical="@dimen/dimen_18dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPayRemaining" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtPayAndSend"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_trusted_small"
            android:drawablePadding="@dimen/dimen_8dp"
            android:elevation="4dp"
            android:text="@string/pay_and_send"
            android:textAllCaps="true"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnPayAndSend"
            app:layout_constraintEnd_toEndOf="@+id/btnPayAndSend"
            app:layout_constraintStart_toStartOf="@+id/btnPayAndSend"
            app:layout_constraintTop_toTopOf="@+id/btnPayAndSend" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>