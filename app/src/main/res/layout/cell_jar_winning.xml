<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_black_bg_16dp"
    tools:layout_margin="10dp"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMyWinning"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/feature_transaction_ic_trophy"
        android:drawablePadding="12dp"
        android:text="@string/my_jar_winnings"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMyWinningSubheading"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:text="@string/view_your_winning_subheading"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txtWinningCount"
        app:layout_constraintStart_toStartOf="@+id/tvMyWinning"
        app:layout_constraintTop_toBottomOf="@+id/tvMyWinning" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWinningCount"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        tools:text="$14"
        android:textSize="12sp"
        app:drawableRightCompat="@drawable/ic_arrow_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>