<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutGoldDelivery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvGoldDeliveryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_6dp"
        android:background="@drawable/round_black_bg_16dp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgGoldDelivery"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_gold_delivery" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            style="@style/SmallTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="start"
            android:paddingBottom="@dimen/dimen_10dp"
            tools:text="@string/free_gold_delivery"
            app:layout_constraintBottom_toTopOf="@id/subheading"
            app:layout_constraintStart_toEndOf="@id/imgGoldDelivery" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subheading"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:text="@string/free_gold_delivery_description"
            app:layout_constraintEnd_toStartOf="@id/forward"
            app:layout_constraintTop_toTopOf="@id/imgGoldDelivery"
            app:layout_constraintBottom_toBottomOf="@id/imgGoldDelivery"
            app:layout_constraintStart_toEndOf="@id/imgGoldDelivery" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/forward"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:layout_constraintBottom_toBottomOf="@id/subheading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subheading"
            app:srcCompat="@drawable/ic_arrow_forward" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/limitedTimeTag"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_limited_time_tag" />

</androidx.constraintlayout.widget.ConstraintLayout>
