    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_black_bg_16dp"
        android:backgroundTint="@color/color_455FCE"
        android:clickable="false"
        android:focusable="false"
        app:fontFamily="@font/inter_bold"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="@string/best"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:translationY="-5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tvAmount"
        app:layout_constraintStart_toStartOf="@id/tvAmount"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"
        app:textAllCaps="true"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>
