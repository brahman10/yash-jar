<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    tools:layout_margin="6dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmount"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_black_bg_4dp"
        android:clickable="false"
        android:focusable="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="â‚¹1001" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBestContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_gold_sip_bg_bottom_rounded_corner_5dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:translationY="-6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAmount">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawablePadding="4dp"
            android:focusable="false"
            app:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="@string/feature_gold_sip_best"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:drawableStartCompat="@drawable/core_ic_small_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="true"
            tools:ignore="SmallSp"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
