<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPauseContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_43353B"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoldSipIsPausedFor"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_EBB46A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gold SIP is paused for next 4 weeks" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAutoResumingIn"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGoldSipIsPausedFor"
            tools:text="Auto Resuming on: 22 Octâ€™22 " />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoldSipSettings"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginVertical="4dp"
        android:text="@string/feature_gold_sip_gold_sip_settings"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clPauseContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeeklyOrMonthly"
        style="@style/SmallBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_black_bg_4dp"
        android:backgroundTint="@color/color_EBB46A_10"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:layout_marginHorizontal="16dp"
        android:textAllCaps="false"
        android:textColor="@color/color_EBB46A"
        app:layout_constraintBottom_toBottomOf="@id/tvGoldSipSettings"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/feature_gold_sip_weekly" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSipDetailsLabel"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/feature_gold_sip_sip_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGoldSipSettings" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoldSipSetupDate"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSipDetailsLabel"
        tools:text="@string/feature_gold_sip_was_setup_on" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSipDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_black_bg_16dp"
        android:backgroundTint="@color/color_2E2942"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvGoldSipSetupDate"
        tools:itemCount="4"
        tools:listitem="@layout/core_ui_cell_label_and_value" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAutoSaveDetailsLabel"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/feature_gold_sip_auto_save_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSipDetails" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMoneyWillBeDebited"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/feature_gold_sip_money_will_be_debited_automatically"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoSaveDetailsLabel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAutoSaveDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_black_bg_16dp"
        android:backgroundTint="@color/color_2E2942"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMoneyWillBeDebited"
        tools:itemCount="3"
        tools:listitem="@layout/core_ui_cell_label_and_value" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnUpdateGoldSip"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="22dp"
        app:buttonText="@string/feature_gold_sip_update_gold_sip"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/tvDisableGoldSip" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisableGoldSip"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="22dp"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:text="@string/feature_gold_sip_disable_gold_sip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>