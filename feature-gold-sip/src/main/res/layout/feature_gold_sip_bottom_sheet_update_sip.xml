<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCross"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/core_ui_ic_close"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUpdateSipDetails"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            android:gravity="start"
            android:text="@string/feature_gold_sip_update_sip_details"
            android:textColor="@color/color_EEEAFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/ivCross"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCross" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectAFrequency"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="32dp"
            android:text="@string/feature_gold_sip_select_a_frequency"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUpdateSipDetails" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeekly"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="14dp"
            android:text="@string/feature_gold_sip_weekly"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/core_ui_bg_radio_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelectAFrequency" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMonthly"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="14dp"
            android:text="@string/feature_gold_sip_monthly"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/core_ui_bg_radio_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWeekly" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHowMuchYouLikeToSave"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"
            android:gravity="start"
            android:text="@string/feature_gold_sip_how_much_would_you_like_to_save"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMonthly" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvYouWillBeReqToProvideAutopay"
            style="@style/SmallTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_black_bg_8dp"
            android:backgroundTint="@color/color_789BDE_opacity_20"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/feature_gold_sip_you_will_be_required_to_provide_auto_save_permission_again"
            android:textColor="@color/color_789BDE"
            android:textSize="11sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/feature_gold_sip_ic_thumb_message_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHowMuchYouLikeToSave"
            tools:visibility="visible" />

        <com.jar.app.core_ui.widget.CustomEditTextWithErrorHandling
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            tools:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvYouWillBeReqToProvideAutopay" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuggestedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/etAmount"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/feature_gold_sip_cell_suggested_amount"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvYouCanSaveUpToX"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/feature_gold_sip_you_can_save_up_to_x_per_week"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvSuggestedAmount"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvYouWillSaveEveryWeekOrMonth"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvYouCanSaveUpToX"
            tools:text="@string/feature_gold_sip_you_will_save_every_week_on" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeekOrMonth"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_black_bg_16dp"
            android:backgroundTint="@color/color_2E2942"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:padding="18dp"
            app:drawableStartCompat="@drawable/core_ui_ic_calender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvYouWillSaveEveryWeekOrMonth"
            tools:text="@string/feature_gold_sip_monday" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDaySelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWeekOrMonth"
            tools:itemCount="7"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/feature_gold_sip_cell_update_week_day"
            tools:spanCount="3"
            tools:visibility="visible" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnGoAhead"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="24dp"
            app:buttonDisabled="true"
            app:buttonText="@string/feature_gold_sip_go_ahead"
            app:buttonTextAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_min="56dp"
            app:layout_constraintTop_toBottomOf="@id/rvDaySelector" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>