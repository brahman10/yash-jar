<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:fillViewport="true">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/transparent"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
        app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
        app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
        app:layout_constraintTop_toTopOf="@id/clSuccessContainer"
        app:lottie_autoPlay="true"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/successLottie"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
        app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
        app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
        app:layout_constraintTop_toTopOf="@id/clSuccessContainer"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <View
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/core_ui_bg_circle_white"
        android:backgroundTint="@color/bgColor"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
        app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
        app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
        app:layout_constraintTop_toTopOf="@id/clSuccessContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSuccessContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/rounded_black_bg_10dp"
        android:backgroundTint="@color/color_3c3357"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/feature_gold_sip_setup_complete"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/core_ui_bg_rounded_outline_58ddc8_5dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/color_58DDC8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="@string/feature_gold_sip_s_saving_active" />

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:alpha="0.15"
            android:background="@color/color_D5CDF2"
            app:layout_constraintTop_toBottomOf="@id/tvDescription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1stGoldSavingSuccessful"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/core_ui_first_saving_in_gold_successful"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmountAndGold"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/core_ui_amount_line_quantity"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1stGoldSavingSuccessful" />

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:alpha="0.15"
            android:background="@color/color_D5CDF2"
            app:layout_constraintTop_toBottomOf="@id/tvAmountAndGold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSSavingWillBe"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="36dp"
            android:text="@string/feature_gold_sip_s_savings_will_be_debited_on_every"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/tvDayOrDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDayOrDate"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/core_ui_ic_calender_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator2"
            tools:text="Monday" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChange"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:text="@string/feature_gold_sip_change"
            android:textColor="@color/color_EBB46A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDayOrDate" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/core_ui_bg_bottom_rounded_corner_10dp"
            android:backgroundTint="@color/color_2E2942"
            android:paddingHorizontal="30dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChange">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvToMakeAnyChanges"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/core_ui_to_make_any_changes_go_to"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProfileToSettings"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_gold_sip_profile_to_setting_to_saving_plan"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvToMakeAnyChanges" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnGoToHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        app:buttonText="@string/core_ui_go_to_homepage"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>