<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbarThumbVertical="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCelebration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparent"
            android:translationZ="4dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
            app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
            app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
            app:layout_constraintTop_toTopOf="@id/clSuccessContainer"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successLottie"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="1dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
            app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
            app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
            app:layout_constraintTop_toTopOf="@id/clSuccessContainer"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <View
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:backgroundTint="@color/bgColor"
            android:background="@drawable/core_ui_bg_circle_white"
            app:layout_constraintBottom_toTopOf="@id/clSuccessContainer"
            app:layout_constraintEnd_toEndOf="@id/clSuccessContainer"
            app:layout_constraintStart_toStartOf="@id/clSuccessContainer"
            app:layout_constraintTop_toTopOf="@id/clSuccessContainer"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSuccessContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="90dp"
            android:background="@drawable/bg_post_autopay_setup_success"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="@string/feature_gold_sip_yay_s_sip_setup_successfully"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/color_EBB46A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="@string/feature_gold_sip_updated_amount_will_be_debited_from_date_s" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="-10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:id="@+id/dottedLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/core_ui_dotted_line"
                android:elevation="9dp"
                android:translationZ="9dp"
                app:layout_constraintBottom_toTopOf="@id/tvBankAccount"
                app:layout_constraintTop_toBottomOf="@id/tvDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankAccount"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="42dp"
                android:text="@string/core_ui_bank_account"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dottedLine" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBankLogo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="@id/tvBankAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvBankAccount"
                tools:src="@drawable/ic_hdfc_bank_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankName"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvBankAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvBankAccount"
                tools:text="HDFC Bank" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_black_bg_16dp"
                android:backgroundTint="@color/color_352F4F"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBankAccount"
                tools:itemCount="4"
                tools:listitem="@layout/core_ui_cell_label_and_value" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/dynamicRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="10dp"
            android:requiresFadingEdge="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnGoToHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clSuccessContainer"
            tools:itemCount="2"
            tools:listitem="@layout/dynamic_cards_cell_strip_two"
            tools:visibility="visible" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnGoToHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:visibility="visible"
            app:buttonText="@string/feature_gold_sip_great_thanks"
            app:buttonTextAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>