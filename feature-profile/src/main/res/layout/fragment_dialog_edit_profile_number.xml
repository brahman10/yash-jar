<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/feature_profile_dialog_background"
        android:paddingVertical="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvProfileNameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEditProfileNumber"
                style="@style/BigTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/feature_profile_enter_your_new_number"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/CommonTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/feature_profile_send_an_otp_for_authentication"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditProfileNumber" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_edit_text_rounded_corner_white"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etNumber"
                    style="@style/BigTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:autofillHints="phoneNational"
                    android:background="@null"
                    android:digits="0123456789"
                    android:ems="10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_profile_enter_phone_number"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/color_282e3d"
                    android:textColorHint="#15484d5c"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivStatus"
                    app:layout_constraintStart_toEndOf="@id/seperator"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/feature_profile_ic_close_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCountryCode"
                    style="@style/BigTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_profile_default_country_code"
                    android:textColor="@color/color_282e3d"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/seperator"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/color_707070_opacity_10"
                    app:layout_constraintBottom_toBottomOf="@id/etNumber"
                    app:layout_constraintStart_toEndOf="@id/tvCountryCode"
                    app:layout_constraintTop_toTopOf="@id/etNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumberAlreadyExists"
                style="@style/SmallTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_EB6A6E"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/clNumber"
                tools:text="The number already exists, please try a\ndifferent phone number" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTnC"
                style="@style/SmallTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/feature_profile_edit_profile_t_n_c"
                android:textColor="@color/color_ACA1D3"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNumberAlreadyExists" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrivacyPolicy"
                style="@style/SmallTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/feature_profile_edit_profile_privacy_policy"
                android:textColor="@color/color_ACA1D3"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTnC" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnGetOtp"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:buttonText="@string/feature_profile_get_otp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:padding="12dp"
                android:text="@string/core_ui_cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnGetOtp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>