<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/core_ui_bg_top_rounded_corner"
    android:minHeight="600dp"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingVertical="26dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHowDoesThisWork"
        style="@style/SmallBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feature_mandate_payment_how_does_this_work"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@id/tvHowDoesThisWork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHowDoesThisWork"
        app:srcCompat="@drawable/core_ui_ic_close"
        app:tint="@color/white" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintHeight_max="600dp"
        app:layout_constraintHeight_min="520dp"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvHowDoesThisWork" />
</androidx.constraintlayout.widget.ConstraintLayout>