<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clCouponHolder"
    android:background="@color/color_2E2942"
    android:paddingHorizontal="@dimen/dimen_12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/coupon_frame"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.jar.app.core_ui.widget.VerticalTextView
            android:id="@+id/tvCouponType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFDCA8"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center_horizontal"
            android:lineHeight="12sp"
            android:paddingHorizontal="@dimen/dimen_4dp"
            android:paddingVertical="@dimen/dimen_8dp"
            android:text="coupon"
            android:textAllCaps="true"
            android:textColor="@color/color_272239"
            android:textFontWeight="700"
            android:textSize="8sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/color_0C725A"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCouponHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dimen_20dp"
                android:text="Offer Applied : Extra 2% Gold"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="14sp"
                app:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCouponSubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lineHeight="@dimen/dimen_18dp"
                android:text="You will earn â‚¹5 worth of extra gold "
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:fontFamily="@font/inter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCouponHeader" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:text="  Expires in 00:56:32  "
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCouponSubHeading" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animSuccessConfetti"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/confetti" />

</androidx.constraintlayout.widget.ConstraintLayout>