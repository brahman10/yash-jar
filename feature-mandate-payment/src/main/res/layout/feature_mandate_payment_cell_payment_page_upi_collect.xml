<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/rounded_black_bg_12dp"
    android:backgroundTint="@color/color_3C3357">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddNewId"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:text="Add a new UPI ID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRegisteredId"
            style="@style/SmallTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="start|center_vertical"
            android:text="You need to have a registered UPI ID."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddNewId" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/actionBarItemBackground"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toTopOf="@id/tvRegisteredId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddNewId"
            app:tint="@color/color_ACA1D3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUpiApps"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRegisteredId"
            tools:src="@drawable/core_upi_ic_upi" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        app:el_expanded="false"
        app:el_parallax="0"
        app:layout_constraintTop_toBottomOf="@id/clTopView"
        tools:el_expanded="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp">

            <FrameLayout
                android:id="@+id/flUpiAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_bg_10dp"
                android:backgroundTint="@color/color_2E2942"
                app:layout_constraintTop_toTopOf="parent">

                <com.jar.app.core_ui.widget.ClearFocusEditText
                    android:id="@+id/etUpiAddress"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="start|center_vertical"
                    android:hint="Enter you UPI ID"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:minHeight="50dp"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/color_ACA1D3"
                    android:textColorHint="@color/color_ACA1D3" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvError"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Incorrect UPI ID"
                android:textColor="@color/color_EB6A6E"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@id/flUpiAddress"
                app:layout_constraintTop_toBottomOf="@id/flUpiAddress"
                tools:visibility="visible" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnVerifyAndProceed"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:buttonDisabled="true"
                app:buttonText="Verify and Proceed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvError" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>