<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weeklyMagic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_10dp"
    android:layout_marginHorizontal="@dimen/dimen_10dp"
    android:background="@drawable/rounded_bg_3c3357_8dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/core_ui_ic_right_chevron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_background_7745ff"
        android:backgroundTint="@color/color_1EA787"
        android:gravity="center"
        android:text="@string/you"
        android:textSize="12sp"
        style="@style/CommonBoldTextViewStyle"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:text="Mystery cards"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvYou"
        app:layout_constraintStart_toEndOf="@id/tvYou"
        app:layout_constraintTop_toTopOf="@id/tvYou" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_2f2f49_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_10dp"
        android:id="@+id/rightContainer"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingVertical="4dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@id/titleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleTv">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:src="@drawable/core_ui_info_circle"
            app:tint="@color/color_EBB46A" />

        <TextView
            android:id="@+id/rightTv"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            tools:text="3 Days remaining"
            android:textColor="@color/color_EBB46A"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/descTv"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_16dp"
        tools:text="Collect 3 more and win upto ₹100. Tap to unlock more cards.Collect 3 more and win upto ₹100. Tap to unlock more cards."
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        android:alpha="0.75"
        android:paddingEnd="@dimen/dimen_10dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@id/tvYou"
        app:layout_constraintTop_toBottomOf="@id/tvYou" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bannerIv"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/descTv"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/descTv" />
</androidx.constraintlayout.widget.ConstraintLayout>