<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dimen_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:text="Expandable RV"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expandable_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginTop="30dp"
        android:text="Custom Switch Compat"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:layout_height="wrap_content">

        <com.jar.app.core_ui.widget.jar_switch.CustomJarSwitchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <com.jar.app.core_ui.widget.jar_switch.CustomJarSwitchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:checked="false" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginTop="30dp"
        android:text="Compose Fragment"
        android:textColor="@color/white" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/navigateToCompose"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:buttonType="primaryButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:buttonText="Navigate" />
</LinearLayout>