<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:paddingBottom="54dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="34dp"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/core_ui_ic_close"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPauseRoundOffsFor"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="58dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/base_pause_daily_saving_for"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCross" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPauseDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPauseRoundOffsFor"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/core_ui_cell_pause_duration"
        tools:orientation="horizontal" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnPause"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="44dp"
        app:buttonText="@string/core_ui_pause"
        app:buttonTextAllCaps="false"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintTop_toBottomOf="@id/rvPauseDuration" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnCancel"
        style="@style/SmallTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:buttonEndColor="@color/lightBgColor"
        app:buttonStartColor="@color/lightBgColor"
        app:buttonStrokeColor="@color/white_opacity_30"
        app:buttonText="@string/core_ui_cancel"
        app:buttonTextAllCaps="false"
        app:buttonType="secondaryHollowButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPause" />
</androidx.constraintlayout.widget.ConstraintLayout>