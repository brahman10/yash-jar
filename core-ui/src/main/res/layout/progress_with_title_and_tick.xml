<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    tools:background="@color/bgDarkColor">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/core_ui_circle_white_border"
        android:padding="6dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvBankStep"
        app:srcCompat="@drawable/core_ui_ic_tick_plain"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivError"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/core_ui_circle_red_border"
        android:tint="@color/color_EB6A6E"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvBankStep"
        app:srcCompat="@drawable/ic_close_filled" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/textBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:barrierMargin="16dp"
        app:constraint_referenced_ids="ivTick,progressBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBankStep"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="This is a very long text to see how the UI will look in this case" />

    <View
        android:id="@+id/separator"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivTick"
        app:layout_constraintStart_toStartOf="@id/ivTick"
        app:layout_constraintTop_toBottomOf="@id/ivTick" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/core_ui_circle_white_border"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:maxWidth="16dp"
        android:maxHeight="16dp"
        android:minWidth="16dp"
        android:minHeight="16dp"
        android:padding="4dp"
        android:progressTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvBankStep" />
</androidx.constraintlayout.widget.ConstraintLayout>
