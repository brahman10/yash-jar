<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="220dp"
    android:layout_marginStart="@dimen/dimen_10dp"
    tools:background="@color/blueBgColor"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationBg"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/winnings_background_1ea787_v2"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        android:paddingTop="20dp"
        android:paddingHorizontal="@dimen/dimen_10dp"
        android:paddingBottom="7dp"
        app:lottie_loop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_background_7745ff"
        tools:text="+80"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:translationY="@dimen/dimen_10dp"
        android:translationX="-3dp"
        tools:visibility="visible"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimen_10dp"
        style="@style/CommonBoldTextViewStyle"
        app:layout_constraintEnd_toEndOf="@id/animationBg"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCountSuccess"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/winning_count_label"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="+3 Spins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundRotating"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@drawable/mystery_card"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/animationBg"
        app:layout_constraintLeft_toLeftOf="@id/animationBg"
        app:layout_constraintRight_toRightOf="@id/animationBg"
        app:layout_constraintTop_toTopOf="@id/animationBg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Spins"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/animationBg"
        app:layout_constraintStart_toStartOf="@id/animationBg"
        app:layout_constraintEnd_toEndOf="@id/animationBg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_160"
        android:layout_height="20dp"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:id="@+id/awardContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <View
            android:id="@+id/startIndicator"
            android:layout_width="@dimen/dimen_10dp"
            android:layout_marginTop="5dp"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@drawable/core_ui_bg_circle_1ea787"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ACA1D3"
            android:background="@drawable/core_ui_dashed_line"
            app:layout_constraintEnd_toStartOf="@id/rewardImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/startIndicator"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"/>
        <View
            android:layout_width="0dp"
            android:background="#1ea787"
            android:id="@+id/indicatorLine"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/startIndicator"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintEnd_toStartOf="@id/guideline" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tickImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/core_ui_ic_tick"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintTop_toTopOf="@id/startIndicator" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rewardImage"
            android:layout_width="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="15dp"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintTop_toTopOf="@id/startIndicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/awardText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awardContainer"
        style="@style/CommonTextViewStyle"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:text="4 cards remaining" />

</androidx.constraintlayout.widget.ConstraintLayout>