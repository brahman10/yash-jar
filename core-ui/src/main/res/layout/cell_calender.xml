<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDailySavingInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/core_ui_bg_bottom_rounded_corner_16dp"
        android:backgroundTint="@color/color_3C3357"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clSavingsActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">
            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/clBtn1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                app:buttonType="secondaryHollowButton"
                app:buttonText="@string/core_ui_pause"
                app:buttonDrawablePadding="@dimen/dimen_12dp" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/clBtn2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_4dp"
                app:buttonText="@string/core_ui_pause"
                app:buttonDrawableStart="@drawable/feature_post_setup_ic_pause"
                app:buttonDrawablePadding="@dimen/dimen_12dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/punchHoleBottomStart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clSavingsActions" />

        <View
            android:id="@+id/punchHoleBottomEnd"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clSavingsActions" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/startCalenderRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:elevation="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@id/clCalendarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDailySavingInfoContainer"
        app:srcCompat="@drawable/feature_post_setup_calendar_ring"
        tools:ignore="ImageContrastCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/endCalenderRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="64dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toTopOf="@id/clCalendarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDailySavingInfoContainer"
        app:srcCompat="@drawable/feature_post_setup_calendar_ring"
        tools:ignore="ImageContrastCheck" />

    <View
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:layout_marginStart="62dp"
        android:background="#2F2A43"
        app:layout_constraintBottom_toTopOf="@id/clCalendarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDailySavingInfoContainer" />

    <View
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:layout_marginEnd="79dp"
        android:background="#2F2A43"
        app:layout_constraintBottom_toTopOf="@id/clCalendarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDailySavingInfoContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCalendarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_corner_20dp"
        android:backgroundTint="@color/color_453878"
        app:layout_constraintTop_toBottomOf="@id/clDailySavingInfoContainer">

        <View
            android:id="@+id/punchHoleTopStart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/punchHoleTopEnd"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/calenderView"
            layout="@layout/custom_calender_view_layout"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="1dp"
            app:layout_constraintTop_toBottomOf="@id/punchHoleTopStart" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>