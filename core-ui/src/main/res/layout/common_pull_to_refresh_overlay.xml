<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flOverLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_50_trans"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPullDown"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pull_down_to_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPullEffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/tvPullDown"
        app:layout_constraintStart_toStartOf="@id/tvPullDown"
        app:layout_constraintTop_toBottomOf="@id/tvPullDown"
        app:srcCompat="@drawable/ic_pull_effect" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/ivPullEffect"
        app:layout_constraintTop_toTopOf="@id/ivPullEffect"
        app:srcCompat="@drawable/ic_pull_hand" />
</androidx.constraintlayout.widget.ConstraintLayout>
