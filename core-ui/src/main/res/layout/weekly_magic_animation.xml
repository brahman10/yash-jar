<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_160"
    android:layout_height="220dp"
    android:layout_marginStart="@dimen/dimen_10dp"
    android:id="@+id/weeklyMagic"
    tools:background="@color/blueBgColor"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false">

    <View
        android:id="@+id/animationBg"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:padding="10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/winnings_background_1ea787_v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCountSuccess"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/winning_count_label"
        android:backgroundTint="@color/color_1EA787"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/you_won"
        android:paddingStart="5dp"
        android:gravity="center"
        style="@style/CommonBoldTextViewStyle"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility = "visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYou"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_background_7745ff"
        android:backgroundTint="@color/color_1EA787"
        android:gravity="center"
        android:text="@string/you"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/backgroundRotating"
        app:layout_constraintEnd_toEndOf="@+id/tvWon"
        app:layout_constraintStart_toStartOf="@+id/tvWon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_background_7745ff"
        android:text="@string/won"
        android:gravity="center"
        style="@style/CommonBoldTextViewStyle"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingHorizontal="6dp"
        android:translationY="-5dp"
        android:backgroundTint="@color/color_1EA787"
        app:layout_constraintStart_toStartOf="@id/animationBg"
        app:layout_constraintEnd_toEndOf="@id/animationBg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/tvYou"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundRotating"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:src="@drawable/weekly_magic_hat"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/animationBg"
        app:layout_constraintLeft_toLeftOf="@id/animationBg"
        app:layout_constraintRight_toRightOf="@id/animationBg"
        app:layout_constraintTop_toTopOf="@id/animationBg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Magic hat"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/animationBg"
        app:layout_constraintStart_toStartOf="@id/animationBg"
        app:layout_constraintEnd_toEndOf="@id/animationBg" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_160"
        android:layout_height="20dp"
        android:id="@+id/awardContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <View
            android:id="@+id/startIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/core_ui_bg_circle_1ea787"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ACA1D3"
            android:background="@drawable/core_ui_dashed_line"
            app:layout_constraintEnd_toStartOf="@id/rewardImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/startIndicator"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"/>
        <View
            android:id="@+id/indicatorLine"
            android:layout_width="0dp"
            android:background="@color/color_1EA787"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/startIndicator"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintEnd_toStartOf="@id/guideline" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tickImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/core_ui_ic_tick"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintTop_toTopOf="@id/startIndicator" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rewardImage"
            android:layout_width="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="15dp"
            app:layout_constraintBottom_toBottomOf="@id/startIndicator"
            app:layout_constraintTop_toTopOf="@id/startIndicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/awardText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awardContainer"
        style="@style/CommonTextViewStyle"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:layout_height="wrap_content"
        android:text="4 cards remaining" />
</androidx.constraintlayout.widget.ConstraintLayout>