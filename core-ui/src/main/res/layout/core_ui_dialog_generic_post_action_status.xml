<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/core_ui_bg_rounded_dialog_with_margin"
    android:paddingHorizontal="20dp"
    android:paddingVertical="60dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/actionLottie"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:layout_editor_absoluteX="-16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActionDescription"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionLottie"
        tools:text="Success Description" />

</androidx.constraintlayout.widget.ConstraintLayout>