<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvFront"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="22dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1F1F"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/outline"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/bg_rounded_corner_white"
            app:layout_constraintStart_toStartOf="@id/etCardNumber"
            app:layout_constraintTop_toTopOf="@id/etCardNumber" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/front_tvBankName"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/ivCardTypeFront"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="true"
            tools:text="HDFC Bank" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCardTypeFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="40dp"
            tools:src="@drawable/ic_visa" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderCardNumber"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="@string/core_ui_card_number"
            android:textColor="@color/color_C4C4C4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/front_tvBankName" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardNumber"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:elevation="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:fontFamily="@font/inter_bold"
            android:gravity="start|center_vertical"
            android:hint="XXXX XXXX XXXX XXXX"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="19"
            android:maxLines="1"
            android:minHeight="38dp"
            android:nextFocusDown="@id/tvName"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#656565"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textSize="23sp"
            android:translationZ="4dp"
            app:layout_constraintHeight_min="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderCardNumber"
            app:lineHeight="31sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tooltipNumber"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/core_ui_tooltip_top_start"
            android:elevation="6dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:translationZ="6dp"
            android:visibility="gone"
            app:layout_constraintHeight_min="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCardNumber"
            app:layout_constraintWidth_min="110dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderName"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="@string/core_ui_name_on_card"
            android:textColor="@color/color_C4C4C4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCardNumber" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvName"
            style="@style/SmallTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="150dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/core_ui_name_surname"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusRight="@id/tvExpiry"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#656565"
            android:textCursorDrawable="@drawable/cursor_blue"
            app:layout_constraintEnd_toStartOf="@id/tvExpiry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderExpDate"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="@string/core_ui_exp_date"
            android:textColor="@color/color_C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCardNumber" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvExpiry"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/core_ui_mm_yy"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#656565"
            android:textCursorDrawable="@drawable/cursor_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderExpDate"
            app:textAllCaps="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>