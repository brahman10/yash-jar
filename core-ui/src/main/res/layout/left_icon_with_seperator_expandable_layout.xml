<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_icon_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/dimen_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/leftImage"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/header_tv"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/dimen_10dp"
            android:text="@string/cancellation_policy"
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/container_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/core_ui_ic_arrow_down" />

    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_16dp"
        app:el_duration="500"
        app:el_expanded="false">

        <TextView
            android:id="@+id/tvAnswer"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:elevation="4dp"
            android:textAlignment="textStart"
            android:textColor="#D5CDF2"
            tools:text="Once placed, an order cannot be cancelled. You can reject the order once it comes to your doorstep" />

    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

</LinearLayout>
