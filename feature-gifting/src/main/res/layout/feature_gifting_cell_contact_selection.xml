<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_corner_20dp"
    android:backgroundTint="@color/color_2E2942"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_scrollFlags="scroll|enterAlways">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSendGiftSecurely"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/core_ui_ic_shield"
        android:drawablePadding="8dp"
        android:text="@string/feature_gifting_send_a_gift_securely"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="?attr/actionBarItemBackground"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/core_ui_ic_close"
        app:tint="@color/white" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnSelectFromContacts"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        app:buttonDrawableStart="@drawable/feature_gifting_ic_contact"
        app:buttonText="@string/feature_gifting_select_a_contact"
        app:buttonTextAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSendGiftSecurely" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnEnterMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="23dp"
        android:padding="20dp"
        app:buttonDrawableStart="@drawable/feature_gifting_ic_call"
        app:buttonType="secondaryHollowButton"
        app:buttonText="@string/feature_gifting_enter_mobile_number"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectFromContacts" />

</androidx.constraintlayout.widget.ConstraintLayout>
