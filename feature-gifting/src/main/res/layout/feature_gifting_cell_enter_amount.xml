<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgDarkColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBuyInRupees"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:text="@string/feature_gifting_gift_in_rupees"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBuyInGrams"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:text="@string/feature_gifting_gift_in_grams"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/clBuyInGramsContainer"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBuyInRupeesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/feature_gifting_bg_selector_rounded_edittext"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@id/toggleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBuyInRupees">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rsSymbol"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/feature_gifting_currency_sign"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etBuyAmountInRupees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="0123456789."
            app:fontFamily="@font/inter_bold"
            android:gravity="start|center_vertical"
            android:hint="0"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_ACA1D3"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/rsSymbol"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText">

            <requestFocus />
        </androidx.appcompat.widget.AppCompatEditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/toggleView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/feature_gifting_ic_forward_backward_arrow"
        app:layout_constraintBottom_toBottomOf="@id/clBuyInRupeesContainer"
        app:layout_constraintEnd_toStartOf="@id/clBuyInGramsContainer"
        app:layout_constraintStart_toEndOf="@id/clBuyInRupeesContainer"
        app:layout_constraintTop_toTopOf="@id/clBuyInRupeesContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBuyInGramsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/feature_gifting_bg_selector_rounded_edittext"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/toggleView"
        app:layout_constraintTop_toBottomOf="@id/tvBuyInGrams">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etBuyAmountInGrams"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="0123456789."
            app:fontFamily="@font/inter_bold"
            android:gravity="start|center_vertical"
            android:hint="0"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="7"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_ACA1D3"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/gramSymbol"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText">

        </androidx.appcompat.widget.AppCompatEditText>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gramSymbol"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/feature_gifting_gm_label"
            android:textColor="@color/color_ACA1D3"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrorMessage"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/feature_gifting_please_enter_a_amount_thats_more_than_x_gm"
        android:textColor="@color/color_EB6A6E"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clBuyInRupeesContainer"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSuggestedAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvErrorMessage"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/feature_gifting_cell_suggested_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrentPrice"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        tools:text="Current buy price â‚¹5120/gm"
        android:textColor="@color/color_EBB46A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSuggestedAmount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimer"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        tools:text="Price valid for 04:40min"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSuggestedAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>