<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbarThumbVertical="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/bgColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/actionBarItemBackground"
                android:padding="3dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeader"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/feature_gifting_gift_gold"
                app:fontFamily="@font/inter_bold"
                app:layout_constraintBottom_toTopOf="@id/tvSubHeader"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/feature_gifting_100_perc_secure_24k_99_pure_gold"
                android:textColor="@color/color_58DDC8"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1AACA1D3"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPaymentCompleted"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="@string/feature_gifting_payment_completed"
            android:textColor="@color/color_ebb46a"
            app:layout_constraintTop_toBottomOf="@id/clHeader" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:lottie_loop="true"
            app:layout_constraintTop_toBottomOf="@id/tvPaymentCompleted" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmountPaid"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lottieView"
            tools:text="Amount paid: â‚¹100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoldVolume"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintTop_toBottomOf="@id/tvAmountPaid"
            tools:text="Gold gift quantity : 0.0054gm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderId"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/feature_gifting_transaction_id"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintEnd_toStartOf="@id/tvId"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGoldVolume" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvId"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:gravity="start"
            tools:text="AGFDGHHAFSG2635273"
            app:drawableEndCompat="@drawable/ic_copy_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/tvHeaderId"
            app:layout_constraintTop_toBottomOf="@id/tvGoldVolume" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/core_ui_separator"
            app:layout_constraintTop_toBottomOf="@id/tvId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="@string/feature_gifting_gold_pending_description"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            app:buttonText="@string/feature_gifting_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:buttonTextAllCaps="false"
            app:layout_constraintBaseline_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>