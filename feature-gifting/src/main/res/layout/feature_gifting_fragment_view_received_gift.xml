<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRevealGift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSparkleLightBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bgColor"
            android:backgroundTintMode="screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCloseReveal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="?attr/actionBarItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGiftForYouReveal"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ashu has sent a gift for you" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGiftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:minWidth="200dp"
            android:minHeight="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/feature_gifting_ic_gift_large" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTapToReveal"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="60dp"
            android:padding="20dp"
            android:text="@string/feature_gifting_tap_to_reveal"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/ivGiftIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGiftDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        tools:visibility="visible"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGiftForYou"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="64dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ashu has sent you a gift" />

        <LinearLayout
            android:id="@+id/goldAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/feature_gifting_ic_yellow_frame"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tvGiftForYou">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/goldAmount"
                style="@style/BigTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0.5gm Gold" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/feature_buy_gold_v2_perc_99_pure_gold"
                android:textColor="@color/brown"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintTop_toBottomOf="@id/goldAmountLayout"
            tools:text="Gift received on - 28th July, 2022 | 3:40 PM" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/feature_gifting_rounded_voilet_grey_12dp"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintTop_toTopOf="@id/footer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_black_bg_16dp"
            android:gravity="start"
            android:padding="24dp"
            android:scrollbars="vertical"
            android:textColor="@color/commonTxtColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            tools:text="Message goes here" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/feature_gifting_ic_purple_gradient_v"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>