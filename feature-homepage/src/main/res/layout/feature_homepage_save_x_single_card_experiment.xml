<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shimmer_auto_start="false"
    app:shimmer_base_alpha="1"
    app:shimmer_highlight_alpha="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_black_bg_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="22dp"
            android:elevation="4dp"
            android:gravity="center"
            android:text="@string/feature_homepage_start_saving_with_x"
            android:textSize="20sp"
            android:translationZ="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:gravity="center"
            android:text="@string/feature_homepage_watch_your_savings_grow_daily"
            android:textColor="@color/color_ACA1D3"
            android:translationZ="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:lineHeight="21sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInfoGraphicImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:translationZ="2dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnStartNow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:translationZ="4dp"
            app:buttonText="@string/feature_home_page_start_now"
            app:buttonTextAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>