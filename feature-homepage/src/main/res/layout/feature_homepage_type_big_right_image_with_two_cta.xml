<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabelTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_homepage_bg_label_top"
        android:backgroundTint="@color/color_7745FF"
        android:clickable="false"
        android:drawablePadding="4dp"
        android:elevation="4dp"
        android:focusable="false"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableStart="@drawable/feature_homepage_ic_label_tick"
        tools:text="New"
        tools:textColor="@color/white"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_black_bg_12dp"
        android:backgroundTint="@color/color_352F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInfoGraphic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/spends_home" />
        <!-- TRACK YOUR SPENDS -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStartIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_24dp"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:layout_marginStart="@dimen/dimen_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="-3sp"
            android:textColor="@color/color_ACA1D3"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/ivInfoGraphic"
            app:layout_constraintStart_toEndOf="@+id/ivStartIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="12sp"
            tools:text="TRACK YOUR SPENDS" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/color_EEEAFF"
            android:textSize="20sp"
            android:translationY="-1.9sp"
            app:layout_constraintEnd_toStartOf="@+id/ivInfoGraphic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleTop"
            app:lineHeight="28sp"
            tools:text="Get insights on your spending habits!" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvDescriptionText, ivInfoGraphic"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llCta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier">
            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnPrimaryCta"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                app:textMarginBottom="21dp"
                app:textMarginTop="21dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                tools:buttonText="View Report" />
            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnSecondaryCta"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                app:textMarginBottom="21dp"
                app:textMarginTop="21dp"
                app:buttonType="secondaryHollowButton"
                app:buttonStrokeColor="@color/color_584295"
                app:buttonBackgroundColor="@color/color_352F4F"
                android:layout_marginStart="@dimen/dimen_10dp"
                tools:buttonText="View Report" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
