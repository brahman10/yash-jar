<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:translationZ="@dimen/dimen_1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStatesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_opacity_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIntroHeader"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:elevation="@dimen/dimen_1dp"
                android:textColor="@color/color_58DDC8"
                android:textSize="20sp"
                android:translationZ="@dimen/dimen_1dp"
                app:layout_constraintBottom_toTopOf="@id/tvIntroTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hello Maitreyi, Welcome!" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIntroTitle"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_18dp"
                android:elevation="@dimen/dimen_1dp"
                android:gravity="center"
                android:textColor="@color/color_ACA1D3"
                android:translationZ="@dimen/dimen_1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIntroHeader"
                tools:text="Did you know?\nSaving is now simple and rewarding" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pulsatingLottie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationZ="@dimen/dimen_8dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginBottom="@dimen/dimen_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTapToProceed"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="48dp"
            android:elevation="@dimen/dimen_1dp"
            android:text="@string/feature_homepage_tap_to_proceed"
            android:textColor="@color/color_ACA1D3"
            android:translationZ="@dimen/dimen_1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.feature_homepage.impl.util.showcase.ShowCaseView
        android:id="@+id/showCaseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jar.app.feature_homepage.impl.util.showcase.UnderLinedSkipButton
        android:id="@+id/skip"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/dimen_20dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>