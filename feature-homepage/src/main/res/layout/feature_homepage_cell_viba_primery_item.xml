<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clHolder"
    android:layout_width="220dp"
    android:layout_height="162dp"
    android:background="@drawable/rounded_dark_bg_8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:textSize="10sp"
        android:textFontWeight="400"
        android:translationZ="-1dp"
        android:textColor="@color/color_023832"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeader"
        style="@style/SmallTextViewStyle"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By JAR"
        android:layout_marginBottom="20dp"
        android:textColor="@color/color_023832"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHeaderIcon"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/feature_homepage_ic_custom_info"
        app:layout_constraintBottom_toTopOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:gravity="bottom"
        android:layout_marginTop="20dp"
        style="@style/CommonBoldTextViewStyle"
        android:textFontWeight="700"
        android:textColor="@color/color_2F2A43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:textColor="@color/color_2F2A43"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/core_ui_ic_arrow_forward_with_bg"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>