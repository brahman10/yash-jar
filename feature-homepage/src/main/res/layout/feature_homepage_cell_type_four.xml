<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shimmer_auto_start="false"
    app:shimmer_base_alpha="1"
    app:shimmer_duration="2000"
    app:shimmer_highlight_alpha="0.6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/feature_homepage_bg_label_top"
            android:backgroundTint="@color/color_7745FF"
            android:clickable="false"
            android:drawablePadding="4dp"
            android:elevation="4dp"
            android:focusable="false"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableStart="@drawable/feature_homepage_ic_label_tick"
            tools:text="New"
            tools:textColor="@color/white"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCard"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/rounded_black_bg_8dp"
            android:backgroundTint="@color/color_352F4F"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackgroundOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:paddingHorizontal="4dp"
                android:scaleType="fitXY" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivStartIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:elevation="2dp"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/core_ui_ic_gold_bricks_with_star" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ivStartIconLottie"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:clickable="false"
                android:elevation="2dp"
                android:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:clickable="false"
                android:focusable="false"
                android:textSize="14sp"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toEndOf="@id/ivStartIcon"
                app:layout_constraintTop_toTopOf="@id/ivStartIcon"
                app:lineHeight="21sp"
                tools:text="Daily Savings"
                tools:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:clickable="false"
                android:focusable="false"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/ivEndIcon"
                app:layout_constraintStart_toEndOf="@id/ivStartIcon"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:lineHeight="18sp"
                tools:text="Automate your daily savings in\ngold with as low as â‚¹10."
                tools:textColor="@color/color_D5CDF2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEndIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="4dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/actionBarItemBackground"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivStartIcon"
                tools:src="@drawable/ic_arrow_forward_with_back_dash" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabelBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/feature_homepage_bg_label_bottom"
                android:clickable="false"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/feature_homepage_ic_label_tick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:lineHeight="12sp"
                tools:ignore="SmallSp"
                tools:text="ACTIVE" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>