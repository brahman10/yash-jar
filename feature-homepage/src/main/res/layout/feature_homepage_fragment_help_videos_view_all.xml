<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHelpVideosTitle"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="start"
        android:text="@string/videos_to_help_you_understand"
        app:layout_constraintEnd_toStartOf="@id/btnLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnLanguage"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/feature_homepage_ic_language"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:buttonText="English"
        app:buttonTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="54dp"
        app:layout_constraintStart_toEndOf="@id/tvHelpVideosTitle"
        app:layout_constraintTop_toTopOf="@id/tvHelpVideosTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHelpVideos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHelpVideosTitle"
        tools:listitem="@layout/feature_homepage_cell_linear_help_video" />
</androidx.constraintlayout.widget.ConstraintLayout>