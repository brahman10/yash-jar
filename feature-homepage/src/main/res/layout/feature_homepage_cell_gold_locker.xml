<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shimmer_auto_start="false"
    app:shimmer_base_alpha="1"
    app:shimmer_duration="2000"
    app:shimmer_highlight_alpha="0.6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/bgColor">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFestivalCampaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/clLockerContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLampTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/clLockerContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/tvHelloUserFestivalContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/clLockerContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:layout_constraintTop_toBottomOf="@+id/btnWeeklyChallenge"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/diya"
                    android:adjustViewBounds="true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHelloUserFestival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EEEAFF"
                    android:visibility="visible"
                    tools:text="Happy Diwali, Prasenjit"
                    app:layout_constraintBottom_toBottomOf="@id/btnWeeklyChallenge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btnWeeklyChallenge"
                    tools:visibility="visible" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/diya"
                    android:adjustViewBounds="true"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/festivalCampaignGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:visibility="visible"
                app:constraint_referenced_ids="tvHelloUserFestivalContainer,ivLampTopLeft,ivFestivalCampaign"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHelloUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/color_EEEAFF"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btnWeeklyChallenge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnWeeklyChallenge"
                tools:text="Hello, Aditya"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnWeeklyChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/feature_weekly_challenge_bg_magic_hat_notch"
                android:elevation="5dp"
                android:minHeight="50dp"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_22dp"
                app:layout_goneMarginTop="@dimen/dimen_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivFestivalCampaign"
                tools:visibility="visible">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/magicHatFabLottie"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_imageAssetsFolder="resting_hat_square.lottie"
                    app:lottie_loop="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/magicHatFabTextOne"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/feature_weekly_magic_common_magic_hat"
                    android:textAllCaps="false"
                    android:textColor="@color/color_EBB46A"
                    app:layout_constraintBottom_toTopOf="@+id/magicHatFabTextTwo"
                    app:layout_constraintStart_toEndOf="@+id/magicHatFabLottie"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/magicHatFabTextTwo"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/feature_weekly_magic_common_is_here"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/magicHatFabTextOne"
                    app:layout_constraintStart_toStartOf="@+id/magicHatFabTextOne"
                    app:layout_constraintTop_toBottomOf="@+id/magicHatFabTextOne"
                    app:textAllCaps="false" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieCelebration"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLockerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:background="@drawable/core_ui_bg_radial_gradient"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvHelloUserFestivalContainer"
                tools:layout_editor_absoluteX="16dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFirstCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clFirstCoinContainer"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_top_black_bg_16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/firstCoinAnimView"
                            android:layout_width="200dp"
                            android:layout_height="48dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/firstCoinProgressBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/first_coin_animation"
                            app:lottie_speed="1" />

                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/firstCoinProgressBar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="100dp"
                            android:layout_height="4dp"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:layout_marginBottom="@dimen/dimen_16dp"
                            android:progress="40"
                            android:progressDrawable="@drawable/feature_homepage_custom_first_coin_progress_bar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstCoinText"
                            style="@style/SmallTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_12dp"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="First Coin Text"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/firstCoinIcon"
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/ic_single_gold_coin"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/firstCoinText"
                            app:layout_constraintStart_toEndOf="@id/firstCoinText"
                            app:layout_constraintTop_toTopOf="@id/firstCoinText"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/firstCoinArrow"
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_14dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/feature_daily_investment_forward_arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/clFirstCoin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_jar_balance_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_black_bg_16dp"
                        android:clickable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:id="@+id/view"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/color_776e94"
                            app:layout_constraintBottom_toBottomOf="@id/brickLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/brickLabel"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/feature_homepage_ic_locker_new"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/disclaimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:text="@string/feature_homepage_your_savings_in_24k_gold"
                            android:textColor="@color/color_ACA1D3"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/brickLabel"
                            app:layout_constraintStart_toEndOf="@id/brickLabel"
                            app:layout_constraintTop_toTopOf="@+id/brickLabel"
                            app:lineHeight="21sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_current_value"
                            style="@style/SmallTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:drawablePadding="12dp"
                            android:focusable="true"
                            android:textColor="@color/color_EEEAFF"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@+id/view"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="0.1213gm" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/infoButton"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/feature_homepage_ic_custom_info"
                            app:layout_constraintBottom_toBottomOf="@id/tv_subtext"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_subtext"
                            app:layout_constraintTop_toTopOf="@id/tv_current_value" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_subtext"
                            style="@style/CommonBoldTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:drawablePadding="12dp"
                            android:focusable="true"
                            android:textColor="@color/color_EEEAFF"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@id/tv_current_value"
                            app:layout_constraintTop_toBottomOf="@id/tv_current_value"
                            tools:text="0.1213gm" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/groupJarWinningsFooter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:constraint_referenced_ids="separator, llJarWinningsFooter" />

                        <View
                            android:id="@+id/separator"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:background="@color/color_423864"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_subtext" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llJarWinningsFooter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/separator">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivJarWinningsFooter"
                                android:layout_width="@dimen/dimen_12dp"
                                android:layout_height="@dimen/dimen_12dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvJarWinningsFooter"
                                style="@style/SmallTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:gravity="start"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clQuickAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@color/transparent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clLockerContainer"
                tools:visibility="gone">

                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:buttonText="Withdraw" />

                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:buttonText="Buy Gold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:el_duration="500"
                app:el_expanded="true"
                app:el_parallax="0.2"
                app:layout_constraintTop_toBottomOf="@id/clQuickAccess"
                tools:el_expanded="true"
                tools:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBottomDataContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_marquee"
                        style="@style/MarqueeTextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:drawablePadding="8dp"
                        android:text="@string/feature_homepage_your_saving_are_invested_gold"
                        android:textColor="@color/color_ACA1D3"
                        android:textSize="10sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SmallSp" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="61dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/core_ui_separator"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_marquee" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeader"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dp_80"
                android:gravity="start"
                android:textColor="@color/white"
                app:fontFamily="@font/inter_semi_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="100% safe and secure"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dp_80"
                android:gravity="start"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeader"
                app:lineHeight="32sp"
                tools:text="Gold prices\nincreased by 70%"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dp_80"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="in the last 5 years"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBgFirstTransaction"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:translationZ="-1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="245dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

            <View
                android:id="@+id/bgContainerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:translationZ="-2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="245dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnFirstTransactionAction"
                android:layout_width="168dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_32dp"
                app:buttonBackgroundColor="@color/bgColor"
                app:buttonDrawableEnd="@drawable/ic_arrow_right"
                app:buttonDrawablePadding="@dimen/dimen_8dp"
                app:buttonTextColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                tools:buttonText="Start Saving"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFirstTransactionSuccessContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="@dimen/dimen_1dp"
                android:paddingBottom="@dimen/dimen_24dp"
                android:translationZ="@dimen/dimen_1dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCheckmark"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
