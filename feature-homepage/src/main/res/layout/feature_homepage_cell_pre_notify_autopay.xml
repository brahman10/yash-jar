<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/core_ui_bg_outlined_776e94_12dp"
    android:padding="14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/core_ui_ic_close"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDailySavingIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/core_ui_ic_calendar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/SmallBoldTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/color_DCD7ED"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintStart_toEndOf="@id/ivDailySavingIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Next auto-debit on 24 Dec" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDesc"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@id/ivCross"
        android:layout_marginEnd="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintStart_toEndOf="@id/ivDailySavingIcon"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="â‚¹1020 will be debited from your bank." />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnTrackYourSavings"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_min="150dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:buttonType="primaryButton"
        app:buttonRadius="4dp"
        app:buttonStrokeColor="@color/color_846FC0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDailySavingIcon"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:buttonText="@string/feature_homepage_track_your_savings" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnFooterText"
        style="@style/SmallBoldTextViewStyle"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingVertical="6dp"
        android:textColor="@color/color_AB8CFF"
        android:gravity="center"
        android:visibility="gone"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/btnTrackYourSavings"
        app:layout_constraintTop_toTopOf="@id/btnTrackYourSavings"
        app:layout_constraintBottom_toBottomOf="@id/btnTrackYourSavings"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/never_show_again"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>