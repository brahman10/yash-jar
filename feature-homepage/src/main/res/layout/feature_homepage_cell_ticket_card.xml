<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="154dp"
    tools:background="@drawable/rounded_black_bg_16dp"
    tools:layout_marginHorizontal="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:style="@style/BigTextViewStyle"
        tools:text="Have a\npromo code?" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Redeem to claim free gold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="6dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        tools:drawableEnd="@drawable/core_ui_ic_next"
        tools:style="@style/CommonTextViewStyle"
        tools:text="Redeem now"
        tools:textColor="@color/white" />

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/core_ui_dotted_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivInfoGraphicImage"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_hand_gold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivInfoGraphicLottie"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true" />

    <View
        android:id="@+id/v1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/core_ui_bg_circle_white"
        android:backgroundTint="@color/color_272239"
        android:translationY="-6dp"
        android:translationZ="6dp"
        app:layout_constraintEnd_toEndOf="@id/separator"
        app:layout_constraintStart_toStartOf="@id/separator"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/core_ui_bg_circle_white"
        android:backgroundTint="@color/color_272239"
        android:translationY="6dp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/separator"
        app:layout_constraintStart_toStartOf="@id/separator" />
</androidx.constraintlayout.widget.ConstraintLayout>