<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_24dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalWinnings"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_winnings_received"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Total Winnings Received" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalWinningsValue"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalWinnings"
        tools:text="â‚¹22,127" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        app:tint="@color/white" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ivClose"
        app:shimmer_auto_start="true"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="linear">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_rounded_corner_20dp"
                    android:backgroundTint="@color/color_3D3755" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <FrameLayout
        android:id="@+id/flData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalWinningsValue">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:padding="@dimen/dimen_24dp"
            android:visibility="gone"
            tools:itemCount="4"
            tools:listitem="@layout/core_ui_cell_gold_breakdown" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>