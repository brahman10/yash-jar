<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">

                    <RelativeLayout
                        android:id="@+id/goldLeaseTopBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:background="@drawable/feature_transaction_bg_black_transparent_30_rounded_8dp"
                        android:backgroundTint="#14FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGoldLeaseAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:layout_marginBottom="@dimen/dimen_8dp"
                            android:drawableStart="@drawable/feature_transaction_ic_lock"
                            android:drawableTint="@color/white"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="2g gold leased"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:lineHeight="@dimen/dimen_18sp" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="-24dp"
                        android:alpha="0.2"
                        android:rotation="-30"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvGoldInLocker"
                        app:srcCompat="@drawable/feature_transaction_ic_jar_shield" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLockerTitle"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:drawablePadding="8dp"
                        android:text="@string/feature_sell_gold_gold_in_locker"
                        app:drawableStartCompat="@drawable/feature_transaction_ic_locker"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/goldLeaseTopBar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGoldInLocker"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="@id/tvLockerTitle"
                        app:layout_constraintTop_toBottomOf="@id/tvLockerTitle"
                        tools:text="1.2345 gm" />

                    <LinearLayout
                        android:id="@+id/llDropDownArrow"
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:background="@drawable/border_8dp_white_border"
                        app:layout_constraintStart_toEndOf="@id/tvGoldInLocker"
                        app:layout_constraintTop_toTopOf="@id/tvGoldInLocker"
                        android:weightSum="1"
                        app:layout_constraintBottom_toBottomOf="@id/tvGoldInLocker">
                        <com.jar.app.core_ui.widget.RotatingImageView
                            android:id="@+id/ivExpand"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/top_arrow"
                            android:layout_gravity="center"
                            android:rotation="180"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/includeGoldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#624B2D"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingEnd="@dimen/dimen_15dp"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:background="@drawable/ic_include_gold_label"
                        app:layout_constraintLeft_toLeftOf="@id/tvGoldInLocker"
                        app:layout_constraintTop_toBottomOf="@id/tvGoldInLocker"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCurrentValueTitle"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="17dp"
                        android:text="@string/feature_transaction_current_value"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@id/valueSeparator"
                        app:layout_constraintTop_toBottomOf="@id/includeGoldLabel" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCurrentValue"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/tvCurrentValueTitle"
                        app:layout_constraintTop_toBottomOf="@id/tvCurrentValueTitle"
                        tools:text="123456" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierAllowsGoneWidgets="true"
                        app:barrierDirection="end"
                        app:barrierMargin="24dp"
                        app:constraint_referenced_ids="tvCurrentValue,tvInvestedValueTitle, valueSeparator" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInvestedValueTitle"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/feature_transaction_invested_value"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@id/tvGoldInLocker"
                        app:layout_constraintTop_toBottomOf="@id/includeGoldLabel" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInvestedValue"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/tvInvestedValueTitle"
                        app:layout_constraintTop_toBottomOf="@id/tvInvestedValueTitle"
                        tools:text="1,23393" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/investedValueBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="tvInvestedValue, tvInvestedValueTitle" />

                    <View
                        android:id="@+id/valueSeparator"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/dimen_50dp"
                        app:layout_constraintEnd_toStartOf="@id/tvCurrentValue"
                        app:layout_constraintStart_toEndOf="@id/investedValueBarrier"
                        app:layout_constraintTop_toTopOf="@id/tvInvestedValueTitle"
                        app:layout_constraintBottom_toBottomOf="@id/tvInvestedValue"/>

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/txnGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="tvCurrentValueTitle,tvCurrentValue,tvInvestedValue,tvInvestedValueTitle, valueSeparator" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/btnTopBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="tvInvestedValue, tvCurrentValue, includeGoldLabel, llJarWinningsFooter"/>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/jarWinningsFooterBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="tvInvestedValue, tvCurrentValue, includeGoldLabel"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llJarWinningsFooter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/dimen_12dp"
                        android:paddingVertical="@dimen/dimen_4dp"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/jarWinningsFooterBarrier">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivJarWinningsFooter"
                            android:layout_width="@dimen/dimen_12dp"
                            android:layout_height="@dimen/dimen_12dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvJarWinningsFooter"
                            style="@style/SmallTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_8dp"
                            android:gravity="start"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <FrameLayout
                        android:id="@+id/btnPrimaryCta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16dp"
                        android:background="@drawable/feature_transaction_bg_black_transparent_30_rounded_8dp"
                        tools:drawableStartCompat="@drawable/feature_transaction_ic_gold_brick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnTopBarrier"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPrimaryCta"
                            style="@style/CommonTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp"
                            tools:text="@string/feature_transaction_sell_gold"
                            tools:drawableStartCompat="@drawable/feature_transaction_ic_gold_brick" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/bgColor"
                android:visibility="visible"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <so.plotline.insights.PlotlineWidget
                        android:id="@+id/pwGoldTransactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHistory"
                        style="@style/BigTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:drawablePadding="8dp"
                        android:text="@string/feature_transaction_history"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/feature_transaction_ic_timer_clock"
                        app:drawableTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/btnContactUs"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnContactUs" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnFilter"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/feature_transaction_bg_rounded_3c3357_6dp"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/feature_transaction_filter"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/feature_transaction_ic_filter"
                        app:layout_constraintEnd_toStartOf="@id/btnContactUs"
                        app:layout_constraintTop_toBottomOf="@id/pwGoldTransactions"
                        app:tint="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnContactUs"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/feature_transaction_bg_rounded_3c3357_6dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/contact_us"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_whatsapp_help_support_20dp"
                        app:layout_constraintBottom_toBottomOf="@id/btnFilter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnFilter" />

                    <com.jar.app.core_ui.widget.NestedScrollableHost
                        android:id="@+id/nsh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnContactUs">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedFilters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_3c3357"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/feature_transaction_cell_filter_chips" />
                    </com.jar.app.core_ui.widget.NestedScrollableHost>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.jar.app.core_ui.widget.SmartNestedScrollView
            android:id="@+id/svNested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgDarkColor"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/feature_transaction_cell_transaction_winning" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                        <include layout="@layout/feature_transaction_cell_investment_history_transaction" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <include
                    android:id="@+id/emptyLayout"
                    layout="@layout/feature_transaction_empty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.jar.app.core_ui.widget.SmartNestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>