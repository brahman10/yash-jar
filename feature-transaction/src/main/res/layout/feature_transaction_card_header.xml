<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/core_ui_bg_rounded_10dp_3c3357">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDetails"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_black_bg_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDetailsIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDetailsTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            tools:text="Gold Lease"
            android:gravity="start"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/CommonBoldTextViewStyle"
            app:layout_constraintTop_toTopOf="@id/ivDetailsIcon"
            app:layout_constraintStart_toEndOf="@id/ivDetailsIcon"
            app:layout_constraintEnd_toStartOf="@id/tvDetailsValue"
            android:layout_marginHorizontal="@dimen/dimen_15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDetailsDescription"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            tools:text="To Radhe Shyaam Jewellars"
            android:gravity="start"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/SmallTextViewStyle"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsTitle"
            app:layout_constraintStart_toStartOf="@id/tvDetailsTitle"
            app:layout_constraintEnd_toEndOf="@id/tvDetailsTitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDetailsValue"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            tools:text="2.0 gm"
            style="@style/CommonBoldTextViewStyle"
            app:layout_constraintTop_toTopOf="@id/tvDetailsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimen_15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSubIcon"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSubTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitle"
        tools:src="@drawable/feature_transaction_ic_lock" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:gravity="start"
        android:textColor="@color/color_D5CDF2"
        android:layout_marginVertical="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSubIcon"
        app:layout_constraintTop_toBottomOf="@id/clDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>