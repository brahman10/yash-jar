<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTxnRoutineTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Order placement"
        android:gravity="start"
        style="@style/SmallTextViewStyle"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintEnd_toStartOf="@id/tvTxnRoutineStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTxnRoutineDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Order placement"
        android:gravity="start"
        android:layout_marginTop="@dimen/dimen_10dp"
        style="@style/SmallTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTxnRoutineStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallBoldTextViewStyle"
        app:textAllCaps="false"
        tools:background="@drawable/core_ui_bg_rounded_green_273442_6dp"
        tools:text="Success"
        android:textColor="@color/color_58DDC8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTxnRoutineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        android:textSize="10sp"
        android:textColor="@color/color_ACA1D3"
        tools:text="02 Mar â€™23, 5:15pm"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/tvTxnRoutineStatus"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvTxnRoutineStatus, tvTxnRoutineDate"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvTxnRoutineDescription, divider"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_3c3457"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnCta"
        android:layout_width="108dp"
        android:layout_height="36dp"
        app:buttonRadius="4dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        tools:buttonText="Retry"
        android:visibility="gone"
        app:layout_constraintHeight_min="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier2"
        app:layout_constraintWidth_min="108dp" />

</androidx.constraintlayout.widget.ConstraintLayout>