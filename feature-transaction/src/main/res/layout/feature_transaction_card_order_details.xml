<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_black_bg_10dp"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallBoldTextViewStyle"
        android:textColor="@color/color_D5CDF2"
        app:textAllCaps="false"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="@id/ivExpandOrderDetails"
        app:layout_constraintBottom_toBottomOf="@id/ivExpandOrderDetails"
        app:layout_constraintEnd_toStartOf="@id/ivExpandOrderDetails"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lease Details"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpandOrderDetails"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:src="@drawable/core_ui_ic_arrow_down"
        android:padding="@dimen/dimen_4dp"
        app:tint="@color/color_ACA1D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/elOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        app:el_duration="200"
        app:el_parallax="0.5"
        app:el_expanded="false"
        app:layout_constraintTop_toBottomOf="@id/ivExpandOrderDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="4" />
    </net.cachapa.expandablelayout.ExpandableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>