<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_black_bg_16dp"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderTransactionStatus"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feature_transaction_transaction_status"
        app:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTransactionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTransactionStatus">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTransactionRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="4"
            tools:listitem="@layout/feature_transaction_cell_transaction_routine" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvError"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:background="@drawable/feature_transaction_background_green_ticker_12dp"
            android:backgroundTint="@color/color_EB6A6E"
            android:paddingStart="18dp"
            android:paddingTop="12dp"
            android:paddingEnd="18dp"
            android:paddingBottom="12dp"
            android:textColor="@color/white"
            tools:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rvTransactionRoutine"
            tools:text="Our gold partner is facing a temporary technical issue. Please try again later. Any money deducted will be refunded back to your account" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnViewInvoice"
            style="@style/CommonTextViewStyle"
            android:layout_width="164dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_7745ff"
            app:buttonDrawableStart="@drawable/feature_transaction_ic_download"
            app:buttonDrawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:buttonText="@string/feature_transaction_download_invoice"
            android:textSize="14sp"
            android:visibility="visible"
            app:drawableTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvError" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnSendReminder"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/bg_rounded_corner_20dp"
            android:backgroundTint="@color/color_7745ff"
            android:drawableStart="@drawable/core_ui_ic_whatsapp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/feature_vasooli_send_reminder"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/btnViewInvoice"
            app:layout_constraintTop_toBottomOf="@+id/tvError" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnRetry"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/feature_transaction_round_black_grey_border_24dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/try_again"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/feature_transaction_ic_reload"
            app:drawableTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnViewInvoice" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
