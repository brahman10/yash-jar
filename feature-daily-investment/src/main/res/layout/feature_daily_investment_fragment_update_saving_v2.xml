<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolBar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tvActiveDSAmount"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvYouCanSave"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:elevation="@dimen/dimen_1dp"
            android:textSize="@dimen/dimen_22sp"
            android:translationZ="@dimen/dimen_1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="You can save ₹9000↑️" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInXMonthsBy"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:elevation="@dimen/dimen_1dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            android:translationZ="@dimen/dimen_1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvYouCanSave"
            tools:text="In 6 months by saving" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOldDsNewDsDaily"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:elevation="@dimen/dimen_1dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:translationZ="@dimen/dimen_1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInXMonthsBy"
            tools:text="$20 $50 daily" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/graphLottie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"
            tools:layout_constraintHeight_min="250dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActiveDSAmount"
        style="@style/CommonTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/core_ui_bg_top_rounded_corner"
        android:backgroundTint="@color/lightBgColor"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/feature_daily_investment_current_daily_saving_amount"
        android:textColor="@color/color_D5CDF2"
        app:layout_constraintBottom_toTopOf="@id/clSelectAmountContainer"
        app:layout_constraintTop_toTopOf="@id/clSelectAmountContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectAmountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/core_ui_bg_top_rounded_corner"
        android:backgroundTint="@color/bgColor"
        android:padding="@dimen/dimen_16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnterAmount"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:gravity="start"
            android:text="@string/feature_daily_investment_select_amount"
            android:textColor="@color/color_D2C7F6"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAmountEditBoxHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/feature_daily_investment_bg_rounded_outline_7745ff_12dp"
            android:imeOptions="actionDone"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterAmount">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@null"
                android:drawableStart="@drawable/feature_daily_investment_ic_rs_sign"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="7"
                android:minWidth="80dp"
                android:paddingHorizontal="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEditIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12dp"
                android:background="?attr/actionBarItemBackground"
                android:padding="@dimen/dimen_4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/core_ui_ic_edit" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvErrorMessage"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_EB6A6E"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/clSelectAmountContainer"
            app:layout_constraintTop_toBottomOf="@id/clAmountEditBoxHolder"
            tools:text="Enter a correct amount"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuggestedAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvErrorMessage"
            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/feature_daily_investment_cell_suggested_gold_amount"
            tools:orientation="horizontal" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnProceed"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/dimen_14dp"
            app:buttonText="Proceed"
            app:buttonType="primaryButton"
            app:layout_constraintBottom_toTopOf="@id/tvSafeAndSecure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvSuggestedAmount" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSafeAndSecure"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTint="@color/color_58DDC8"
            android:text="@string/feature_daily_investment_safe_and_secure"
            android:textAllCaps="true"
            android:textColor="@color/color_58DDC8"
            app:drawableStartCompat="@drawable/core_ui_ic_shield_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>