<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginBottom="@dimen/dimen_24dp"
        app:layout_constraintBottom_toTopOf="@+id/clBottomContainer"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPausedHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_43353B"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPausedFor"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/feature_daily_investment_daily_saving_paused_for_n_days"
                    android:textColor="@color/color_ebb46a"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAutoResumingOn"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@string/feature_daily_investment_auto_resuming_on_n"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPausedFor" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSetupDetailTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/feature_daily_investment_setup_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clPausedHolder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSetupDoneAt"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="@string/feature_daily_investment_daily_saving_was_setup_on_n"
                android:textColor="@color/smallTxtColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSetupDetailTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvActiveStatus"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/feature_daily_investment_bg_active_status"
                android:paddingHorizontal="@dimen/dimen_8dp"
                android:paddingVertical="@dimen/dimen_4dp"
                android:text="@string/feature_daily_investment_active"
                android:textColor="@color/greenTxtColor"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintBottom_toBottomOf="@id/tvSetupDetailTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSetupDetailTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSetupDetailHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:background="@drawable/feature_daily_investment_bg_daily_saving_setup_detail"
                android:clipChildren="true"
                android:clipToOutline="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSetupDoneAt">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountTitle"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="@string/core_ui_amount"
                    android:textColor="@color/smallTxtColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountValue"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_18dp"
                    app:layout_constraintBottom_toBottomOf="@id/tvAmountTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvAmountTitle"
                    tools:text="20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFrequencyTitle"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:layout_marginTop="@dimen/dimen_18dp"
                    android:text="@string/core_ui_frequency"
                    android:textColor="@color/smallTxtColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAmountTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFrequencyValue"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_18dp"
                    android:text="@string/feature_daily_investment_daily"
                    app:layout_constraintBottom_toBottomOf="@id/tvFrequencyTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvFrequencyTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChangeAmount"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:layout_marginBottom="@dimen/dimen_1dp"
                    android:background="@drawable/feature_daily_investment_bg_daily_saving_change_amount"
                    android:drawableEnd="@drawable/feature_daily_investment_right_chevron"
                    android:paddingHorizontal="@dimen/dimen_18dp"
                    android:paddingVertical="@dimen/dimen_12dp"
                    android:text="@string/feature_daily_investment_change_amount"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFrequencyTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/separatorView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="@color/purple400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clSetupDetailHolder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAutoSaveDetailTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/feature_daily_investment_auto_save_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separatorView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMoneyAutoDebit"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="@string/feature_daily_investment_money_will_be_debited_automatically"
                android:textColor="@color/smallTxtColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAutoSaveDetailTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAutoSaveDetailHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMoneyAutoDebit">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAutoSaveDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/feature_daily_investment_bg_daily_saving_auto_save_detail"
                    android:overScrollMode="never"
                    android:paddingVertical="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="3"
                    tools:listitem="@layout/core_ui_cell_label_and_value" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTrackSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@drawable/rounded_black_bg_8dp"
                android:backgroundTint="@color/color_492B9D"
                android:padding="@dimen/dimen_18dp"
                app:layout_constraintTop_toBottomOf="@id/clAutoSaveDetailHolder">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTrackSavings"
                    style="@style/CommonBoldTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_daily_investment_track_my_savings"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_12dp"
                    android:layout_height="@dimen/dimen_12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/feature_daily_investment_right_chevron"
                    app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottomContainer"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnDailySavingPrimaryAction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="22dp"
            android:visibility="gone"
            app:buttonRadius="@dimen/dimen_4dp"
            app:buttonText="@string/feature_daily_investment_resume"
            app:buttonType="primaryButton"
            app:layout_constraintBottom_toTopOf="@id/btnDailySavingSecondaryAction"
            app:layout_constraintHeight_min="54dp"
            tools:visibility="visible" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnDailySavingSecondaryAction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="22dp"
            app:buttonBackgroundColor="@color/bgColor"
            app:buttonBorderWidth="1dp"
            app:buttonTextColor="@color/white"
            app:buttonRadius="@dimen/dimen_4dp"
            app:buttonStrokeColor="@color/color_6038CE"
            app:buttonText="@string/feature_daily_investment_stop_daily_saving"
            app:buttonType="secondaryButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_min="54dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
