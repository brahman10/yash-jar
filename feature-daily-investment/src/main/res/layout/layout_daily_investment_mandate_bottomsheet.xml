<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_top_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/inter_bold"
        android:text="Letâ€™s automate your savings"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:lineHeight="28sp"
        android:textFontWeight="700" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_80776E94"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading"
        app:layout_constraintBottom_toTopOf="@id/rvMandateStatus" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMandateStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:text="Select payment method"
        android:fontFamily="@font/inter"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintBottom_toTopOf="@id/cvPreferredBankTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvMandateStatus" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvPreferredBankTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        android:visibility="gone"
        android:background="@drawable/bg_rounded_4dp_2f451"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentOptions"
        app:layout_constraintBottom_toTopOf="@id/rvPaymentOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        tools:text="Recommended bank for you"
        android:textColor="@color/color_58DDC8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPreferredBankTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/color_58DDC8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Recommended bank for you"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPreferredBankLogo"
            android:layout_width="@dimen/dimen_18dp"
            android:layout_height="@dimen/dimen_14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPreferredBankName"
            app:layout_constraintStart_toStartOf="@id/tvPreferredBankTitle"
            app:layout_constraintTop_toBottomOf="@id/tvPreferredBankTitle"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPreferredBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/inter_bold"
            tools:text="Kotak Mahindra Bank"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPreferredBankLogo"
            app:layout_constraintTop_toBottomOf="@id/tvPreferredBankTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPaymentOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/btnProceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/layout_daily_investment_payment_option_cell" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnProceed"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        app:buttonText="Procced"
        android:elevation="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tvFooter"
        app:layout_constraintBottom_toBottomOf="@id/tvFooter"
        app:layout_constraintEnd_toStartOf="@id/tvFooter"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:src="@drawable/ic_verified_dailysavings"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/dimen_12sp"
        app:lineHeight="@dimen/dimen_12dp"
        android:textFontWeight="600"
        android:textColor="@color/color_1EA787"
        android:text="@string/feature_daily_investment_100_safe_and_secure"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>