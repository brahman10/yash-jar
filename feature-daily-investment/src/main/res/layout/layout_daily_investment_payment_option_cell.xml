<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/cvPaymentOptionLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPaymentOptionLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:elevation="-1dp"
            app:shapeAppearance="@style/curvedImageView11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/avatars"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTick"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="-16.5dp"
        android:layout_marginBottom="-16.5dp"
        app:layout_constraintStart_toEndOf="@id/cvPaymentOptionLogo"
        app:layout_constraintBottom_toTopOf="@id/cvPaymentOptionLogo"
        android:elevation="@dimen/dimen_1dp"
        android:visibility="invisible"
        android:src="@drawable/ic_tick_scondary_green"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintStart_toStartOf="@id/cvPaymentOptionLogo"
        app:layout_constraintEnd_toEndOf="@id/cvPaymentOptionLogo"
        app:layout_constraintTop_toBottomOf="@id/cvPaymentOptionLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/inter"
        android:textFontWeight="400"
        android:textSize="@dimen/dimen_12dp"
        app:lineHeight="@dimen/dimen_20dp"
        tools:text="Paytm"/>

</androidx.constraintlayout.widget.ConstraintLayout>