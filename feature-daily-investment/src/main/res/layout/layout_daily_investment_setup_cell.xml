<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="wrap_content"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvJarLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:visibility="visible"
        app:flow_verticalBias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJarValue"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/feature_daily_investment_amount_selection_popup_bg1"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:elevation="1dp"
            android:maxLines="1"
            android:paddingVertical="@dimen/dimen_10dp"
            android:paddingHorizontal="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:lineHeight="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="6.03L" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBottomContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/daily_saving_setting_pop_up_bg"
            android:minHeight="35dp"
            android:layout_marginTop="-8dp"
            app:layout_constraintEnd_toEndOf="@+id/cvJarLabel"
            app:layout_constraintStart_toStartOf="@+id/cvJarLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvJarValue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvJar3ViewLabel"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.03g"
                    android:textColor="@color/color_FFDA2D"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:minHeight="42dp"
                    android:textSize="12sp"
                    android:lineHeight="@dimen/dimen_16dp"
                    app:layout_constraintStart_toEndOf="@+id/ivJar3LabelDrawable"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivJar3LabelDrawable"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/gold_brick_with_stars_36x36"
                    app:layout_constraintBottom_toBottomOf="@+id/tvJar3ViewLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvJar3ViewLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivJar"
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        app:flow_horizontalBias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvJarLabel"
        app:layout_constraintTop_toBottomOf="@+id/cvJarLabel"
        tools:src="@tools:sample/avatars"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJarLabel"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:paddingHorizontal="8.5dp"
        android:paddingVertical="4.5dp"
        android:background="@drawable/rounded_dark_bg_8dp"
        app:layout_constraintEnd_toEndOf="@id/ivJar"
        app:layout_constraintStart_toStartOf="@id/ivJar"
        app:layout_constraintTop_toBottomOf="@id/ivJar"
        tools:text="1 Y" />

</androidx.constraintlayout.widget.ConstraintLayout>