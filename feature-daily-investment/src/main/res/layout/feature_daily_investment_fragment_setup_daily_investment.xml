<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        tools:background="@color/bgColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/custom_toolbar_default_revamped"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/actionBarItemBackground"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/core_ui_ic_close"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feature_daily_investment_bg_rounded_green_12dp"
            android:backgroundTint="@color/lightBgColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clToolbarContainer">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeaderStartInvesting"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:gravity="start|center_vertical"
                android:text="@string/feature_daily_investment_start_daily_saving"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lineHeight="30sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start|center_vertical"
                android:maxWidth="160dp"
                android:text="@string/feature_daily_investment_save_daily_on_jar_and_watch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeaderStartInvesting" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/feature_daily_investment_bg_daily_saving"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDescription" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintBottom_toBottomOf="@id/tvDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvHeaderStartInvesting"
                app:srcCompat="@drawable/feature_daily_investment_ic_daily_saving_coin_and_calender" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/bg_rounded_corner_24dp"
                android:backgroundTint="@color/color_43353B"
                android:drawableStart="@drawable/feature_daily_investment_ic_buy_gold_bar"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:paddingVertical="7dp"
                android:text="@string/feature_daily_investment_your_money_is_invested_in_24_k_gold"
                android:textColor="@color/color_FFDA2D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCoin" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderHowMuchToInvest"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:text="@string/feature_daily_investment_enter_amount"
            android:textColor="@color/white"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clHeader" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_black_bg_16dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderHowMuchToInvest">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rsSymbol"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/feature_daily_investment_currency_sign"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="24dp"
                android:background="@color/color_707070_opacity_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rsSymbol"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etBuyAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="start|center_vertical"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@color/color_EEEAFF"
                android:textColorHint="@color/color_ACA1D3"
                android:textSize="20sp"
                app:fontFamily="@font/inter_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/line1"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText">

                <requestFocus />
            </androidx.appcompat.widget.AppCompatEditText>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvErrorMessage"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_EB6A6E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clAmount" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuggestedAmounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingHorizontal="4dp"
            app:layout_constraintEnd_toEndOf="@id/clAmount"
            app:layout_constraintStart_toStartOf="@id/clAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvErrorMessage"
            tools:itemCount="6"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/feature_daily_investment_cell_suggested_gold_amount"
            tools:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMaxInvestLimit"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvSuggestedAmounts"
            tools:text="@string/feature_daily_investment_you_can_invest_up_to_n_per_day" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:barrierDirection="top"
            app:constraint_referenced_ids="btnSetDailyInvestment"
            app:layout_constraintTop_toBottomOf="@id/tvMaxInvestLimit" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnSetDailyInvestment"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            app:buttonText="@string/feature_daily_investment_set_daily_amount"
            app:buttonTextAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/tvPoweredByUpi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPoweredByUpi"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:drawableEnd="@drawable/core_upi_ic_upi"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/feature_daily_investment_powered_by"
            android:textColor="#776E94"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btnSetDailyInvestment"
            app:layout_constraintStart_toStartOf="@id/btnSetDailyInvestment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>