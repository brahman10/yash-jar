<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgColor"
    android:fillViewport="true"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbarThumbVertical="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        android:background="@color/bgColor">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCelebration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/transparent"
            app:layout_constraintBottom_toTopOf="@id/clStatusContainer"
            app:layout_constraintEnd_toEndOf="@id/clStatusContainer"
            app:layout_constraintStart_toStartOf="@id/clStatusContainer"
            app:layout_constraintTop_toTopOf="@id/clStatusContainer"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_20dp"
            android:background="@drawable/feature_gold_lease_bg_ticket_v2"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="12dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPostOrderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/BigTextViewStyle"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="85dp"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                tools:text="Your Lease activation is successful"
                android:gravity="center"
                android:textSize="@dimen/dimen_18sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDetails"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_bg_10dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/tvPostOrderTitle"
                android:padding="@dimen/dimen_16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDetailsIcon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDetailsTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    tools:text="Gold Lease"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/dp_5"
                    style="@style/CommonBoldTextViewStyle"
                    app:layout_constraintTop_toTopOf="@id/ivDetailsIcon"
                    app:layout_constraintStart_toEndOf="@id/ivDetailsIcon"
                    app:layout_constraintEnd_toStartOf="@id/tvDetailsValue"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDetailsDescription"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    tools:text="To Radhe Shyaam Jewellars"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/dp_5"
                    style="@style/SmallTextViewStyle"
                    android:textColor="@color/color_ACA1D3"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailsTitle"
                    app:layout_constraintStart_toStartOf="@id/tvDetailsTitle"
                    app:layout_constraintEnd_toEndOf="@id/tvDetailsTitle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDetailsValue"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    tools:text="2.0 gm"
                    style="@style/CommonBoldTextViewStyle"
                    app:layout_constraintTop_toTopOf="@id/tvDetailsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/dimen_15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="-10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/core_ui_bg_circle_white"
                android:backgroundTint="@color/bgColor"
                android:elevation="10dp"
                android:translationX="10dp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@id/dottedLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dottedLine" />

            <View
                android:id="@+id/dottedLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/core_ui_dotted_line"
                android:elevation="9dp"
                android:translationZ="9dp"
                app:layout_constraintTop_toBottomOf="@id/clDetails" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llTransactionStatus"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_bg_10dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/dottedLine"
                android:padding="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTransactionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallBoldTextViewStyle"
                    android:textColor="@color/color_D5CDF2"
                    app:textAllCaps="false"
                    tools:text="Gold Lease"
                    android:gravity="start"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactionRoutine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="4" />

                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btnDownloadInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    app:buttonType="secondaryHollowButton"
                    app:buttonStrokeColor="@color/color_584295"
                    app:buttonBackgroundColor="@color/color_2E2942"
                    android:layout_gravity="center"
                    app:buttonDrawablePadding="@dimen/dimen_12dp"
                    app:buttonDrawableStart="@drawable/feature_gold_lease_ic_download"
                    app:buttonText="@string/feature_gold_lease_download_invoice" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLeaseDetails"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_bg_10dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/llTransactionStatus"
                android:padding="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLeaseTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    style="@style/SmallBoldTextViewStyle"
                    android:textColor="@color/color_D5CDF2"
                    app:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="@id/ivExpandLeaseDetails"
                    app:layout_constraintBottom_toBottomOf="@id/ivExpandLeaseDetails"
                    app:layout_constraintEnd_toStartOf="@id/ivExpandLeaseDetails"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Lease Details"
                    android:gravity="start"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivExpandLeaseDetails"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="@drawable/core_ui_ic_arrow_down"
                    android:padding="@dimen/dimen_4dp"
                    app:tint="@color/color_ACA1D3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/elLeaseDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    app:el_duration="200"
                    app:el_parallax="0.5"
                    app:el_expanded="false"
                    app:layout_constraintTop_toBottomOf="@id/ivExpandLeaseDetails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLeaseDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_18dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="4" />
                </net.cachapa.expandablelayout.ExpandableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOrderDetails"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_bg_10dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/clLeaseDetails"
                android:padding="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SmallBoldTextViewStyle"
                    android:textColor="@color/color_D5CDF2"
                    app:textAllCaps="false"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    app:layout_constraintTop_toTopOf="@id/ivExpandOrderDetails"
                    app:layout_constraintBottom_toBottomOf="@id/ivExpandOrderDetails"
                    app:layout_constraintEnd_toStartOf="@id/ivExpandOrderDetails"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Lease Details"
                    android:gravity="start"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivExpandOrderDetails"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="@drawable/core_ui_ic_arrow_down"
                    android:padding="@dimen/dimen_4dp"
                    app:tint="@color/color_ACA1D3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/elOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    app:el_duration="200"
                    app:el_parallax="0.5"
                    app:el_expanded="false"
                    app:layout_constraintTop_toBottomOf="@id/ivExpandOrderDetails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="4" />
                </net.cachapa.expandablelayout.ExpandableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnPrimaryCta"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            tools:buttonText="Retry"
            android:visibility="gone"
            app:layout_constraintHeight_min="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/clStatusContainer" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btnPrimaryCta, clStatusContainer" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnSecondaryCta"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            tools:buttonText="Retry"
            android:visibility="gone"
            app:buttonType="secondaryHollowButton"
            app:buttonStrokeColor="@color/color_584295"
            app:buttonBackgroundColor="@color/bgColor"
            app:layout_constraintHeight_min="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/barrier1" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btnPrimaryCta, btnSecondaryCta, clStatusContainer"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupContactUs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="divider, llContactUs"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            android:background="@color/color_3c3457"
            android:layout_marginHorizontal="30dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llContactUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_gold_lease_need_help"
                style="@style/BigTextViewStyle"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/feature_gold_lease_ic_chat"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="@string/core_ui_contact_support"
                style="@style/CommonBoldTextViewStyle"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStatus"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@id/clStatusContainer"
            app:layout_constraintEnd_toEndOf="@id/clStatusContainer"
            app:layout_constraintStart_toStartOf="@id/clStatusContainer"
            app:layout_constraintTop_toTopOf="@id/clStatusContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>