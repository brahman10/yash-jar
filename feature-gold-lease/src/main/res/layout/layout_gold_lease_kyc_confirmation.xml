<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/feature_gold_lease_bg_top_rounded_272239">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHeader"
                    style="@style/BigTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/feature_gold_lease_confirm_your_details"
                    android:textSize="24sp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toStartOf="@id/ivClose"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/core_ui_ic_close"
                    app:layout_constraintBottom_toBottomOf="@id/tvHeader"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintTop_toTopOf="@id/tvHeader"
                    app:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/feature_gold_lease_please_confirm_your_pan_details_and_email"
                    android:textStyle="normal"
                    android:textColor="@color/color_ACA1D3"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader" />

                <com.jar.app.core_ui.widget.IdentityCardView
                    android:id="@+id/identityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    app:layout_constraintTop_toBottomOf="@+id/heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/email_heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapCharacters"
                    android:text="@string/feature_gold_lease_email"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/identityView" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_gold_lease_enter_your_email"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="80dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/email_heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmail"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="80dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/email_heading" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="etEmail, tvEmail"
                    app:barrierDirection="bottom" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lease_to_email_heading"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textCapCharacters"
                    android:text="@string/feature_gold_lease_details_will_be_sent_to_your_email"
                    android:textColor="@color/color_ebb46a"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/barrier" />

                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btnConfirmAndVerify"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="30dp"
                    app:buttonText="@string/feature_gold_lease_confirm_and_verify"
                    app:buttonTextAllCaps="false"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintHeight_min="54dp"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@id/lease_to_email_heading" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="lease_to_email_heading, email_heading, etEmail"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>