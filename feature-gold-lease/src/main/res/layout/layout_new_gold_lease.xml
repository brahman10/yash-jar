<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="20dp"
    android:background="@drawable/feature_gold_lease_bg_top_rounded_272239">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        android:text="@string/feature_gold_lease_choose_gold_quantity_to_lease"
        android:textColor="@color/color_D5CDF2"/>

    <View
        android:id="@+id/ivMinusDimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@drawable/feature_gold_lease_bg_circle_dark"
        android:clickable="false"
        android:elevation="12dp"
        android:focusable="false"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="@+id/ivMinus"
        app:layout_constraintEnd_toEndOf="@+id/ivMinus"
        app:layout_constraintStart_toStartOf="@+id/ivMinus"
        app:layout_constraintTop_toTopOf="@+id/ivMinus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMinus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/feature_gold_lease_ic_minus"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="@id/leftGuide" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoldVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BigTextViewStyle"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/ivPlus"
        app:layout_constraintBottom_toBottomOf="@id/ivPlus"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/ivMinus"
        app:layout_constraintEnd_toStartOf="@id/ivPlus"
        tools:text="@string/feature_gold_lease_x_gm_round_to_1"/>

    <View
        android:id="@+id/ivPlusDimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@drawable/feature_gold_lease_bg_circle_dark"
        android:clickable="false"
        android:elevation="12dp"
        android:focusable="false"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlus"
        app:layout_constraintEnd_toEndOf="@+id/ivPlus"
        app:layout_constraintStart_toStartOf="@+id/ivPlus"
        app:layout_constraintTop_toTopOf="@+id/ivPlus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/feature_gold_lease_ic_plus"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progress="20"
        android:splitTrack="false"
        app:layout_constraintTop_toBottomOf="@id/tvGoldVolume"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        android:progressDrawable="@drawable/core_ui_seekbar_progress"
        android:thumb="@drawable/core_ui_ic_progress_bar_thumb" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMinVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="@id/seekBar"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="@string/feature_gold_lease_x_gm_round_to_1"
        android:textColor="@color/color_ACA1D3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMaxVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="@id/seekBar"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="@string/feature_gold_lease_x_gm_round_to_1"
        android:textColor="@color/color_ACA1D3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUseJarGold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toTopOf="@id/switchLocker"
        app:layout_constraintBottom_toBottomOf="@id/switchLocker"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toStartOf="@id/switchLocker"
        android:gravity="start"
        android:layout_marginEnd="10dp"
        android:text="@string/feature_gold_lease_use_jar_gold_x_gm"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchLocker"
        style="@style/SwitchStyleWithOnOffTextThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvMaxVolume"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        android:layout_marginTop="25dp"
        app:switchMinWidth="0dp"
        app:switchPadding="0dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_776e94"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@id/switchLocker"
        android:layout_marginTop="25dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPayableAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonBoldTextViewStyle"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        android:layout_marginTop="16dp"
        android:text="@string/feature_gold_lease_rupee_prefix_string"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPayableAmountDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toTopOf="@id/tvPayableAmount"
        app:layout_constraintBottom_toBottomOf="@id/tvPayableAmount"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toStartOf="@id/tvPayableAmount"
        android:textColor="@color/white"
        android:gravity="start"
        android:layout_marginEnd="10dp"
        android:text="@string/feature_gold_lease_balance_payable_for_x_gm"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnProceed"
        android:layout_height="56dp"
        android:layout_width="0dp"
        android:layout_marginTop="25dp"
        app:buttonTextAllCaps="false"
        app:buttonText="@string/feature_gold_lease_proceed"
        app:layout_constraintHeight_min="54dp"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintTop_toBottomOf="@id/tvPayableAmount" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvUseJarGold, switchLocker" />

</androidx.constraintlayout.widget.ConstraintLayout>