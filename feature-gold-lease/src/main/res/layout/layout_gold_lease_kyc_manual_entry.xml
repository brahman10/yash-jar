<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_gold_lease_bg_top_rounded_272239"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHeader"
                    style="@style/BigTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/feature_gold_lease_enter_your_details"
                    android:textSize="24sp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toStartOf="@id/ivClose"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/core_ui_ic_close"
                    app:layout_constraintBottom_toBottomOf="@id/tvHeader"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintTop_toTopOf="@id/tvHeader"
                    app:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pan_heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/feature_kyc_pan_number"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPan"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_kyc_pan_hint"
                    android:inputType="textNoSuggestions|textCapCharacters"
                    android:maxLength="10"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="80dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/pan_heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPanErrorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SmallTextViewStyle"
                    android:textColor="@color/color_eb6a6e"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:visibility="gone"
                    android:text="@string/feature_lease_pan_number_should_be_of_10_characters"
                    app:layout_constraintTop_toBottomOf="@id/etPan"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/full_name_heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    android:inputType="textNoSuggestions"
                    android:text="@string/feature_kyc_name"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/tvPanErrorMessage" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etName"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_kyc_name_as_per_pan"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="80dp"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/full_name_heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dob_heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/feature_kyc_date_of_birth"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/etName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etDob"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:drawableEnd="@drawable/feature_kyc_ic_calender"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_kyc_select_a_date"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/dob_heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/email_heading"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/feature_gold_lease_email"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/etDob" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    style="@style/EditTextKycStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_black_bg_12dp"
                    android:gravity="start|center_vertical"
                    android:hint="@string/feature_gold_lease_enter_your_email"
                    android:minHeight="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="80dp"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/email_heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lease_to_email_heading"
                    style="@style/SmallTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/feature_gold_lease_details_will_be_sent_to_your_email"
                    android:textColor="@color/color_ebb46a"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@+id/etEmail" />

                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btnConfirmAndVerify"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="30dp"
                    app:buttonText="@string/feature_gold_lease_confirm_and_verify"
                    app:buttonTextAllCaps="false"
                    app:layout_constraintEnd_toEndOf="@id/rightGuide"
                    app:layout_constraintHeight_min="54dp"
                    app:layout_constraintStart_toStartOf="@id/leftGuide"
                    app:layout_constraintTop_toBottomOf="@id/lease_to_email_heading" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="lease_to_email_heading, email_heading, etEmail"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>