<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rounded_3c3357_12dp"
    android:padding="@dimen/dimen_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewDimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/rounded_bg_3c3357_12dp"
        android:clickable="false"
        android:elevation="12dp"
        android:focusable="false"
        android:outlineProvider="none"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJewellerIcon"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvStatus"
        app:layout_constraintTop_toTopOf="@id/tvStatus">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivJewellerIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallBoldTextViewStyle"
        app:textAllCaps="false"
        tools:background="@drawable/feature_gold_lease_bg_rounded_green_273442_6dp"
        tools:text="Success"
        android:textColor="@color/color_58DDC8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJewellerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:gravity="start"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@+id/cvJewellerIcon"
        app:layout_constraintTop_toTopOf="@id/cvJewellerIcon"
        app:layout_constraintBottom_toBottomOf="@id/cvJewellerIcon"
        tools:text="Sultania Jewellers" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLeasedGoldTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallTextViewStyle"
                android:gravity="start"
                android:textColor="@color/color_ACA1D3"
                android:textSize="10sp"
                tools:text="Leased gold"
                tools:ignore="SmallSp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLeasedGoldValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommonBoldTextViewStyle"
                android:gravity="start"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_4dp"
                tools:text="0.5 gm"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEarningsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallTextViewStyle"
                android:gravity="start"
                android:textColor="@color/color_ACA1D3"
                android:textSize="10sp"
                tools:text="Earnings pa."
                tools:ignore="SmallSp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEarningsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommonBoldTextViewStyle"
                android:gravity="start"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_4dp"
                tools:text="0.5 gm"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldXEarningsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallTextViewStyle"
                android:gravity="start"
                android:textColor="@color/color_ACA1D3"
                android:textSize="10sp"
                tools:text="GoldX Earnings"
                tools:ignore="SmallSp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldXEarningsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommonBoldTextViewStyle"
                android:gravity="start"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_4dp"
                tools:text="0.5 gm"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_776E94"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llDetails"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivArrowForward"
        android:layout_width="@dimen/dimen_14dp"
        android:layout_height="@dimen/dimen_14dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_marginTop="@dimen/dimen_18dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/color_ACA1D3"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSubIcon"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        tools:src="@drawable/ic_tick_green"
        android:layout_marginTop="@dimen/dimen_18dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        android:gravity="start"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toEndOf="@id/ivSubIcon"
        app:layout_constraintEnd_toStartOf="@id/ivArrowForward"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>