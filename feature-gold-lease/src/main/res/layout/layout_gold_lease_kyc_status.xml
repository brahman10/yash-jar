<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/feature_gold_lease_bg_top_rounded_272239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:src="@drawable/core_ui_ic_close"
            app:tint="@color/white"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            android:layout_marginTop="40dp"
            app:lottie_loop="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/feature_gold_lease_fetching_your_details"
            style="@style/CommonBoldTextViewStyle"
            android:textSize="20sp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:textColor="@color/color_EEEAFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatusDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/feature_gold_lease_verification_succesfull"
            style="@style/CommonTextViewStyle"
            android:textColor="@color/color_ACA1D3"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemainingCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            style="@style/CommonTextViewStyle"
            android:gravity="center"
            tools:text="@string/feature_gold_lease_x_attempts_remaining"
            android:textColor="@color/color_ebb46a"/>

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnTryAgain"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="16dp"
            app:buttonText="@string/feature_gold_lease_try_again" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnContactSupport"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            app:buttonBackgroundColor="@color/color_383250"
            app:buttonType="secondaryButton"
            app:buttonDrawablePadding="@dimen/dimen_8dp"
            app:buttonDrawableStart="@drawable/core_ui_ic_whatsapp_outline"
            app:buttonText="@string/contact_us"
            android:layout_marginHorizontal="16dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>