<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.jar.app.core_ui.widget.LockableNestedScrollView
        android:id="@+id/nsvContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/clCtaAndSocialProof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />
            <FrameLayout
                android:id="@+id/flBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_gold_lease_bg_landing_screen"
                app:layout_constraintBottom_toBottomOf="@id/llHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieViewArrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/llHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                android:layout_marginTop="40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLandingTitle"
                    style="@style/BigTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableBottom="@drawable/feature_gold_lease_ic_yellow_underline"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:textSize="28sp"
                    app:lineHeight="42sp"
                    tools:text="Lease your gold to \nearn upto 14% p.a" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLandingSubTitle"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:gravity="center"
                    tools:text="Start leasing with just 0.1 gm" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                android:id="@+id/layoutGoldLeaseComparison"
                layout="@layout/layout_gold_lease_v2_comparison"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/llHeader" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLandingSecondaryTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/layoutGoldLeaseComparison"
                tools:text="GoldX offerings" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUspIntentTiles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_22dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/tvLandingSecondaryTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_15dp"
                app:spanCount="2"
                tools:itemCount="4"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/cell_gold_lease_usp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.jar.app.core_ui.widget.LockableNestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCtaAndSocialProof"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnGetStarted"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:buttonText="Get Started" />

        <LinearLayout
            android:id="@+id/llSocialPresence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dimen_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.jar.app.core_ui.widget.OverlappingProfileView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customStrokeColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSocialPresence"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="start"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>