<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:centerColor="#DBC28F"
                android:endColor="#93722F"
                android:startColor="#93722F" />
            <size
                android:width="500dp"
                android:height="500dp" />
            <corners
                android:topLeftRadius="200dp"
                android:topRightRadius="200dp" />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#43090D"
                android:startColor="#9C2E33" />
            <size
                android:width="500dp"
                android:height="500dp" />
            <corners
                android:topLeftRadius="200dp"
                android:topRightRadius="200dp" />
        </shape>
    </item>

</layer-list>
