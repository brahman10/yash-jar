<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/clSelectedAmount"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSelectDays"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12dp"
                android:layout_marginTop="42dp"
                android:gravity="start"
                android:text="@string/feature_post_setup_select_the_days_you_want_to_save_for"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCalendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_marginVertical="@dimen/dimen_14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded_bg_16dp"
                android:backgroundTint="@color/color_3C3263"
                app:layout_constraintTop_toBottomOf="@id/tvSelectDays">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:background="@drawable/core_ui_bg_top_rounded_corner"
                    android:backgroundTint="@color/color_453878"
                    app:layout_constraintBottom_toTopOf="@id/calenderView"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/calenderView"
                    layout="@layout/feature_post_setup_custom_calender_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectedAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/color_3c3357"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelected"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/feature_post_setup_selected"
            android:textAllCaps="true"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectedByTotal"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/tvSelected"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="6/6" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalAmountLabel"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/feature_post_setup_total_amount"
            android:textColor="@color/color_EEEAFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalAmount"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textAllCaps="true"
            android:textColor="@color/color_EEEAFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelected"
            tools:text="$22" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnSaveNow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/dimen_22dp"
            app:buttonText="@string/feature_post_setup_save_now"
            app:buttonType="primaryButton"
            app:layout_constraintHeight_min="56dp"
            app:layout_constraintTop_toBottomOf="@id/tvTotalAmountLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>