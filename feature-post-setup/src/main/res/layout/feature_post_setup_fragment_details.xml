<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lottieCelebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:lottie_autoPlay="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDSStatesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_1dp"
        android:paddingHorizontal="@dimen/dimen_14dp"
        android:paddingVertical="@dimen/dimen_12dp"
        android:translationZ="@dimen/dimen_1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@color/color_EBB46A"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStateIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/white_opacity_30"
            android:padding="@dimen/dimen_6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/feature_post_setup_ic_pause" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStateTitle"
            style="@style/SmallBoldTextViewStyle"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimen_8dp"
            android:gravity="start"
            app:lineHeight="18sp"
            android:paddingHorizontal="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnStateAction"
            app:layout_constraintStart_toEndOf="@id/ivStateIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feature_post_setup_restart_your_daily_savings"
            tools:textColor="@color/color_2e2942" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnStateAction"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feature_post_setup_resume_now"
            tools:textColor="@color/color_724508" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bgOverlayView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.6"
        android:translationZ="@dimen/dimen_1dp"
        android:elevation="@dimen/dimen_1dp"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDSStatesContainer"
        tools:visibility="visible" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDsPostSetup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:itemCount="1"
        tools:listitem="@layout/feature_post_setup_custom_calender_view_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>