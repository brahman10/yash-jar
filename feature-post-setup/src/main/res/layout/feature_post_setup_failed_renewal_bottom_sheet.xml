<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/core_ui_bg_top_rounded_corner"
    android:backgroundTint="@color/color_3c3357"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUnableToSave"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="start"
        android:text="@string/feature_post_setup_unable_to_save_your_money"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:gravity="start"
        android:text="@string/feature_post_setup_there_has_been_recurring_failures"
        android:textColor="@color/color_ACA1D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUnableToSave"
        app:lineHeight="@dimen/dimen_20dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrentLinkedBankAccount"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="start"
        android:text="@string/feature_post_setup_current_linked_bank_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:lineHeight="@dimen/dimen_20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBankDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/feature_post_setup_rounded_hollow_outlline_776e94_8dp"
        android:paddingVertical="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentLinkedBankAccount"
        tools:itemCount="3"
        tools:listitem="@layout/core_ui_cell_label_and_value" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnUpdateAutoSave"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/dimen_16dp"
        app:buttonText="@string/feature_post_setup_update_auto_save"
        app:layout_constraintTop_toBottomOf="@id/rvBankDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>