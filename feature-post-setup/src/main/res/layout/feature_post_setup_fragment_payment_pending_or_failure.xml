<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/transparent"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toTopOf="@id/clFailureOrPendingContainer"
        app:layout_constraintEnd_toEndOf="@id/clFailureOrPendingContainer"
        app:layout_constraintStart_toStartOf="@id/clFailureOrPendingContainer"
        app:layout_constraintTop_toTopOf="@id/clFailureOrPendingContainer"
        app:lottie_autoPlay="true"
        app:lottie_loop="false" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatus"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/feature_post_setup_bg_colored_border_circle"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@id/clFailureOrPendingContainer"
        app:layout_constraintEnd_toEndOf="@id/clFailureOrPendingContainer"
        app:layout_constraintStart_toStartOf="@id/clFailureOrPendingContainer"
        app:layout_constraintTop_toTopOf="@id/clFailureOrPendingContainer"
        tools:src="@drawable/feature_post_setup_ic_payment_failure" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFailureOrPendingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/rounded_black_bg_10dp"
        android:backgroundTint="@color/color_3c3357"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoldMessageTitle"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/feature_post_setup_we_are_trying_to_buy_gold_worth_x"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            android:elevation="10dp"
            android:translationX="-10dp"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@id/dottedLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dottedLine" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            android:elevation="10dp"
            android:translationX="10dp"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@id/dottedLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dottedLine" />

        <View
            android:id="@+id/dottedLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/core_ui_dotted_line"
            android:elevation="9dp"
            android:translationZ="9dp"
            app:layout_constraintBottom_toTopOf="@id/tvReason"
            app:layout_constraintTop_toBottomOf="@id/tvGoldMessageTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReason"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="@string/feature_post_setup_it_is_taking_longer"
            android:textColor="@color/color_ACA1D3"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dottedLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnRetryOrRefresh"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="80dp"
        app:buttonRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clFailureOrPendingContainer"
        tools:buttonText="Try again" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnGoToBackToMainScreen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="16dp"
        app:buttonBackgroundColor="@color/bgColor"
        app:buttonBorderWidth="1dp"
        app:buttonRadius="4dp"
        app:buttonStrokeColor="@color/color_846FC0"
        app:buttonText="@string/feature_post_setup_go_back_to_main_screen"
        app:buttonType="secondaryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRetryOrRefresh" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btnGoToBackToMainScreen" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:alpha="0.1"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/barrier" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNeedHelp"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="@string/core_ui_need_help_question_mark"
        app:layout_constraintBottom_toTopOf="@id/tvContactSupport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactSupport"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:drawablePadding="10dp"
        android:text="@string/core_ui_contact_support"
        android:textFontWeight="600"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        app:drawableStartCompat="@drawable/ic_whatsapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>