<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_corner_rounded">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/report_this"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="@string/report_this_transaction"

        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        android:translationY="-2.11sp"
        app:layout_constraintEnd_toStartOf="@+id/ivClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="26sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/core_ui_ic_close"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/report_this"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_this" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transactionDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_transparent_grey_border_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_this">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#3C3357"
            android:scaleType="fitCenter"
            app:contentPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circleImageView"
            tools:src="@drawable/ic_spends" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSpendsTodayLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:translationY="-1.53sp"

            app:layout_constraintEnd_toStartOf="@+id/tvAmountSpent"
            app:layout_constraintStart_toEndOf="@+id/ivTransactionIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="20sp"
            tools:text="Spent today" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmountSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:translationY="-1.53sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSpendsTodayLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSpendsTodayLabel"
            app:lineHeight="21sp"
            tools:text="-100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTransactionDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/color_ACA1D3"
            android:textSize="12sp"
            android:translationY="-1.74sp"
            app:layout_constraintEnd_toStartOf="@+id/ivReportFlag"
            app:layout_constraintStart_toEndOf="@+id/ivTransactionIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvSpendsTodayLabel"
            app:lineHeight="@dimen/dimen_18sp"
            tools:text="3 Marâ€™22 | 3:43pm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTransactionBeneficiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:textColor="@color/color_ACA1D3"
            android:textSize="12sp"
            android:translationY="-1.74sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivReportFlag"
            app:layout_constraintStart_toEndOf="@+id/ivTransactionIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionDateTime"
            app:lineHeight="@dimen/dimen_18sp"
            tools:text="Paid to: 9049999254@payt..." />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivReportFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAmountSpent"
            tools:src="@drawable/ic_report_flag" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="32dp"
        android:background="#1AEEEAFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionDetailsLayout" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reason_for_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:text="@string/reason_for_reporting"
        android:textColor="@color/color_ACA1D3"
        android:textSize="14sp"
        android:translationY="-1.53sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <RadioGroup
        android:id="@+id/reasonRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reason_for_">

        <LinearLayout
            android:id="@+id/selfTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_black_bg_12dp"
            android:backgroundTint="#272239">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/checkboxSelfTransfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:button="@drawable/core_ui_custom_radio_button"
                android:clickable="false"
                android:drawablePadding="@dimen/dimen_15dp"
                android:fontFamily="@font/inter"
                android:paddingStart="16dp"
                android:text="@string/self_transfer"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wrongAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_black_bg_12dp"
            android:backgroundTint="#272239">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/checkboxWrongAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:button="@drawable/core_ui_custom_radio_button"
                android:clickable="false"
                android:drawablePadding="@dimen/dimen_15dp"
                android:fontFamily="@font/inter"
                android:paddingStart="16dp"
                android:text="@string/wrong_amount"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RadioGroup>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:buttonText="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reasonRadioGroup"
        app:layout_constraintVertical_bias="0.0"
        app:textMarginBottom="21dp"
        app:textMarginTop="21dp" />

</androidx.constraintlayout.widget.ConstraintLayout>