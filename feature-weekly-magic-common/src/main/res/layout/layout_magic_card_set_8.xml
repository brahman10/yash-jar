<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_one_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_one_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_two_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_two_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_three_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_three_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_four_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_col_four_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".79" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_row_one_reverse"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_one_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_one_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardOne"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_row_one_reverse"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_two_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_two_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardTwo"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"

            android:src="@drawable/ic_magic_card_8_design_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_row_one_reverse"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_three_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_three_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardThree"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/barrier_row_one_reverse"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_four_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_four_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardFour"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_row_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="card_background_one,card_background_two,card_background_three,card_background_four" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_row_one_reverse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="card_background_five,card_background_six,card_background_seven,card_background_eight" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_one_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_one_start"
        app:layout_constraintTop_toBottomOf="@+id/barrier_row_one"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardFive"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_two_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_two_start"
        app:layout_constraintTop_toBottomOf="@+id/barrier_row_one"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardSix"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_three_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_three_start"
        app:layout_constraintTop_toBottomOf="@+id/barrier_row_one"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardSeven"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_background_eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_magic_card_empty"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gl_col_four_end"
        app:layout_constraintStart_toStartOf="@+id/gl_col_four_start"
        app:layout_constraintTop_toBottomOf="@+id/barrier_row_one"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCardEight"
            style="@style/CommonMagicCardStyle"
            android:background="@drawable/ic_magic_card_8_base"
            android:padding="5dp"
            android:src="@drawable/ic_magic_card_8_design_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>