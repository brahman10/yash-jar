<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Larger blue circle -->
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />

                    <size android:width="8dp" android:height="8dp" />
                    <stroke android:width="8dp" android:color="#38F6C8" />
                </shape>
            </item>
            <!-- Green circle in middle -->
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
                    <size android:width="1dp" android:height="1dp" />
                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
            </item>
            <!-- Smaller red circle at front -->
            <item>
                <shape android:shape="oval">
                    <size android:width="8dp" android:height="8dp" />
                    <gradient android:centerColor="#38F6C8" android:centerX="0.2" android:centerY="0.3" android:endColor="#29CBA4" android:gradientRadius="80%p" android:startColor="@color/white" android:type="radial" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Larger blue circle -->
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                    <size android:width="8dp" android:height="8dp" />
                    <stroke android:width="8dp" android:color="#D65155" />
                </shape>
            </item>
            <!-- Green circle in middle -->
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
                    <size android:width="1dp" android:height="1dp" />
                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
            </item>
            <!-- Smaller red circle at front -->
            <item>
                <shape android:shape="oval">
                    <size android:width="8dp" android:height="8dp" />
                    <gradient android:centerColor="#EB6A6E" android:centerX="0.2" android:centerY="0.3" android:endColor="#D65155" android:gradientRadius="80%p" android:startColor="@color/white" android:type="radial" />
                    <!--<solid android:color="#ff0000"--> />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>