<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "Jar DUO"
            android:textColor="@color/white"
            app:fontFamily="@font/inter_bold"
            android:textSize="14sp"
            android:lineHeight="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="22dp"
            android:layout_marginStart="56dp"
            />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="57dp"
            android:background="#ACA1D3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp"
            android:background="?attr/actionBarItemBackground"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/core_ui_ic_custom_question_mark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            android:background="?attr/actionBarItemBackground"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spiralBg"
        android:layout_width="match_parent"
        android:layout_height="433dp"
        app:layout_constraintTop_toBottomOf="@id/clToolBar"
        android:layout_marginTop="63dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInvitingMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Vikas is inviting\nto create a duo on jar"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:lineHeight="36sp"
        app:layout_constraintTop_toBottomOf="@id/clToolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:layout_marginTop="39dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDuoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clToolBar"
        android:layout_marginTop="209dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Compete with your friends and understand their investing habits"
        android:textColor="#ACA1D3"
        app:layout_constraintBottom_toTopOf="@id/tvWhatIsDuo"
        android:layout_marginBottom="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:lineHeight="24sp"
        android:fontFamily="@font/inter"
        android:layout_marginHorizontal="80dp"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWhatIsDuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "What is jar duo?"
        android:textColor="#ACA1D3"
        app:layout_constraintBottom_toTopOf="@+id/btnAcceptInvitation"
        android:layout_marginBottom="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:lineHeight="24sp"
        android:fontFamily="@font/inter"
        android:layout_marginHorizontal="80dp"
        android:gravity="center"
        />
    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnAcceptInvitation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintBottom_toTopOf="@id/btnRejectInvitation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp"
        app:buttonText="ACCEPT INVITATION"
        android:foregroundGravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="68dp"
        android:paddingLeft="68dp"
        />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnRejectInvitation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp"
        app:buttonText="REJECT"
        app:buttonType="secondaryHollowButton"
        android:foregroundGravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="68dp"
        android:paddingLeft="68dp"
        app:buttonEndColor="@color/color_272239"
        app:buttonStartColor="@color/color_272239"
        app:buttonStrokeColor="#4DFFFFFF"
        />




</androidx.constraintlayout.widget.ConstraintLayout>