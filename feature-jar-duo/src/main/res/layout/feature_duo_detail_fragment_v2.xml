<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/duoDetailContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/color_4840D1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="22dp"
            android:layout_marginStart="56dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="14sp"
            tools:text="Jar DUO" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="65dp"
            android:background="#ACA1D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/feature_duo_ic_baseline_more_horiz_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clToolBar">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/machineHeaderLottie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:background="@drawable/feature_duo_machine_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDuoHeaderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center|center_vertical"
            app:lineHeight="22sp"
            android:text="@string/duo"

            android:textAllCaps="true"
            android:textColor="#FFDA2D"
            android:textSize="22sp" />

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/feature_duo_machine_center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_versus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_versus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clUser1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/feature_duo_rounded_text_view_with_white_border"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUser1Initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:textColor="#2E2942"
                        android:textSize="24sp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:lineHeight="48sp"
                        tools:text="KT" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivUser1Thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameUsr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    style="@style/DuoUserNameTextStyle"
                    app:layout_constraintEnd_toEndOf="@+id/clUser1"
                    app:layout_constraintStart_toStartOf="@+id/clUser1"
                    app:layout_constraintTop_toBottomOf="@+id/clUser1"
                    tools:text="krishnakant\nTiwari" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_switchOptionsUsr1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="52dp"

                    android:layout_marginBottom="23dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintEnd_toStartOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameUsr1"
                    tools:itemCount="3"
                    tools:listitem="@layout/feature_duo_layout_toggle_item" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clUser2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/feature_duo_rounded_text_view_with_white_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUser2Initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:textColor="#2E2942"
                        android:textSize="24sp"
                        app:lineHeight="48sp"
                        tools:text="VJ" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivUser2Thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameUsr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/DuoUserNameTextStyle"
                    app:layout_constraintEnd_toEndOf="@+id/clUser2"
                    app:layout_constraintStart_toStartOf="@+id/clUser2"
                    app:layout_constraintTop_toBottomOf="@+id/clUser2"
                    tools:text="Prashant\nSingh" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_switchOptionsUsr2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="23dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dashed_line_vertical_divide"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameUsr2"
                    tools:itemCount="3"
                    tools:listitem="@layout/feature_duo_layout_toggle_item" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWeeklyProgressLabel"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pixellari"
                    android:text="@string/weekly_progress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashed_line_horizontal_divide" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/daysLeftInWeek"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/pixellari"
                    tools:text="Days left 3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashed_line_horizontal_divide" />

                <View
                    android:id="@+id/dashed_line_vertical_divide"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="@drawable/dashed_line_vertical"
                    app:layout_constraintBottom_toTopOf="@id/dashed_line_horizontal_divide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/dashed_line_horizontal_divide"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="58dp"
                    android:background="@drawable/dashed_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_duo_machine_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/feature_duo_machine_bottom_rounded_corner" />



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#362565"
                    android:layout_marginTop="16dp">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@drawable/dashed_line_vertical"
                        app:layout_constraintBottom_toTopOf="@+id/rvScoreView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverallUsr1lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DuoScoreLabelTextStyle"
                        android:layout_marginTop="16dp"
                        android:text="@string/overall_score"
                        app:layout_constraintBottom_toBottomOf="@+id/view2"
                        app:layout_constraintEnd_toStartOf="@+id/view2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverallUsr1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/DuoScoreTextStyle"
                        app:layout_constraintEnd_toEndOf="@+id/tvOverallUsr1lbl"
                        app:layout_constraintStart_toStartOf="@+id/tvOverallUsr1lbl"
                        app:layout_constraintTop_toBottomOf="@+id/tvOverallUsr1lbl"
                        tools:text="19" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverallUsr2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/DuoScoreTextStyle"
                        app:layout_constraintEnd_toEndOf="@+id/tvOverallUsr2lbl"
                        app:layout_constraintStart_toStartOf="@+id/tvOverallUsr2lbl"
                        app:layout_constraintTop_toBottomOf="@+id/tvOverallUsr2lbl"
                        tools:text="26" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverallUsr2lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/DuoScoreLabelTextStyle"
                        android:text="@string/feature_duo_overall_score"
                        app:layout_constraintBottom_toBottomOf="@+id/view2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/view2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvScoreView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="83dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="3"
                        tools:listitem="@layout/feature_duo_scorecard_item" />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>