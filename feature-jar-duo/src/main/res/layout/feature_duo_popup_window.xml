<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_corner_20dp"
    android:backgroundTint="#3C3357"
    >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingHorizontal="20dp"
            android:text= "@string/feature_duo_rename"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:lineHeight="18sp"
            android:paddingVertical="18dp"
            android:fontFamily="@font/inter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRename"
        android:background="#ACA1D3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="@string/feature_duo_delete_small"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:lineHeight="18sp"
            android:paddingVertical="18dp"
            android:fontFamily="@font/inter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator" />

</androidx.constraintlayout.widget.ConstraintLayout>