<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clRoot"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/feature_lending_bg_address_selected"
    android:layout_marginBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SmallTextViewStyle"
        android:background="@drawable/feature_lending_bg_address_tag"
        android:gravity="start"
        android:id="@+id/tvAddressTag"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="10dp"
        android:textColor="@color/color_EBB46A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="1dp"
        tools:text="Address Tag" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEditAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingVertical="5dp"
        android:visibility="gone"
        android:src="@drawable/feature_lending_ic_edit"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toTopOf="@id/tvAddressTag"
        app:layout_constraintBottom_toBottomOf="@id/tvAddressTag"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivRadio"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:src="@drawable/feature_lending_ic_radio_selected"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintTop_toBottomOf="@id/tvAddressTag" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SmallTextViewStyle"
        android:gravity="start"
        android:id="@+id/tvAddress"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:layout_width="0dp"
        android:textColor="@color/color_ACA1D3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintStart_toEndOf="@id/ivRadio"
        app:layout_constraintTop_toTopOf="@id/ivRadio"
        tools:text="45, 8th B main road, celing road block,chandifam, bannar Bangalore 560043 " />
</androidx.constraintlayout.widget.ConstraintLayout>