<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieViewLoading"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CommonBoldTextViewStyle"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:text="@string/feature_lending_fetching_your_location"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_default_revamped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/btnSaveAddress">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_2E2942"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPrimaryText"
                        style="@style/CommonBoldTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toStartOf="@id/tvChange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Bairathi Colony, Indore" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSecondaryText"
                        style="@style/SmallTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/tvChange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPrimaryText"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        tools:text="Bairathi Colony, Indore" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvChange"
                        style="@style/SmallTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="@string/feature_lending_change"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFlat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/feature_lending_bg_rounded_2e2942_12dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="20dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etFlat"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:maxLength="256"
                        android:singleLine="true"
                        android:paddingVertical="18dp"
                        android:textColorHint="@color/color_776E94"
                        android:hint="@string/feature_lending_flat_house_no_building_apartment"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivFlatClear" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFlatClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/feature_lending_ic_cross_circle_filled" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/errorFlat"
                    android:layout_width="match_parent"
                    style="@style/SmallTextViewStyle"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/redAlertText"
                    android:drawableStart="@drawable/feature_lending_ic_error"
                    android:drawablePadding="8dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="30dp"
                    android:text="@string/feature_lending_address_more_than_5_chars"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/feature_lending_bg_rounded_2e2942_12dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="20dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etStreet"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingVertical="18dp"
                        android:textColorHint="@color/color_776E94"
                        android:hint="@string/feature_lending_area_street_sector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivStreetClear" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStreetClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/feature_lending_ic_cross_circle_filled" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/errorStreet"
                    android:layout_width="match_parent"
                    style="@style/SmallTextViewStyle"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/redAlertText"
                    android:drawableStart="@drawable/feature_lending_ic_error"
                    android:drawablePadding="8dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="30dp"
                    android:text="@string/feature_lending_address_more_than_5_chars"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clLandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/feature_lending_bg_rounded_2e2942_12dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="20dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etLandmark"
                        style="@style/CommonTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingVertical="18dp"
                        android:textColorHint="@color/color_776E94"
                        android:hint="@string/feature_lending_landmark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivLandmarkClear" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLandmarkClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/feature_lending_ic_cross_circle_filled" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </ScrollView>

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnSaveAddress"
            android:layout_height="56dp"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            app:buttonText="@string/feature_lending_save_address"
            app:layout_constraintStart_toStartOf="@id/leftGuide"
            app:layout_constraintEnd_toEndOf="@id/rightGuide"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintHeight_min="54dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>