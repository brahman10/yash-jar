<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="130dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/bgColor">

    <View
        android:id="@+id/leftLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_D5CDF2"
        app:layout_constraintBottom_toBottomOf="@id/markContainer"
        app:layout_constraintEnd_toStartOf="@id/markContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/markContainer" />

    <FrameLayout
        android:id="@+id/markContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/feature_lending_bg_d5cdf2_ring"
        app:layout_constraintStart_toEndOf="@id/leftLine"
        app:layout_constraintEnd_toStartOf="@id/rightLine"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTickIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/feature_lending_ic_white_tick" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStepNumber"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:id="@+id/rightLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_D5CDF2"
        app:layout_constraintBottom_toBottomOf="@id/markContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/markContainer"
        app:layout_constraintTop_toTopOf="@id/markContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStepTitle"
        style="@style/CommonTextViewStyle"
        android:lineHeight="@dimen/dimen_14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/markContainer"
        app:layout_constraintStart_toStartOf="@id/markContainer"
        app:layout_constraintTop_toBottomOf="@id/markContainer"
        tools:ignore="SmallSp"
        tools:text="Choose\nAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>