            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_black_bg_12dp"
                android:gravity="start|center_vertical"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingHorizontal="26dp"
                android:paddingVertical="18dp"
                android:singleLine="true"
                android:autofillHints="emailAddress"
                android:textColorHint="@color/color_776E94"
                android:tag="com.userexperior.dontmask"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headingEmail" />

            <androidx.appcompat.widget.AppCompatTextView
