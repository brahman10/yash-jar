                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/feature_lending_ic_radio_selected"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/feature_lending_salaried"
                android:textColor="@color/color_ACA1D3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headingEmploymentType" />

