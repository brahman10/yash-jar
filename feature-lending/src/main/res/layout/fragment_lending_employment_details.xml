            <androidx.appcompat.widget.AppCompatEditText
                android:drawableStart="@drawable/feature_lending_ic_rupee_purple"
                app:drawableTint="@color/color_EEEAFF"
                android:id="@+id/etIncome"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_black_bg_12dp"
