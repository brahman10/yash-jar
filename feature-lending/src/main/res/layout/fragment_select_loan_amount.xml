<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/lendingToolbar"
        layout="@layout/feature_lending_toolbar_with_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lendingToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgDarkColor"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/core_ui_ic_custom_question_mark"
                app:tint="@color/white" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/noteStackLottie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:elevation="1dp"
                android:translationZ="1dp"
                app:layout_constraintBottom_toTopOf="@id/icPlatform"
                app:layout_constraintTop_toTopOf="@id/icPlatform"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icPlatform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:alpha="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivHelp"
                app:srcCompat="@drawable/core_ui_note_stack_platform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGreetings"
                style="@style/CommonTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/feature_lending_enter_amount"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/icPlatform" />

            <FrameLayout
                android:id="@+id/amountEditBoxHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/core_ui_bg_outlined_776e94_12dp_2dp_thick"
                android:translationZ="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreetings">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:digits="0123456789,"
                    android:fontFamily="@font/inter_bold"
                    android:drawableStart="@drawable/core_ui_ic_rs_sign_bold"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:gravity="start"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:minWidth="80dp"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="10dp"
                    android:tag="com.userexperior.dontmask"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </FrameLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvError"
                style="@style/SmallTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="start"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:textColor="@color/redAlertText"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/feature_lending_ic_error"
                app:layout_constraintEnd_toEndOf="@id/amountEditBoxHolder"
                app:layout_constraintStart_toStartOf="@+id/amountEditBoxHolder"
                app:layout_constraintTop_toBottomOf="@+id/amountEditBoxHolder" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEligible"
                style="@style/CommonTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/feature_lending_you_are_eligible_for_a_loan_of"
                android:textColor="@color/color_ACA1D3"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/icPlatform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmount"
                style="@style/BigTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textSize="32sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvEligible"
                tools:text="2000" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="32dp"
                android:max="200"
                android:maxHeight="8dp"
                android:minHeight="8dp"
                android:progress="100"
                android:progressDrawable="@drawable/feature_lending_seekbar_circular_corner_progress"
                android:splitTrack="false"
                android:thumb="@drawable/core_ui_ic_progress_bar_thumb"
                app:layout_constraintTop_toBottomOf="@id/tvError" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMinMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/seekBar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMin"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/color_EEEAFF"
                    android:textSize="16sp"
                    tools:text="3000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMax"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/color_EEEAFF"
                    android:textSize="16sp"
                    tools:text="60000" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="llMinMax,tvAmount" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctaHolder"
              app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier"
                android:layout_marginTop="24dp"
                app:layout_constraintVertical_bias="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jar.app.core_ui.widget.button.CustomButtonV2
                    android:id="@+id/btnAction"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:buttonElevation="0dp"
                    app:buttonText="@string/feature_lending_continue"
                    app:buttonTextAllCaps="false"
                    app:layout_constraintBottom_toTopOf="@id/ivLender"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPoweredBy"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/feature_lending_powered_by"
                    app:layout_constraintBottom_toBottomOf="@id/ivLender"
                    app:layout_constraintEnd_toStartOf="@id/ivLender"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@id/btnAction"
                    app:layout_constraintTop_toTopOf="@id/ivLender" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_max="60dp"
                    app:layout_constraintHeight_max="30dp"
                    android:scaleType="fitStart"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@id/ivSecure"
                    app:layout_constraintStart_toEndOf="@id/tvPoweredBy"
                    app:layout_constraintTop_toBottomOf="@id/btnAction"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:src="@drawable/feature_lending_ic_experian_logo" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSecure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_100_secure"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toEndOf="@id/btnAction"
                    app:layout_constraintStart_toEndOf="@id/ivLender"
                    app:layout_constraintTop_toTopOf="@id/ivLender"
                    app:layout_constraintBottom_toBottomOf="@id/ivLender"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>