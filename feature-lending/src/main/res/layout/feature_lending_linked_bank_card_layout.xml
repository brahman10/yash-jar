<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/core_ui_bg_rounded_10dp_3c3357"
    android:backgroundTint="@color/lightBgColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@drawable/feature_lending_ic_experian_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBankName"
            style="@style/SmallBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/color_EEEAFF"
            app:textAllCaps="true"
            tools:text="Axis BanK with a ling  name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLinkedBank"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="@dimen/dimen_4dp"
            android:drawableStart="@drawable/feature_lending_tick_icon"
            android:textColor="@color/white"
            app:textAllCaps="false"
            android:text="@string/feature_lending_linked_bank" />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        android:background="@color/purple400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAccountNumber"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
       android:layout_marginVertical="@dimen/dimen_12dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textColor="@color/white"
        tools:text="123456789549499" />

</androidx.constraintlayout.widget.ConstraintLayout>