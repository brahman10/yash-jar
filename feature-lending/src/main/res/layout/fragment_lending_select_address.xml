<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgColor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIntro"
        android:layout_width="0dp"
        style="@style/BigTextViewStyle"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        app:lineHeight="33sp"
        android:gravity="start|center_vertical"
        android:text="@string/feature_lending_where_do_you_live"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddNewAddress"
        android:layout_width="0dp"
        style="@style/CommonBoldTextViewStyle"
        android:background="@drawable/rounded_bg_3c3357_12dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@id/tvIntro"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:gravity="start|center_vertical"
        android:textAllCaps="true"
        android:drawableStart="@drawable/feature_lending_ic_add"
        android:drawablePadding="15dp"
        android:text="@string/feature_lending_add_new_address"/>

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/core_ui_separator"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@id/tvAddNewAddress" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"
        tools:itemCount="10"
        tools:listitem="@layout/cell_lending_address" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnContinue"
        android:layout_height="56dp"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        app:buttonTextAllCaps="false"
        app:buttonText="@string/feature_lending_continue"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintBottom_toTopOf="@+id/tvWarning"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_min="54dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWarning"
        android:layout_width="0dp"
        style="@style/SmallTextViewStyle"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/color_776E94"
        android:text="@string/feature_lending_once_submitted_can_not_be_edited"/>

</androidx.constraintlayout.widget.ConstraintLayout>