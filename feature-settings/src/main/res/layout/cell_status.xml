<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cellStatusHolder"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatusLogo"
        android:layout_gravity="center"
        android:src="@drawable/active_status_logo"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_8dp"
        android:fontFamily="@font/inter_bold"
        android:lineHeight="@dimen/dimen_12dp"
        android:textColor="@color/color_58DDC8"
        android:textFontWeight="700"
        android:text="@string/feature_settings_active"
        android:textSize="12sp" />

</LinearLayout>