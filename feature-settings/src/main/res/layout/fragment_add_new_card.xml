<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_282E3D" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="@string/feature_settings_add_a_new_card"
            android:textColor="@color/color_282E3D"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#14282E3D"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="25dp"
                android:padding="1.5dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/bg_rounded_corner_white_12dp">

                <com.jar.app.core_ui.widget.credit_card_view.CreditCardView
                    android:id="@+id/creditCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:card_autoFocusCardNumber="true"
                    app:card_backGradientEnd="@color/color_626262"
                    app:card_backGradientStart="@color/color_2D2D2D"
                    app:card_backStrip2Color="@color/color_303030"
                    app:card_backStripColor="@color/black"
                    app:card_cardExpiryHeaderColor="@color/color_C4C4C4"
                    app:card_cardExpiryHintColor="#4DFFFFFF"
                    app:card_cardExpiryTextColor="@color/white"
                    app:card_cardNameHeaderColor="@color/color_C4C4C4"
                    app:card_cardNameHintColor="#4DFFFFFF"
                    app:card_cardNameTextColor="@color/white"
                    app:card_cardNumberHintColor="@color/color_656565"
                    app:card_cardNumberTextColor="@color/white"
                    app:card_cvvBackgroundColor="@color/white"
                    app:card_cvvHintColor="#4D000000"
                    app:card_cvvTextColor="#000000"
                    app:card_frontGradientEnd="@color/color_313131"
                    app:card_frontGradientStart="@color/color_1F1F1F"
                    app:card_outline_base_color="@color/color_EBB46A"
                    app:card_outline_error_color="@color/color_EB6A6E"
                    app:card_tooltip_text="@string/feature_settings_tap_to_edit"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_height="180dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvError"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/core_ui_next"
                android:textColor="@color/color_EB6A6E"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/clCard"
                app:layout_constraintTop_toBottomOf="@+id/clCard" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnNext"
                style="@style/BigTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginBottom="38dp"
                android:alpha="0.5"
                android:background="@drawable/feature_settings_bg_rounded_filled_white_24dp"
                android:backgroundTint="#2E2942"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/core_ui_next"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_min="48dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>