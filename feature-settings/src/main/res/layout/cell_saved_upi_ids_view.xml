<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp"
    android:background="@color/color_2E2942">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSavedUpiIdsLabel"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/feature_settings_saved_upi_ids"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSavedUpiIds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSavedUpiIdsLabel"
        tools:itemCount="4"
        tools:listitem="@layout/cell_saved_upi_id_method" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddNewUpiId"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/feature_settings_add_a_new_upi_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSavedUpiIds" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYouNeedToHaveRegisteredUpiId"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/feature_settings_you_need_to_have_a_registered_upi_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddNewUpiId" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@id/tvYouNeedToHaveRegisteredUpiId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAddNewUpiId"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/color_ACA1D3" />
</androidx.constraintlayout.widget.ConstraintLayout>