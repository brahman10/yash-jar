<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/lightBgColor"
    android:layout_marginVertical="6dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContact"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/core_ui_ic_contacts"
        app:layout_constraintBottom_toTopOf="@id/tvAllowHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAllowHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Allow access to contacts"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btnAllowAccess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivContact"
        app:lineHeight="27sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAllowDesc"
        android:layout_width="265sp"
        android:layout_height="42sp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Contact access is required in order to invite friends and create new duo"
        android:textColor="#D5CDF2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAllowHeader" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnAllowAccess"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="27dp"
        app:buttonText="Allow"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAllowDesc"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>