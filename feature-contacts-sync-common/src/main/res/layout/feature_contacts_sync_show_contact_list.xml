<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="22dp"
            android:layout_marginStart="56dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnRefresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="14sp"
            tools:text="Jar DUO" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="62dp"
            android:background="#1AACA1D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnRefresh"
            android:layout_width="164dp"
            android:layout_height="36dp"
            android:layout_marginEnd="17dp"
            android:padding="10dp"
            app:buttonRadius="4dp"
            app:buttonDrawablePadding="@dimen/dimen_8dp"
            app:buttonDrawableStart="@drawable/feature_duo_ic_convert"
            app:buttonEndColor="#3C3357"
            app:buttonStartColor="#3C3357"
            app:buttonStrokeColor="#3C3357"
            app:buttonText="Refresh Contacts"
            app:buttonTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopStrip"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@color/lightBgColor"
        android:backgroundTint="#3C3357"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clToolBar">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/newDuoTopLottie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/bannerBackView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btnSentInviteLayout" />

        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/duoListHeaderText1"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="24sp"
            tools:text="Invite your friends to\n create a DUO" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/btnSentInviteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shimmer_base_alpha="0.5"
            app:shimmer_auto_start="false"
            app:layout_constraintBottom_toBottomOf="@+id/newDuoTopLottie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duoListHeaderText1"
            app:shimmer_intensity="100">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSentInvite"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_black_bg_4dp"
                android:backgroundTint="#492B9D"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:textAlignment="center"

                android:textColor="@color/white"
                android:text="@string/feature_contacts_sync_common_sent_invite" />

        </com.facebook.shimmer.ShimmerFrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContact"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:src="@drawable/feature_contacts_sync_common_open_book"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAllowHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivContact"
        app:lineHeight="27sp"
        tools:text="More Friends. More rewards." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAllowDesc"
        android:layout_width="265sp"
        android:layout_height="42sp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#D5CDF2"
        app:lineHeight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAllowHeader"
        tools:text="Jar requires contact access to find your friends" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnAllowAccess"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"
        android:layout_marginBottom="27dp"
        app:buttonText="Allow Access"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupNoResultFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ivNoContactFound, tvNoContactFound"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupContactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="rvContacts, etSearchBar"
        tools:visibility="gone" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_black_bg_12dp"
        android:drawableStart="@drawable/feature_contacts_sync_search"
        android:drawablePadding="15dp"
        android:fontFamily="@font/inter"
        android:hint="Search for a contact"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="#776E94"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/clTopStrip"
        app:lineHeight="24sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_close_btn"
        android:layout_width="24dp"
        app:layout_constraintTop_toTopOf="@id/etSearchBar"
        app:layout_constraintBottom_toBottomOf="@id/etSearchBar"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/etSearchBar"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_height="24dp"
        app:tint="@color/color_ACA1D3"
        android:src="@drawable/close_icon" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:button="@drawable/duo_select_all_radio_btn_selector"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:text="Select All"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        android:requiresFadingEdge="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSelectAll"
        tools:listitem="@layout/feature_contacts_sync_common_each_contact_cell"
        app:layout_constraintBottom_toTopOf="@id/inviteLayout"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNoContactFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/feature_duo_no_result_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clToolBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoContactFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/ivNoContactFound"
        app:lineHeight="27sp"
        tools:text="No results found" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inviteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBgColor"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnMultipleInvite"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:buttonText="Invite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtWhatsappNotification"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackground"
            android:lineSpacingExtra="3sp"
            android:text="@string/contact_will_receive_whatsapp_notification"
            android:textColor="#ACA1D3"
            android:textSize="12sp"
            app:lineHeight="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMultipleInvite" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>