<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/color_3C3357"
    card_view:cardCornerRadius="@dimen/dimen_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_24dp"
        android:paddingHorizontal="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/title"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20sp"
            android:gravity="start"
            android:layout_marginStart="@dimen/dimen_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/right_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Start small, save big!" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/right_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/common_full_open_on_phone" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnAction"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:buttonText="Save Now"
            app:buttonType="primaryButton"
            app:buttonRadius="2dp"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_marginBottom="@dimen/dimen_16dp"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCardCta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/dimen_1dp"
            android:layout_marginHorizontal="@dimen/dimen_4dp"
            app:layout_constraintBottom_toBottomOf="@id/btnAction"
            app:layout_constraintEnd_toEndOf="@id/btnAction"
            app:layout_constraintStart_toStartOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/btnAction"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right"
            app:shimmer_repeat_mode="restart"
            app:shimmer_shape="linear"
            app:shimmer_duration="1500"
            app:shimmer_base_alpha="0"
            app:shimmer_highlight_alpha="0.8"
            app:shimmer_tilt="30">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/core_ui_bg_shine" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupFooterTextAndIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="footer_icon, footer_text"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="right_image, shimmerCardCta"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llFooterListHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@id/barrier"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/footer_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toStartOf="@+id/footer_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            tools:src="@drawable/common_full_open_on_phone" />

        <TextView
            android:id="@+id/footer_text"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_D5CDF2"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/footer_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="@dimen/dimen_8dp"
            app:layout_constraintStart_toEndOf="@+id/footer_icon"
            app:layout_constraintTop_toTopOf="@id/footer_icon"
            tools:text="100% Safe &amp; Secure | 24K Pure Gold"
            tools:ignore="SmallSp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


