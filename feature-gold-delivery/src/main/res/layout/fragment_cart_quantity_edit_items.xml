<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#272239"
    android:paddingBottom="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="?attr/actionBarItemBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/ic_close"
        android:translationZ="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImages"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/cell_store_item_image"
        tools:orientation="horizontal" />

    <ImageView
        android:id="@+id/parter_iv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:src="@drawable/safegold"
        app:layout_constraintBottom_toTopOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvImages"
        app:tint="#ACA1D3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        style="@style/BigTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_10dp"
        app:fontFamily="@font/inter_bold"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@id/heartIconBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parter_iv"
        tools:text="0.5 Gram SafeGold 0.5 Gram SafeGold Coin (99.5%)" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        app:barrierDirection="start"
        android:id="@+id/heartIconBarrier"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="heartIcon,notAddedHeartIcon" />
    <ImageView
        android:id="@+id/heartIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:src="@drawable/ic_heart_red"
        app:layout_constraintStart_toEndOf="@id/tvName"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvName" />

    <ImageView
        android:id="@+id/notAddedHeartIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintStart_toEndOf="@id/tvName"
        android:src="@drawable/ic_heart_add"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desc"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/inter"
        android:gravity="start|center_vertical"
        android:text="@string/_24k_99_9_pure_gold"
        android:textColor="@color/white"
        app:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <HorizontalScrollView
        android:id="@+id/priceContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/separatorOne">

        <LinearLayout
            android:id="@+id/chip_group_filter"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_filter"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true" />
    </HorizontalScrollView>

    <View
        android:id="@+id/separatorOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/core_ui_separator"
        app:layout_constraintTop_toBottomOf="@id/desc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:fontFamily="@font/inter_bold"
        android:gravity="start|center_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceContainer"
        tools:text="₹ 3,444.95" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPriceDiscount"
        style="@style/BigTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:visibility="gone"
        app:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        tools:text="₹ 3,444.95" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderGoldPriceDesc"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="8dp"
        android:text="@string/incl_of_all_charges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPriceDiscount" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnGetDelivery"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:paddingHorizontal="40dp"
        app:buttonText="@string/update_cart"
        app:buttonTextColor="@color/white"
        app:cardElevation="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderGoldPriceDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="46dp"
        app:layout_constraintStart_toEndOf="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="@id/tvPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>