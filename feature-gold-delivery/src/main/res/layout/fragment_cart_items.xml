<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#42397C"
    android:paddingBottom="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/cartImageView"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCartPrice"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnProceedCart"
        app:layout_constraintStart_toEndOf="@id/cartImageView"
        app:layout_constraintTop_toTopOf="@id/cartImageView"
        tools:text="â‚¹ 3,35,444.95" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCartQuantity"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:drawableEnd="@drawable/down_arrow_hide_18dp"
        android:textColor="#EEEAFF"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/tvCartPrice"
        app:layout_constraintTop_toBottomOf="@id/tvCartPrice"
        tools:text="1 Item " />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnProceedCart"
        android:layout_width="164dp"
        android:layout_height="44dp"
        app:buttonText="PROCEED"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:buttonTextColor="@color/white"
        app:cardElevation="@dimen/dimen_16dp"
        app:layout_constraintHeight_min="46dp"
        android:text="@string/proceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCartPrice"
        android:paddingHorizontal="38dp"/>

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="#1AFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvCartQuantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/items_in_your_cart"
        android:textColor="#ACA1D3"
        style="@style/CommonBoldTextViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seperator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartItemsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelCart"
        tools:listitem="@layout/item_cart_holder" />
</androidx.constraintlayout.widget.ConstraintLayout>