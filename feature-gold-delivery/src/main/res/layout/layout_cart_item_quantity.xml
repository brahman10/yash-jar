<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/minusSign"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/rounded_bg_3c3357_12dp"
        style="@style/CommonTextViewStyle"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:background="@drawable/feature_gold_delivery_bg_rounded_2e2942_12dp"
        style="@style/CommonTextViewStyle"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/plusSign"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/rounded_bg_3c3357_12dp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/feature_gold_delivery_ic_plus" />
</LinearLayout>