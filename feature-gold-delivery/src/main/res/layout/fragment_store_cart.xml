<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:clipChildren="false">

    <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#3C3357"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/deliveringContainer"
        app:layout_constraintTop_toBottomOf="@id/goldPriceProgressLayout"
        tools:visibility="gone">

        <include
            android:id="@+id/fragmentListDetail"
            layout="@layout/fragment_cart_list" />


    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/deliveringContainer"
        app:layout_constraintTop_toBottomOf="@id/goldPriceProgressLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/empty_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goldPriceProgressLayout"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/cart_no_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/your_cart_is_empty"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView7"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/there_is_no_item_in_your_cart_let_s_add_some_products"
                android:textColor="#ACA1D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView" />


            <View
                android:id="@+id/dividerName"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@color/color_776E94"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/moreInfoHeader"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="20dp"
                app:fontFamily="@font/inter_bold"
                android:gravity="start|center_vertical"
                android:text="@string/exclusive_products"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividerName" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartOtherProductsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/moreInfoHeader"
                tools:listitem="@layout/cell_gold_store_item" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/exploreMoreButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:paddingHorizontal="40dp"
                app:buttonTextAllCaps="false"
                app:buttonText="@string/explore_more"
                app:buttonTextColor="@color/white"
                app:cardElevation="@dimen/dimen_16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cartOtherProductsRv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="46dp"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deliveringContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42397C"
        android:paddingBottom="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/clickViewDeliveringContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/seperator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/deliveryGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="topImage,topImageRight,deliveringTextContainer,seperator" />

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@drawable/feature_gold_delivery_bg_rounded_white_10_8dp"
            android:padding="10dp"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@id/deliveringTextContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/deliveringTextContainer" />

        <ImageView
            android:id="@+id/topImageRight"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:rotation="90"
            android:src="@drawable/up_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/topImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topImage"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="topImage, seperator" />

        <LinearLayout
            android:id="@+id/deliveringTextContainer"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_6dp"
            app:layout_constraintBottom_toBottomOf="@id/barrier12"
            app:layout_constraintEnd_toStartOf="@id/topImageRight"
            app:layout_constraintStart_toEndOf="@id/topImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/labelDelivery"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/check_if_we_deliver_to_your_area"
                android:textColor="#EEEAFF" />

            <TextView
                android:id="@+id/deliveryLocationTv"
                style="@style/CommonBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="@string/enter_pincode"
                android:textColor="#EEEAFF"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/topImage"
                app:layout_constraintTop_toBottomOf="@id/labelDelivery" />

            <TextView
                android:id="@+id/deliveringTV"
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:textColor="#58DDC8"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/topImage"
                app:layout_constraintTop_toBottomOf="@id/deliveryLocationTv"
                tools:text="Order will be delivered in 2-4 working days" />


        </LinearLayout>

        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="#1AFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/deliveringTextContainer" />

        <ImageView
            android:id="@+id/cartImageView"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:src="@drawable/ic_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seperator" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCartPrice"
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cartImageView"
            app:layout_constraintTop_toTopOf="@id/cartImageView"
            tools:text="₹3, 35,444.95" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCartQuantity"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:autoLink="all"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:text="@string/view_breakdown_underline"
            android:textColor="#EEEAFF"
            android:textSize="14sp"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvCartPrice"
            app:layout_constraintTop_toBottomOf="@id/tvCartPrice" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/rightBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvCartQuantity,tvCartPrice"
            app:barrierDirection="right"  />
        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnProceedCart"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:text="@string/place_order"
            app:buttonText="PLACE ORDER"
            app:buttonTextColor="@color/white"
            app:cardElevation="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="46dp"
            app:layout_constraintStart_toEndOf="@id/rightBarrier"
            app:layout_constraintTop_toTopOf="@id/tvCartPrice"
            app:layout_constraintWidth_min="100dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.PriceValidityTimer
        android:id="@+id/goldPriceProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seperator2" />


</androidx.constraintlayout.widget.ConstraintLayout>
