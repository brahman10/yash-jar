<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_order_again"
    android:layout_margin="@dimen/dimen_8dp"
    android:background="@drawable/bg_rounded_2e2942_10dp"
    android:padding="@dimen/dimen_8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cartImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/placeholder_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerImageView10percent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCartName"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:text="Ganesha Gold coin"
        android:textColor="#EEEAFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/cartImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCartQuantity2"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:text="1 Item | 1 gm"
        android:textColor="#EEEAFF"
        app:layout_constraintStart_toEndOf="@id/cartImageView"
        app:layout_constraintTop_toBottomOf="@id/tvCartName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deliveryTv"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Expected delivery by 20 Mayâ€™22"
        android:visibility="gone"
        android:textColor="#ACA1D3"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintStart_toStartOf="@id/tvCartQuantity2"
        app:layout_constraintTop_toBottomOf="@id/tvCartQuantity2" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:id="@+id/trackOrder"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="@dimen/dimen_10dp"
        android:visibility="gone"
        android:linksClickable="false"
        android:selectAllOnFocus="false"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:text="@string/track_shipment_underline"
        app:drawableEndCompat="@drawable/feature_gold_delivery_ic_chevron_right"
        android:textColor="#ACA1D3"
        app:drawableTint="@color/color_ACA1D3"
        app:layout_constraintTop_toBottomOf="@id/deliveryTv"
        app:layout_constraintStart_toStartOf="@id/deliveryTv"
        />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/firstContainerSecondBtn"
        android:layout_width="164dp"
        android:layout_height="36dp"
        app:buttonRadius="4dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginBottom="4dp"
        android:elevation="@dimen/dimen_20dp"
        app:buttonText="@string/order_again"
        app:buttonTextAllCaps="false"
        app:buttonType="secondaryHollowButton"
        app:cardElevation="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cartImageView"
        app:layout_constraintStart_toEndOf="@+id/cartImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>