<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/delivery_list_container"
    xmlns:bind="http://schemas.android.com/tools"
    tools:background="@color/bgColor">

    <LinearLayout
        android:id="@+id/clActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_min_height"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:background="?attr/actionBarItemBackground"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:fontFamily="@font/inter_bold"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iconContainer"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cartBtn"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/listBtn"
                android:padding="5dp"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:src="@drawable/ic_list" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/heartBtn"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:padding="5dp"
                android:src="@drawable/ic_heart" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/dimen_6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartBtn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingVertical="15dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cartNoItems"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                tools:text="1"
            android:textSize="@dimen/dimen_12sp"
            android:gravity="center"
            style="@style/CommonBoldTextViewStyle"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/cartBtn"
            app:layout_constraintEnd_toEndOf="@id/cartBtn"
            android:background="@drawable/circle_red" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/cartContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clActionBar">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bgColor"
                    bind:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/orderAgainCardContainer"
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_12dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="@dimen/dimen_10dp"
                        app:layout_constraintTop_toBottomOf="@+id/image" >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/orderAgainRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingBottom="15dp"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_16dp"
                        android:background="@color/purple400"
                        app:layout_constraintTop_toBottomOf="@+id/orderAgainCardContainer" >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeaderPinCode"
                            style="@style/CommonTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/check_if_we_deliver_to_your_area"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPinCodeEligibilityText"
                            style="@style/SmallTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="@dimen/dimen_4dp"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="@id/clPinCode"
                            app:layout_constraintTop_toBottomOf="@id/clPinCode"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="Bangalore, Karnataka" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clPinCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/round_black_bg_16dp"
                            android:paddingHorizontal="18dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvHeaderPinCode">

                            <ImageView
                                android:id="@+id/locationPinImage"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etPinCode"
                                style="@style/CommonTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12sp"
                                android:background="@null"
                                android:digits="0123456789"
                                android:gravity="start|center_vertical"
                                android:layout_marginStart="10dp"
                                android:hint="Enter Pincode"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:paddingVertical="18dp"
                                android:textColorHint="@color/color_ACA1D3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/btnCheck"
                                app:layout_constraintHorizontal_bias="0.888"
                                app:layout_constraintStart_toEndOf="@id/locationPinImage"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0"
                                tools:ignore="HardcodedText" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/btnCheck"
                                style="@style/CommonBoldTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/check"
                                android:textAllCaps="true"
                                android:visibility="gone"
                                android:textColor="@color/color_58DDC8_30"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@id/etPinCode"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/etPinCode" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/btnClear"
                                style="@style/CommonBoldTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:text="@string/clear"
                                android:textAllCaps="true"
                                android:textColor="#ACA1D3"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@id/etPinCode"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/etPinCode" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/smartScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_height="wrap_content"
                    android:text="@string/exclusive_products"
                    />

                <HorizontalScrollView
                    android:id="@+id/filterProducts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/title">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60dp"
                        app:singleSelection="true"
                        android:paddingEnd="30dp"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:id="@+id/chip_group_filter"
                        app:layout_constraintTop_toBottomOf="@+id/text_filter"
                        >
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subtitlet"
                    android:textColor="#ACA1D3"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/filterProducts"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_height="wrap_content"
                    tools:text="Showing all"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/no_items_rv_iv"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/subtitlet"
                    android:layout_marginTop="36dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/box_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/noProductsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CommonBoldTextViewStyle"
                    android:textSize="20sp"
                    android:text="@string/no_products_available"
                    android:visibility="gone"
                    android:gravity="center"
                    app:lineHeight="30dp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="30dp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="30dp"
                    app:layout_constraintTop_toBottomOf="@id/no_items_rv_iv"
                    android:layout_marginTop="@dimen/dimen_20dp" />

                <View
                    android:id="@+id/bottom_divider02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:layout_marginEnd="@dimen/dimen_18dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/color_3C3357"
                    app:layout_constraintTop_toBottomOf="@+id/noProductsTv" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subtitle"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    app:layout_constraintTop_toBottomOf="@id/bottom_divider02"
                    android:layout_height="wrap_content"
                    android:text="@string/other_products"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cartOtherProductsRv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/subtitle"
                    tools:listitem="@layout/cell_gold_store_item" />

                <com.jar.app.core_ui.widget.grid_recycler_view.GridRecyclerView
                    android:id="@+id/rvGoldOptions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    tools:visibility="gone"
                    android:layoutAnimation="@anim/grid_layout_animation_from_bottom"
                    app:layout_constraintTop_toBottomOf="@id/subtitlet"
                    tools:itemCount="4"
                    android:layout_marginHorizontal="@dimen/dimen_12dp"
                    tools:layoutAnimation="@null"
                    android:paddingBottom="30dp"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/cell_gold_store_item"
                    tools:orientation="horizontal"
                    tools:spanCount="2" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/rv_barrier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cartOtherProductsRv,rvGoldOptions" />

                <View
                    android:id="@+id/bottom_div"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:layout_marginEnd="@dimen/dimen_18dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/color_3C3357"
                    app:layout_constraintTop_toBottomOf="@+id/rv_barrier" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subheading"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="48dp"
                    android:text="@string/our_partners"
                    app:layout_scrollFlags="scroll"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    app:layout_constraintTop_toBottomOf="@+id/bottom_div"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/productContainer"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/subheading"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#2E2942"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingVertical="16dp"
                            android:paddingEnd="@dimen/dimen_16dp"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:text="@string/gold_partner"
                                android:textColor="#ACA1D3"
                                app:layout_constraintStart_toStartOf="parent" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:src="@drawable/safegold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDeliveryBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toBottomOf="@id/productContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="30dp"
                    />


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/rvGoldOptions"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rvGoldOptions"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cartContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:visibility="visible"
        android:background="#42397C"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/cartImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:padding="6dp"
            android:src="@drawable/ic_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCartPrice"
            style="@style/CommonBoldTextViewStyle"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toEndOf="@id/cartImageView"
            app:layout_constraintTop_toTopOf="@id/cartImageView"
            tools:text="â‚¹ 3,444.95" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCartQuantity"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:drawableEnd="@drawable/down_arrow_hide_18dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvCartPrice"
            app:layout_constraintTop_toBottomOf="@id/tvCartPrice"
            tools:text="1 Item " />

        <View
            android:id="@+id/proceedBtnDimmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:background="@drawable/round_black_bg_16dp"
            android:clickable="false"
            android:elevation="12dp"
            android:focusable="false"
            android:outlineProvider="none"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btnProceedCart"
            app:layout_constraintEnd_toEndOf="@+id/btnProceedCart"
            app:layout_constraintStart_toStartOf="@+id/btnProceedCart"
            app:layout_constraintTop_toTopOf="@+id/btnProceedCart" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnProceedCart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:paddingHorizontal="38dp"
            app:buttonText="PROCEED"
            android:layout_marginStart="16dp"
            app:buttonTextColor="@color/white"
            app:cardElevation="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="46dp"
            app:layout_constraintStart_toEndOf="@+id/tvCartPrice"
            app:layout_constraintTop_toTopOf="@id/tvCartPrice" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>