<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wishlist_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/noCartIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cart_no_item"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintVertical_bias="0.12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/noCartItemsTV"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/no_items_in_wishlist"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noCartIV" />

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="30dp"
        android:background="#3C3357"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/noCartItemsTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:visibility="gone"
        android:text="@string/similar_products"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seperator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_rv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingStart="14dp"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/dimen_18dp"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_32dp"
        android:paddingHorizontal="24dp"
        android:visibility="gone"
        app:buttonText="ADD TO CART"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="54dp"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnExploreMore"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_32dp"
        android:paddingHorizontal="24dp"
        android:visibility="gone"
        app:buttonText="EXPLORE MORE"
        app:buttonTextAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="54dp"
        app:layout_constraintStart_toStartOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:orientation="vertical">

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

            <include layout="@layout/feature_cart_cell_wishlist_shimmer" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>