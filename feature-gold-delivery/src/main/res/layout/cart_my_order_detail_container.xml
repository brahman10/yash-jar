<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="start|center_vertical"
            android:text="@string/order_details"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@drawable/bg_rounded_2e2942_10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_details_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dimen_16dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#3C3357" />

    <LinearLayout
        android:id="@+id/tracking_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/tracking_details"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tracking_details_arrow"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/core_ui_ic_arrow_down"
            app:tint="#ACA1D3" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/tracking_details_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="28dp"
        android:visibility="gone"
        app:el_expanded="false"
        tools:el_expanded="false"
        tools:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dimen_10dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tracking_details_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:background="@drawable/bg_rounded_2e2942_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:id="@+id/trackOrder"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/bg_rounded_3c3357_6dp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="@dimen/dimen_4dp"
                android:linksClickable="false"
                android:padding="@dimen/dimen_10dp"
                android:selectAllOnFocus="false"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="@string/track_order_underline"
                android:textColor="#ACA1D3"
                app:drawableTint="@color/color_ACA1D3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <LinearLayout
        android:id="@+id/delivery_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/delivery_details"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delivery_details_arrow"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/core_ui_ic_arrow_down"
            app:tint="#ACA1D3" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/delivery_details_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:el_expanded="false"
        tools:el_expanded="false"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/bg_rounded_2e2942_10dp"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/delivery_name_tv"
                    style="@style/CommonBoldTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="@string/name_here"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/delivery_detail_tv"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="start|center_vertical"
                    android:text="@string/name_here"
                    android:textColor="#EEEAFF" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#3C3357" />

            <include layout="@layout/info_order_details_container" />

        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <LinearLayout
        android:id="@+id/our_partners_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/our_partners"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/our_partners_arrow"
            android:layout_width="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_4dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/core_ui_ic_arrow_down"
            app:tint="#ACA1D3" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/our_partners_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/bg_rounded_2e2942_10dp"
        android:visibility="gone"
        app:el_expanded="false"
        tools:el_expanded="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_4dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gold_partner"
                android:textColor="#ACA1D3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/safegold" />
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <LinearLayout
        android:id="@+id/payment_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/payment_details"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/payment_details_iv"
            android:layout_width="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_4dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/core_ui_ic_arrow_down"
            app:tint="#ACA1D3" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/payment_details_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_rounded_2e2942_10dp"
        android:visibility="gone"
        app:el_expanded="false"
        tools:el_expanded="false">

        <LinearLayout
            android:id="@+id/payment_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <LinearLayout
        android:id="@+id/source_payment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/source_of_payment"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/source_payment_arrow"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/core_ui_ic_arrow_down"
            app:tint="#ACA1D3" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/source_payment_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="28dp"
        android:visibility="gone"
        app:el_expanded="false"
        tools:el_expanded="false"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/source_payment_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_2e2942_10dp"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8dp">
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonTextViewStyle"
                android:id="@+id/downloadNowLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/download_invoice"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:autoLink="all"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="@dimen/dimen_4dp"
                android:linksClickable="false"
                android:id="@+id/downloadInvoiceTv"
                android:selectAllOnFocus="false"
                android:text="@string/download_order_underline"
                android:textColor="#ACA1D3"
                app:drawableTint="@color/color_ACA1D3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonBoldTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/need_help"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <include
            android:id="@+id/help_container"
            layout="@layout/layout_help_cancel_container" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3357" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/similar_tv"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="28dp"
        android:gravity="start|center_vertical"
        android:text="@string/similar_products"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/similar_rv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/similar_tv"
        tools:listitem="@layout/cell_gold_store_item" />

</LinearLayout>