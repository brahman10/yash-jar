<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbVertical="@null"
    android:scrollbarThumbHorizontal="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/bgColor"
        android:clipChildren="false">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderName"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etName"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:gravity="start"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderName"
            tools:text="Ashu Tyagi" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderNumber"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/phone_number"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etName" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="+91"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@id/etNumber"
            app:layout_constraintStart_toStartOf="@id/etNumber"
            app:layout_constraintTop_toTopOf="@id/etNumber"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etNumber"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:gravity="start"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingStart="42dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderNumber"
            tools:text="9990117996" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPinCode"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/pincode"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etNumber" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPinCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:paddingHorizontal="18dp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvPinCode">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPinCode"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="start|center_vertical"
                android:hint="000000"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingVertical="18dp"
                android:textColorHint="@color/color_6e7ea7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCheck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/inter_bold"
                android:padding="2dp"
                android:text="@string/check"
                android:textAllCaps="true"
                android:textColor="@color/color_58DDC8_30"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/etPinCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/etPinCode" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/inter_bold"
                android:padding="2dp"
                android:text="@string/clear"
                android:visibility="gone"
                android:textAllCaps="true"
                android:textColor="#ACA1D3"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/etPinCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/etPinCode" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPinCodeEligibilityText"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/clPinCode"
            app:layout_constraintTop_toBottomOf="@id/clPinCode"
            tools:text="Bangalore, Karnataka" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStreetAddress1"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/street_address_one"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvPinCodeEligibilityText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etStreetAddressOne"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:gravity="start"
            android:hint="@string/address_line_1"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_776e94"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvStreetAddress1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStreetAddress2"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/street_address_two"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etStreetAddressOne" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etStreetAddressTwo"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:gravity="start"
            android:hint="@string/address_line_2"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_776e94"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvStreetAddress2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderCity"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/city"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etStreetAddressTwo" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCity"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:enabled="false"
            android:focusable="false"
            android:gravity="start"
            android:hint="@string/enter_city"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_776e94"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderCity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeaderState"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:text="@string/state"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etCity" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etState"
            style="@style/CommonTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_black_bg_16dp"
            android:enabled="false"
            android:focusable="false"
            android:gravity="start"
            android:hint="@string/enter_state"
            android:inputType="text"
            android:maxLength="255"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="8dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_776e94"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderState" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnSubmitDetails"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/dimen_32dp"
            app:buttonText="@string/add_details"
            app:buttonTextAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etState" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>