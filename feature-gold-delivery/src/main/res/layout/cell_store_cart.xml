<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:background="@drawable/bg_rounded_2e2942_10dp"
    android:padding="@dimen/dimen_8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cartImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerImageView10percent"
        android:src="@drawable/placeholder_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editIv"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:src="@drawable/core_ui_ic_edit"
        app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
        app:layout_constraintStart_toEndOf="@id/tvQuantity"
        app:layout_constraintTop_toTopOf="@id/tvQuantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCartName"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹ 3,444.95"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dimen_12dp"
        app:layout_constraintStart_toEndOf="@id/cartImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuantity"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="₹ 3,444.95"
        android:textColor="#ACA1D3"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvCartName"
        app:layout_constraintTop_toBottomOf="@id/tvCartName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDiscountPrice"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:text="₹ 3,444.95"
        android:textColor="#ACA1D3"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/tvPrice" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:text="₹ 3,444.95"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cartImageView"
        app:layout_constraintEnd_toStartOf="@+id/cartQuantity"
        app:layout_constraintStart_toEndOf="@+id/cartImageView" />

    <View
        android:id="@+id/outOfStockBanner"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/black_opacity_63"
        app:layout_constraintBottom_toBottomOf="@id/cartImageView"
        app:layout_constraintEnd_toEndOf="@id/cartImageView"
        app:layout_constraintStart_toStartOf="@id/cartImageView"
        app:layout_constraintTop_toTopOf="@id/cartImageView" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/outOfStockGroup"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="outOfStockBanner, outOfStockTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/outOfStockTv"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/out_of_stock"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toBottomOf="@id/outOfStockBanner"
        app:layout_constraintEnd_toEndOf="@id/outOfStockBanner"
        app:layout_constraintStart_toStartOf="@id/outOfStockBanner"
        app:layout_constraintTop_toTopOf="@id/outOfStockBanner" />

    <ImageView
        android:id="@+id/deleteIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/feature_gold_delivery_ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintTop_toTopOf="@id/tvCartName" />

    <com.jar.app.feature_gold_delivery.impl.ui.store_item.detail.CartItemQuantityView
        android:id="@+id/cartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintBottom_toBottomOf="@id/cartImageView"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>