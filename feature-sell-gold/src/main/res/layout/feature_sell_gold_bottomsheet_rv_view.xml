<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/color_2E2942"
    android:background="@drawable/feature_buy_gold_v2_bg_rounded_2e2942_12dp">

    <ImageView
        android:id="@+id/ivRecyclerView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvHeading"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Have gold delivered to you after saving up 0.5 grams." />

</androidx.constraintlayout.widget.ConstraintLayout>