<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_default_revamped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="parent">

                <include layout="@layout/cell_borrower_placeholder" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="parent">

                <com.jar.app.core_ui.widget.AvatarImageView
                    android:id="@+id/ivLender"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintBottom_toBottomOf="@id/tvDueOn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/BigTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    app:layout_constraintStart_toEndOf="@id/ivLender"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Vasooli Bhai" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDueOn"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    app:layout_constraintStart_toEndOf="@id/ivLender"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    tools:text="@string/feature_vasooli_due_on_x" />

                <com.jar.app.core_ui.widget.AvatarImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@id/tvDueOn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvName"
                    app:srcCompat="@drawable/feature_vasooli_ic_menu" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/layoutLoanProgress"
                layout="@layout/layout_loan_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/clDetails" />

            <include
                android:id="@+id/layoutLoanRepaid"
                layout="@layout/layout_loan_repaid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/clDetails" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="layoutLoanProgress, layoutLoanRepaid" />


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/tvAddNewRepayment"
                app:layout_constraintEnd_toEndOf="@id/tvAddNewRepayment"
                app:layout_constraintStart_toStartOf="@id/tvAddNewRepayment"
                app:layout_constraintTop_toTopOf="@id/tvAddNewRepayment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddNewRepayment"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/feature_vasooli_bg_rounded_3c3357_5dp"
                android:drawableStart="@drawable/feature_vasooli_ic_plus"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:text="@string/feature_vasooli_new_repayment"
                app:layout_constraintEnd_toStartOf="@id/tvSendReminder"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/barrier" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/tvSendReminder"
                app:layout_constraintEnd_toEndOf="@id/tvSendReminder"
                app:layout_constraintStart_toStartOf="@id/tvSendReminder"
                app:layout_constraintTop_toTopOf="@id/tvSendReminder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSendReminder"
                style="@style/CommonTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/feature_vasooli_bg_rounded_3c3357_5dp"
                android:drawableStart="@drawable/feature_vasooli_ic_bell"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:text="@string/feature_vasooli_send_reminder"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toEndOf="@id/tvAddNewRepayment"
                app:layout_constraintTop_toBottomOf="@id/barrier" />

            <include
                android:id="@+id/layoutReminderCard"
                layout="@layout/layout_reminder_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/tvAddNewRepayment" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupRepayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tvAddNewRepayment, tvSendReminder, layoutReminderCard" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="layoutReminderCard, layoutLoanRepaid, shimmerOverview" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/color_3c3357"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrierSeparator" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreRepaymentTitle"
                style="@style/SmallBoldTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/feature_vasooli_bg_upper_rounded_dark_16dp"
                android:drawableStart="@drawable/feature_vasooli_ic_history"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/feature_vasooli_previous_repayments"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRepayments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/tvPreRepaymentTitle"
                tools:listitem="@layout/cell_repayment" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerRecycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/tvPreRepaymentTitle">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                    <include layout="@layout/cell_repayment_placeholder" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <include
                android:id="@+id/emptyLayout"
                layout="@layout/layout_vasooli_no_loans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/tvPreRepaymentTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>