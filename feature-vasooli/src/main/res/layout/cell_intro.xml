<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIntroTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BigTextViewStyle"
        android:textSize="24sp"
        android:lineHeight="34sp"
        android:layout_marginTop="10dp"
        android:translationZ="4dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="30dp"
        tools:text ="@string/feature_vasooli_intro_title_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIntroDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CommonTextViewStyle"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:translationZ="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntroTitle"
        app:layout_constraintStart_toStartOf="@id/tvIntroTitle"
        app:layout_constraintEnd_toEndOf="@id/tvIntroTitle"
        tools:text ="@string/feature_vasooli_intro_desc_1" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIntro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>