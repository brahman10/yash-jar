<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingVertical="16dp"
    android:paddingHorizontal="12dp"
    android:maxHeight="100dp"
    android:background="@drawable/rounded_black_bg_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/feature_vasooli_bg_circle_247570">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/feature_vasooli_ic_coin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepayment"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:text="@string/feature_vasooli_repayment"
        app:layout_constraintTop_toTopOf="@id/clImg"
        app:layout_constraintStart_toEndOf="@id/clImg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepaymentAmount"
        style="@style/CommonBoldTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:text="@string/feature_vasooli_repayment"
        app:layout_constraintTop_toTopOf="@id/clImg"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="₹1,000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepaymentMode"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="10dp"
        tool:text="@string/feature_vasooli_paid_with_x"
        app:layout_constraintBottom_toBottomOf="@id/clImg"
        app:layout_constraintStart_toEndOf="@id/clImg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepaymentDate"
        style="@style/SmallTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="10dp"
        tool:text="02:26pm, 12 Mar’20"
        app:layout_constraintBottom_toBottomOf="@id/clImg"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>