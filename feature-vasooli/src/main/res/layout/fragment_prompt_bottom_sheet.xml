<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="@color/color_3c3357">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BigTextViewStyle"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/feature_vasooli_recording_payment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"/>

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/core_ui_line_separator"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewStyle"
        app:layout_constraintTop_toBottomOf="@id/lineSeparator"
        android:text="@string/feature_vasooli_prompt_des"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnOkay"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        app:buttonText="@string/core_ui_okay"
        app:buttonTextAllCaps="false"
        android:translationZ="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>