<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/feature_payment_bg_rounded_12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCardBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="34dp"
            tools:src="@drawable/ic_visa"
            tools:tint="#222357" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCardNumber"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:textColor="@color/color_282E3D"
            app:layout_constraintBottom_toBottomOf="@id/ivCardBrand"
            app:layout_constraintStart_toEndOf="@id/ivCardBrand"
            app:layout_constraintTop_toTopOf="@id/ivCardBrand"
            tools:text="1234 56** **** 1234" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSelected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/feature_payment_bg_circle_gray_border_only"
            app:layout_constraintBottom_toBottomOf="@id/ivCardBrand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivCardBrand" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        app:el_expanded="false"
        app:el_parallax="0"
        app:layout_constraintTop_toBottomOf="@id/clTopView"
        tools:el_expanded="true">

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnPay"
            style="@style/BigTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:buttonType="secondaryHollowButton"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/feature_payment_bg_rounded_24dp"
            android:backgroundTint="#2E2942"
            android:gravity="center"
            android:padding="16dp"
            app:buttonText="@string/feature_payment_pay"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintHeight_min="48dp" />
    </net.cachapa.expandablelayout.ExpandableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>