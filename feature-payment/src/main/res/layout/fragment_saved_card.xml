<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_282E3D" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/CommonTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            app:fontFamily="@font/inter_bold"
            android:textColor="@color/color_282E3D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feature_payment_payment" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#14282E3D"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jar.app.core_ui.widget.credit_card_view.CreditCardView
        android:id="@+id/creditCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="25dp"
        app:card_autoFocusCardNumber="true"
        app:card_backGradientEnd="@color/color_626262"
        app:card_backGradientStart="@color/color_2D2D2D"
        app:card_backStrip2Color="@color/color_303030"
        app:card_backStripColor="@color/black"
        app:card_cardExpiryHeaderColor="@color/color_C4C4C4"
        app:card_cardExpiryHintColor="#4DFFFFFF"
        app:card_cardExpiryTextColor="@color/white"
        app:card_cardNameHeaderColor="@color/color_C4C4C4"
        app:card_cardNameHintColor="#4DFFFFFF"
        app:card_cardNameTextColor="@color/white"
        app:card_cardNumberHintColor="@color/color_656565"
        app:card_cardNumberTextColor="@color/white"
        app:card_cvvBackgroundColor="@color/white"
        app:card_cvvHintColor="#4D000000"
        app:card_cvvTextColor="#000000"
        app:card_frontGradientEnd="@color/color_313131"
        app:card_frontGradientStart="@color/color_1F1F1F"
        app:card_isInEditMode="false"
        app:card_outline_base_color="@color/color_EBB46A"
        app:card_outline_error_color="@color/color_EB6A6E"
        app:card_separator="-"
        app:layout_constraintTop_toBottomOf="@id/clToolbar"
        tools:layout_height="180dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderEnterCvv"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:fontFamily="@font/inter_bold"
        android:text="@string/feature_payment_enter_your_cvv"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creditCardView"
        tools:layout_constraintTop_toBottomOf="@id/clToolbar"
        tools:layout_marginTop="205dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text_bg"
        android:backgroundTint="@color/color_F1F1F1"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderEnterCvv">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCustomCvv"
            style="@style/BigTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="start|center_vertical"
            android:hint="xxx"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#4D000000"
            android:textCursorDrawable="@drawable/cursor_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnTogglePassword"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnTogglePassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="18dp"
            android:background="?attr/actionBarItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/etCustomCvv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etCustomCvv"
            app:srcCompat="@drawable/feature_payment_ic_eye" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnPay"
        style="@style/BigTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="38dp"
        android:alpha="0.5"
        android:background="@drawable/feature_payment_bg_rounded_24dp"
        android:backgroundTint="#2E2942"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/feature_payment_pay"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="48dp" />
</androidx.constraintlayout.widget.ConstraintLayout>