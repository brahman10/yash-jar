<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_content"
    android:background="@color/bgColor">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/bgColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="18dp"
                android:background="?attr/actionBarItemBackground"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_small" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTitleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:fontFamily="@font/inter_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_arrow_back_small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:fontFamily="@font/inter_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivTitleImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Order Status" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="1dp"
                android:background="#776E94"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible" />

            <com.jar.app.core_ui.widget.button.CustomButtonV2
                android:id="@+id/btnContactUs"
                app:buttonBorderWidth="@dimen/dimen_0dp"
                android:layout_width="164dp"
                android:layout_height="36dp"
                app:buttonBackgroundColor="@color/color_3c3357"
                app:buttonRadius="4dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/feature_buy_gold_v2_bg_rounded_3c3357_8dp"
                android:backgroundTint="#3C3357"
                android:drawablePadding="10dp"
                android:padding="8dp"
                app:buttonDrawablePadding="@dimen/dimen_8dp"
                app:buttonText="@string/contact_us"
                android:textColor="@color/white"
                android:visibility="gone"
                app:buttonDrawableStart="@drawable/ic_whatsapp_help_support_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/networkExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false"
            tools:el_expanded="true"
            tools:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNetworkContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_color_network_selector"
                android:minHeight="47dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInternetConnectionText"
                    style="@style/CommonTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:drawableStartCompat="@drawable/ic_wifi_on"
                    tools:text="@string/core_ui_we_are_back_online" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animConfetti"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/confetti" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_weekly_magic"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@color/color_5F45AB"
        android:minHeight="70dp"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_banner_hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_banner_hat"
            android:focusable="false"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/container_banner_lights"
            android:focusable="false"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/iv_banner_hat"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_banner_lights"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_next_weekly_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/ic_right_chevron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_label_weekly_magic"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feature_weekly_magic_common_weekly_magic"
            android:textColor="@color/color_EBB46A"
            android:layout_marginBottom="5dp"
            android:textSize="11sp"
            android:focusable="false"
            android:clickable="false"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_description_weekly_magic"
            app:layout_constraintStart_toEndOf="@+id/iv_banner_hat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description_weekly_magic"
            style="@style/SmallBoldTextViewStyle"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="start"
            app:textAllCaps="false"
            android:focusable="false"
            android:clickable="false"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/iv_banner_hat"
            app:layout_constraintEnd_toStartOf="@id/ib_next_weekly_magic"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_weekly_magic"
            tools:text="Congrats, you won Weekly Magic!" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_weekly_magic">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldPurchaseStatus"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Gold Purchase Successful" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGoldPurchaseStatus"
                app:lottie_loop="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                style="@style/BigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/animView"
                tools:text="Rs 100" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGoldBought"
                style="@style/SmallTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                tools:text="@string/feature_buy_gold_v2_bought_x_24k_pure_gold" />

            <include
                android:id="@+id/layoutSuccess"
                layout="@layout/layout_order_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvGoldBought"
                tools:visibility="visible" />

            <include
                android:id="@+id/layoutPending"
                layout="@layout/layout_order_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvGoldBought" />

            <include
                android:id="@+id/layoutFailure"
                layout="@layout/layout_order_failure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvGoldBought" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>