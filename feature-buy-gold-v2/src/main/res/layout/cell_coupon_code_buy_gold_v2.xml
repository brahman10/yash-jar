<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBestValue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_18dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_32dp"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_3dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/feature_buy_gold_v2_bg_top_rounded_7745ff_8dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallBoldTextViewStyle"
            android:textColor="@color/white"
            android:textSize="8.62sp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/feature_buy_gold_v2_ic_fire"
            android:drawablePadding="@dimen/dimen_4dp"
            android:text="@string/feature_buy_gold_v2_best_value"
            tools:ignore="SmallSp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/viewBestCouponBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/feature_buy_gold_v2_bg_coupon_7745ff_8dp"
        app:layout_constraintStart_toStartOf="@id/clCouponContent"
        app:layout_constraintEnd_toEndOf="@id/clCouponContent"
        app:layout_constraintTop_toTopOf="@id/clCouponContent"
        app:layout_constraintBottom_toBottomOf="@id/clCouponContent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCouponContent"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:background="@drawable/feature_buy_gold_v2_bg_coupon_code_selector"
        app:layout_constraintTop_toBottomOf="@+id/llBestValue"
        app:layout_constraintStart_toStartOf="@id/llBestValue"
        app:layout_constraintEnd_toEndOf="parent">
        
        <com.jar.app.core_ui.widget.VerticalTextView
            android:id="@+id/tvCouponType"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            style="@style/SmallBoldTextViewStyle"
            android:background="@drawable/feature_buy_gold_v2_bg_left_rounded_443278_8dp"
            android:textColor="@color/color_EBB46A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="@dimen/dimen_4dp"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:textSize="10sp"
            tools:text="@string/feature_buy_gold_v2_winnings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/SmallBoldTextViewStyle"
            android:textColor="@color/color_EEEAFF"
            tools:text="5% Extra Gold"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/tvCouponType"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUseCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallBoldTextViewStyle"
            android:textColor="@color/color_1EA787"
            tools:text="@string/feature_buy_gold_v2_apply"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:srcCompat="@drawable/feature_buy_gold_v2_ic_cross_filled" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ivCross, tvUseCoupon"
            app:barrierDirection="start"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextViewStyle"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_stroke_d5cdf2_4dp"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp"
            android:textColor="@color/color_D5CDF2"
            tools:text="@string/feature_buy_gold_v2_expires_in_x_time"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:gravity="start"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCouponTitle"
            app:layout_constraintStart_toStartOf="@id/tvCouponTitle"
            tools:ignore="SmallSp" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierCouponAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ivCross, tvUseCoupon"
            app:barrierDirection="bottom"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextViewStyle"
            android:textColor="@color/color_ACA1D3"
            tools:text="Using Jar Winnings"
            android:layout_marginTop="2dp"
            android:gravity="start"
            tools:visibility="gone"
            android:textSize="10sp"
            android:lineSpacingExtra="4sp"
            android:maxLines="1"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvCouponType"
            app:layout_constraintTop_toBottomOf="@id/barrierCouponAction"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextViewStyle"
            android:textColor="@color/white"
            android:textAlignment="center"
            tools:text="1 Left"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textSize="10sp"
            android:maxLines="1"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_stroke_ffffff_4dp"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tvCouponTitle"
            app:layout_constraintStart_toStartOf="@id/tvCouponTitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponCodeExpired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/SmallBoldTextViewStyle"
            android:textColor="@color/redAlertText"
            android:text="@string/feature_buy_gold_v2_coupon_expired"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:gravity="start"
            android:textAllCaps="false"
            android:visibility="gone"
            android:minHeight="@dimen/dimen_22dp"
            app:layout_constraintEnd_toEndOf="@+id/tvCouponTitle"
            app:layout_constraintTop_toBottomOf="@id/tvCouponTitle"
            app:layout_constraintStart_toStartOf="@id/tvCouponTitle"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvCouponCode, tvCouponTimer, tvCouponCodeExpired, tvLeft"
            app:barrierDirection="bottom"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/SmallTextViewStyle"
            android:textColor="@color/color_ACA1D3"
            tools:text="Get extra ₹500 worth of gold on minimum purchase of ₹50"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="start|bottom"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="3"
            android:lines="3"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintStart_toStartOf="@id/tvCouponTitle"/>

        <View
            android:id="@+id/viewGrey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:alpha="0.3"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCouponLogo"
            android:layout_width="@dimen/dimen_14dp"
            android:layout_height="@dimen/dimen_14dp"
            android:src="@drawable/feature_buy_gold_v2_ic_coupon"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tvCouponType"
            app:layout_constraintEnd_toEndOf="@id/tvCouponType"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWinningsLogo"
        android:layout_width="26dp"
        android:layout_height="40dp"
        android:translationY="-22dp"
        android:src="@drawable/feature_buy_gold_v2_ic_winnings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clCouponContent"/>

</androidx.constraintlayout.widget.ConstraintLayout>