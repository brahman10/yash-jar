<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBestValue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/feature_buy_gold_v2_bg_top_rounded_7745ff_8dp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dimen_3dp"
        android:paddingStart="@dimen/dimen_10dp"

        android:paddingEnd="@dimen/dimen_12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/clCouponContent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/SmallBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/feature_buy_gold_v2_ic_fire"
            android:drawablePadding="@dimen/dimen_4dp"
            android:gravity="center_vertical"
            android:text="@string/feature_buy_gold_v2_best_value"
            android:textColor="@color/white"
            android:textSize="8.62sp"
            tools:ignore="SmallSp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/viewBestCouponBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/feature_buy_gold_v2_bg_coupon_7745ff_8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@id/llBestValue"
        app:layout_constraintTop_toBottomOf="@id/llBestValue" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCouponContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_buy_gold_v2_bg_coupon_code_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/llBestValue"
        app:layout_constraintTop_toBottomOf="@+id/llBestValue">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponTitle"
            style="@style/SmallBoldTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="5% Extra Gold"
            android:textAllCaps="false"
            android:textColor="@color/color_EEEAFF"
            app:layout_constraintStart_toEndOf="@+id/ivCouponLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUseCoupon"
            style="@style/SmallBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:text="@string/feature_buy_gold_v2_apply"
            android:textColor="@color/color_1EA787"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLeft"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_43353b_4dp"
            android:gravity="start"
            android:maxLines="1"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="1 Left"
            android:textAlignment="center"
            android:textColor="@color/color_EBB46A"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/ivCouponLogo"
            app:layout_constraintTop_toBottomOf="@id/tvCouponTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponDescription"
            style="@style/SmallTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="start"
            android:maxLines="3"
            android:text="Get extra ₹500 worth of gold on minimum purchase of ₹50"
            android:textColor="@color/color_ACA1D3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivCouponLogo"
            app:layout_constraintTop_toBottomOf="@id/tvLeft"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/viewGrey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.3"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_grey"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCouponLogo"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:src="@drawable/feature_buy_gold_v2_ic_coupon"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            android:elevation="@dimen/dimen_10dp"
            android:translationX="-7dp"
            android:translationY="7dp"
            android:translationZ="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCouponDescription" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:background="@drawable/core_ui_bg_circle_white"
            android:backgroundTint="@color/bgColor"
            android:elevation="@dimen/dimen_10dp"
            android:translationX="7dp"
            android:translationY="7dp"
            android:translationZ="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCouponDescription" />

        <View
            android:id="@+id/dashedLine"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/coupon_dashed_line"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/couponViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textColor="@color/color_ACA1D3"
                android:textSize="11sp"
                app:lineHeight="@dimen/dimen_18sp"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrowDown"
                android:layout_width="@dimen/dimen_14dp"
                android:layout_height="@dimen/dimen_14dp"
                android:layout_gravity="center"
                android:padding="4dp"
                app:srcCompat="@drawable/core_ui_ic_arrow_down" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/viewDetailsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:constraint_referenced_ids="dashedLine,couponViewDetails,view,view2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponDetailsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            tools:text="1. Offer is only valid on\n2. Coupon code can be applied every two hours\n3. Other T&amp;C may apply"
            android:textColor="@color/color_8379A1"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/couponViewDetails"
            app:lineHeight="18sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="189dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="58dp" />


</androidx.constraintlayout.widget.ConstraintLayout>