<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:clipChildren="false"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingVertical="@dimen/dimen_20dp"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTransactionIdLabel"
        style="@style/SmallTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feature_buy_gold_v2_transaction_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTransactionId"
        style="@style/CommonTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransactionIdLabel"
        tools:text="98767464746473635242536372635273" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTransactionId"
        app:layout_constraintStart_toEndOf="@id/tvTransactionId"
        app:layout_constraintTop_toTopOf="@id/tvTransactionId"
        app:srcCompat="@drawable/ic_copy_small" />

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="40dp"
        android:background="@drawable/core_ui_separator"
        app:layout_constraintTop_toBottomOf="@id/tvTransactionId" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmountRefund"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/feature_buy_gold_v2_dont_worry_amount_will_be_refunded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineSeparator"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnTryAgain"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        app:buttonText="@string/try_again"
        app:buttonTextAllCaps="false"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tvAmountRefund" />
</androidx.constraintlayout.widget.ConstraintLayout>