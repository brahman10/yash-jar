<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingVertical="@dimen/dimen_20dp">

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="30dp"
        android:background="@drawable/core_ui_separator"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmountRefund"
        style="@style/CommonTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/feature_buy_gold_v2_transaction_is_being_processed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineSeparator"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnRefresh"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        app:buttonText="@string/feature_buy_gold_refresh"
        app:buttonTextAllCaps="false"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tvAmountRefund" />
</androidx.constraintlayout.widget.ConstraintLayout>