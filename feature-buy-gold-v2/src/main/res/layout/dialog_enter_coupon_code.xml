<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/core_ui_round_black_bg_16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/feature_buy_gold_v2_ic_cross_filled" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCoupon"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/feature_buy_gold_v2_bg_circle_3c3357"
            android:padding="@dimen/dimen_18dp"
            android:src="@drawable/feature_buy_gold_v2_ic_manual_coupon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivClose"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnterYourCouponCodeLabel"
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/feature_buy_gold_v2_enter_your_coupon_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCoupon" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCouponCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_2e2942_outline_789bde_8dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|center_vertical"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/color_EEEAFF"
            android:textColorHint="@color/color_ACA1D3"
            android:textSize="16sp"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEnterYourCouponCodeLabel"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvErrorMessage"
            style="@style/SmallTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/feature_buy_gold_v2_please_enter_a_valid_coupon_code"
            android:textColor="@color/color_EB6A6E"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/etCouponCode"
            app:layout_constraintTop_toBottomOf="@id/etCouponCode"
            tools:visibility="visible" />

        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_min="54dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/tvErrorMessage"
            app:buttonText="@string/feature_buy_gold_v2_apply"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>