<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feature_buy_gold_v2_bg_rounded_0c725a_16dp"
        android:padding="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/feature_buy_gold_v2_ic_cross"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextViewStyle"
            android:textColor="@color/white"
            tools:text="@string/feature_buy_gold_v2_x_coupon_code_applied"
            android:drawablePadding="@dimen/dimen_4dp"
            android:drawableStart="@drawable/feature_buy_gold_v2_ic_coupon_tag"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivClose"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCouponDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/BigTextViewStyle"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            tools:text="You get 2% gold extra with this coupon"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCouponCode"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BigTextViewStyle"
            android:textColor="@color/color_FFDA2D"
            android:background="@drawable/feature_buy_gold_v2_bg_rounded_stroke_ffda2d_8dp"
            android:layout_marginTop="@dimen/dimen_35dp"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:text="@string/feature_buy_gold_v2_yay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="@dimen/dimen_12dp"
            android:paddingHorizontal="@dimen/dimen_50dp"
            app:layout_constraintTop_toBottomOf="@id/tvCouponDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>