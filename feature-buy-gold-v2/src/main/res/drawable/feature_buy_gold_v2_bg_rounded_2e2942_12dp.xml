<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="360"
                android:endColor="@color/lightBgColor"
                android:gradientRadius="360"
                android:startColor="#7A6BA6" />

            <stroke
                android:width="1dp"
                android:color="#3C3357" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/lightBgColor" />
        </shape>
    </item>

</layer-list>