<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:layout_gravity="center"
    android:background="@drawable/abandon_screen_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textFontWeight="700"
        app:lineHeight="36sp"
        android:textColor="@color/white"
        tools:text="Youâ€™re almost there!"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textFontWeight="400"
        app:lineHeight="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_10dp"
        tools:text="The first step to your savings journey."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        tools:srcCompat="@drawable/jewel"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <!-- Add your OverlappingProfileViewWithTrustText here -->
    <LinearLayout
        android:id="@+id/profileOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image">
        <com.jar.app.core_ui.widget.OverlappingProfileView
            android:id="@+id/profileOverlayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customStrokeColor="#272239"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/overlappingViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="400"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/dimen_12sp"
            android:lineHeight="@dimen/dimen_16sp"
            android:textColor="#D5CDF2"
            tools:text="user using the app"/>
    </LinearLayout>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/footerButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        tools:buttonText="Continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileOverlay"/>

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/exitButton"
        android:layout_height="56dp"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        tools:buttonText="Exit"
        app:buttonType="secondaryHollowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footerButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
