<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#272239"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Before we automate payment,"
        android:textSize="14sp"
        android:textColor="#ACA1D3"
        android:lineSpacingExtra="3sp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="16dp"
        android:textFontWeight="400"
        app:layout_constraintBottom_toTopOf="@id/tvSubHeading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Let’s merge your saving plans.."
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0"
        android:textFontWeight="700"
        android:lineSpacingExtra="4sp"
        android:lineHeight="28sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/confirmation_bg_2e2942"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubHeading">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:background="@drawable/confirmation_bg_272239"
            android:padding="@dimen/dimen_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSettingUpNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="7sp"
                tools:text="Setting up now"
                android:textColor="#58DDC8"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSavingGoal"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:gravity="top"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="4sp"
                tools:text="Savings Goal"
                android:textColor="#EEEAFF"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_15sp"
                android:layout_marginTop="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="@id/tvSettingUpNow"
                app:layout_constraintTop_toBottomOf="@id/tvSettingUpNow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmountEveryDay"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:gravity="end"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="4sp"
                android:textColor="#EEEAFF"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_15sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvSavingGoal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/tvSavingGoal"
                app:layout_constraintTop_toTopOf="@id/tvSavingGoal"
                tools:text="₹30/day" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSecondSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="#2E2942"
            android:padding="@dimen/dimen_12dp"
            app:layout_constraintBottom_toTopOf="@id/clBreakdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTopHeading">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSetupDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="7sp"
                tools:text="Setup on 2 Dec’22"
                android:textColor="#ACA1D3"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoundOff"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:gravity="top"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="4sp"
                tools:text="Round-off"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#D5CDF2"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_15sp"
                app:layout_constraintStart_toStartOf="@id/tvSetupDate"
                app:layout_constraintTop_toBottomOf="@id/tvSetupDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmountUpto"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:gravity="end"
                android:lineHeight="@dimen/dimen_22sp"
                android:lineSpacingExtra="4sp"
                tools:text="Upto ₹30/day"
                android:textColor="#EEEAFF"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvRoundOff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/tvRoundOff"
                app:layout_constraintTop_toTopOf="@+id/tvSetupDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/confirmation_bg_3c3357"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clSecondSection">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dimen_22sp"
                tools:text="Total amount"
                android:textColor="#EEEAFF"
                android:textFontWeight="500"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShowInfo"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalAmount"
                app:layout_constraintStart_toEndOf="@+id/tvTotalAmount"
                app:layout_constraintTop_toTopOf="@+id/tvTotalAmount"
                tools:srcCompat="@drawable/core_ui_ic_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalPayPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dimen_22sp"
                tools:text="₹60/day"
                android:textColor="#EEEAFF"
                android:textFontWeight="700"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintBottom_toBottomOf="@id/tvTotalAmount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTotalAmount" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShield"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView"
        app:layout_constraintEnd_toStartOf="@+id/appCompatTextView"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/appCompatTextView"
        tools:srcCompat="@drawable/core_ui_ic_shield" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jar will never deduct more than ₹60/day."
        android:textColor="#EEEAFF"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="@id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/bottomGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="clBottomDetails" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottomDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/confirmation_bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.jar.app.core_ui.widget.OverlappingProfileView
            android:id="@+id/profileOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_24dp"
            app:layout_constraintStart_toStartOf="@id/buttonNext"
            app:layout_constraintBottom_toTopOf="@id/buttonNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTrustedBy"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTrustedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20L+ Jar users save in Gold everyday"
            android:textColor="#D5CDF2"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintStart_toEndOf="@id/profileOverlay"
            app:layout_constraintBottom_toBottomOf="@id/profileOverlay"
            app:layout_constraintTop_toTopOf="@id/profileOverlay" />
        <com.jar.app.core_ui.widget.button.CustomButtonV2
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAllCaps="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:buttonRadius="@dimen/dimen_20dp"
            app:buttonText="Proceed"
            app:layout_constraintTop_toBottomOf="@id/profileOverlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="206dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNpci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivSecureShield"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSecureShield"
            app:srcCompat="@drawable/core_ui_ic_npci" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSecureShield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@id/buttonNext"
            app:srcCompat="@drawable/core_ui_ic_secure_with_shield" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/infoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivHideInfo, clInfo"
        android:visibility="gone"
        tools:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHideInfo"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/close_icon"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/clInfo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20dp"
        android:background="@drawable/confirmation_page_info_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTotalAmountCalculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/core_ui_ic_info_i"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalAmountCalculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Total amount calculation"
            android:textColor="#EEEAFF"
            android:textSize="@dimen/dimen_16sp"
            android:lineHeight="24sp"
            android:textFontWeight="600"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@id/ivTotalAmountCalculation"
            app:layout_constraintTop_toTopOf="@id/ivTotalAmountCalculation"
            app:layout_constraintStart_toEndOf="@id/ivTotalAmountCalculation"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ivTotalAmountCalculation"
            app:layout_constraintTop_toBottomOf="@id/tvTotalAmountCalculation"
            android:textColor="#D5CDF2"
            android:lineHeight="24sp"
            android:textSize="14sp"
            android:textFontWeight="400"
            android:layout_marginTop="@dimen/dimen_10dp"
            tools:text="Since you already have automatic round-offs activated, we need your permission to merge both saving plans so that gold can be bought in one go."/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>