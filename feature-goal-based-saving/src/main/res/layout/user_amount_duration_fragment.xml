<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/goalImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@id/goalName"
        app:layout_constraintBottom_toBottomOf="@id/goalName"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:lineHeight="40sp"
        android:minHeight="70dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textFontWeight="700"
        app:fontFamily="@font/inter_bold"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dimen_10dp"
        android:textColor="#EEEAFF"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintEnd_toStartOf="@id/editGaol"
        app:layout_constraintStart_toEndOf="@id/goalImage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editGaol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit goal"
        android:lineSpacingExtra="-3sp"
        android:gravity="top"
        android:textColor="#ACA1D3"
        android:lineHeight="12sp"
        app:layout_constraintStart_toEndOf="@id/goalName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/goalName"
        app:layout_constraintBottom_toBottomOf="@id/goalName"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/topTitleBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="goalName"
        app:barrierDirection="bottom" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="#4B4366"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitleBarrier" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEnterGoalAmount"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:lineHeight="@dimen/dimen_20sp"
        android:textSize="16sp"
        android:lineSpacingExtra="3sp"
        android:text="Total goal amount"
        android:textColor="#ACA1D3"
        android:translationY="-1.53sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <RelativeLayout
        android:id="@+id/llEnterAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@drawable/dummy_et_bg"
        android:paddingStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterGoalAmount">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:scaleType="centerInside"
            android:text="\u20B9"
            android:textColor="#ACA1D3"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/ivIcon"
            android:background="@null"
            android:includeFontPadding="false"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:padding="@dimen/dimen_0dp"
            android:textColor="@color/white"
            android:textColorHint="#776E94"
            android:textSize="20sp"
            tools:hint="Enter amount" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCorrectAmount"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:visibility="gone"
            tools:srcCompat="@drawable/core_ui_ic_green_tick" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_cancel_editing"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llErrorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEnterAmount">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivErrorIcon"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            tools:srcCompat="@drawable/core_ui_ic_error"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Amount cannot be more than ₹15,00,000 "
            android:textColor="#EB6A6E"
            android:layout_marginStart="@dimen/dimen_10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEnterAmount">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInfoIcon"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            app:srcCompat="@drawable/core_ui_ic_info"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfoMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Amount can be from ₹1000 to ₹15,00,000"
            android:textColor="#776E94"
            android:layout_marginStart="@dimen/dimen_10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/errorBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="llInfoContainer, llErrorContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEnterGoalDuration"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:lineHeight="@dimen/dimen_20sp"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="#ACA1D3"
        android:lineSpacingExtra="3sp"
        android:text="Select duration"
        android:translationY="-1.53sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorBarrier" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDuration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal"
        tools:listitem="@layout/duration_layout"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/tvEnterGoalDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/durationGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="tvEnterGoalDuration, rvDuration" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyAmountBreakDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_25"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/rvDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnNext">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDailyAMount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:textFontWeight="700"
            app:fontFamily="@font/inter_bold"
            android:textStyle="bold"
            android:textColor="#EEEAFF"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textAutoDebmit"
            android:text="Daily amount" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAutoDebmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-3sp"
            android:textSize="12sp"
            android:textColor="#ACA1D3"
            android:text="Auto-saved from your bank account"
            app:layout_constraintStart_toStartOf="@id/textDailyAMount"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBreakdownAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            tools:text="20000"
            android:textFontWeight="700"
            app:fontFamily="@font/inter_bold"
            android:textStyle="bold"
            android:textColor="#EEEAFF"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnNext"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        app:buttonText="Confirm Goal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>

