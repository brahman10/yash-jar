<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CommonStyle"
    android:background="@drawable/gbs_main_gradient_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/llNotify"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    android:gravity="center"
    app:layout_constraintHeight_percent="0.08"
    android:paddingStart="@dimen/dimen_22dp"
    android:background="@drawable/notify_user_bg"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginStart="@dimen/dimen_24dp"
    android:layout_marginEnd="@dimen/dimen_24dp"
    android:weightSum="1"
    android:visibility="invisible"
    tools:visibility="visible"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNotifyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_winning_cup"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notifyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="You reached your first milestone!"
        android:layout_marginStart="@dimen/dp_5"
        android:lineSpacingExtra="3sp"
        android:textSize="@dimen/dimen_15sp"
        android:layout_gravity="center_vertical"
        android:letterSpacing="-0.02"
        android:textColor="#1A162A"
        android:layout_weight="0.7"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        app:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/black"
        android:layout_weight="0.2"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
<RelativeLayout
    android:id="@+id/rlProgressBar"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:background="@android:color/transparent"
    app:layout_constraintVertical_bias="0"
    app:layout_constraintHeight_percent="0.48"
    app:layout_constraintTop_toBottomOf="@id/llNotify"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <com.jar.app.feature_goal_based_saving.impl.ui.customViews.CustomRingView
        android:id="@+id/gbsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-6"
        app:srcCompat="@drawable/abandon_illustration" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:textFontWeight="700"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Top TextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ACA1D3"
        android:lineHeight="@dimen/dimen_18sp"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/textViewTop"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter"
        tools:text="Bottom TextView" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/celebrationLottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="2"
        android:scaleY="2" />

</RelativeLayout>

<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/llSubTitle"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/dimen_24dp"
    android:layout_marginEnd="@dimen/dimen_24dp"
    app:layout_constraintHeight_percent="0.07"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rlProgressBar">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/indicatorIcon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/jewel_shadow"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoalStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="3sp"
        android:layout_gravity="center"
        tools:text="Congrats, you made your first saving for your goal"
        android:textColor="#ACA1D3"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="@id/rlProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/rlProgressBar" />

</androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goalInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:background="@drawable/card_bg_saving_for"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingEnd="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintBottom_toTopOf="@+id/rlSettings"
        app:layout_constraintEnd_toEndOf="@id/llSubTitle"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintStart_toStartOf="@id/llSubTitle"
        app:layout_constraintTop_toBottomOf="@+id/llSubTitle"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="5sp"
            tools:text="64” Sony LCD TV for hall"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivGoalIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivGoalIcon"
            app:layout_constraintTop_toTopOf="@id/ivGoalIcon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGoalIcon"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:scaleType="fitEnd"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/telivision" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="appCompatTextView2, ivGoalIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dp_5"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="9sp"
            android:text="Daily savings"
            android:textColor="#D5CDF2"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/savingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:fontFamily="@font/inter_bold"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="3sp"
            android:textColor="#FFFFFF"
            android:textFontWeight="600"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView4"
            tools:text="₹250" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="9sp"
            android:text="Duration Left"
            android:textColor="#D5CDF2"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="3sp"
            tools:text="12m  30d"
            android:textColor="#EBB46A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/appCompatTextView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<RelativeLayout
    android:id="@+id/rlSettings"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent="0.1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_setting"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTextSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3sp"
        android:text="Settings"
        android:gravity="center"
        android:textColor="#ACA1D3"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_toEndOf="@id/appCompatImageView2"
        android:layout_alignTop="@id/appCompatImageView2"
        android:layout_alignBottom="@id/appCompatImageView2"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconSettingArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_forward"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/appCompatImageView2"
        android:layout_alignBottom="@id/appCompatImageView2"
        />
</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
