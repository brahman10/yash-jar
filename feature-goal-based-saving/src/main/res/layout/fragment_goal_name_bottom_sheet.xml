<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dimen_20dp"
    android:paddingEnd="@dimen/dimen_20dp"
    android:paddingBottom="30dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:background="@drawable/bottom_sheet_background_rounded"
    style="@style/CommonStyle">
    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="What are you saving for?"
        android:textSize="16sp"
        android:textColor="#EEEAFF"
        android:lineSpacingExtra="5sp"
        android:gravity="top"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivClose"  />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dimen_12dp"
        android:layout_height="@dimen/dimen_12dp"
        android:src="@drawable/group_39679"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label"
        app:layout_constraintBottom_toBottomOf="@id/label"
        app:layout_constraintStart_toEndOf="@id/label"  />

    <RelativeLayout
        android:id="@+id/appCompatEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:paddingStart="8dp"
        android:background="@drawable/edit_text_active"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/label" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@drawable/default_goal_gbs"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvGoalName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:hint="Enter custom goal..."
            android:textColorHint="#776E94"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/ivIcon"
            android:layout_toStartOf="@+id/icClearText"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:digits="012345678abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ \n" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_editing"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCharLimit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        tools:text="Characters: 20/20"
        android:textColor="#ACA1D3"
        android:textSize="14sp"
        android:translationY="-1.53sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="@+id/appCompatEditText"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditText" />

    <com.jar.app.core_ui.widget.button.CustomButtonV2
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        app:buttonText="Continue"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>